---
/**
 * Infinity Tunnel - 3D recursive tunnel with perspective depth
 * Enhanced with mouse interaction and dynamic speed control
 */
import ModernButton from './ModernButton.astro';
---

<div class="tunnel-wrapper">
  <h2 class="tunnel-title">Infinite 3D Tunnel</h2>
  <p class="tunnel-subtitle">
    Interactive depth with mouse-controlled perspective • Click to toggle speed
  </p>

  <div
    class="tunnel-controls"
    role="group"
    aria-label="Infinity tunnel speed controls"
  >
    <ModernButton
      variant="neon"
      className="tunnel-btn"
      data-speed="slow"
      aria-pressed="false"
      aria-label="Tunnel speed: slow">Slow</ModernButton
    >
    <ModernButton
      variant="neon"
      className="tunnel-btn active"
      data-speed="normal"
      aria-pressed="true"
      aria-label="Tunnel speed: normal">Normal</ModernButton
    >
    <ModernButton
      variant="neon"
      className="tunnel-btn"
      data-speed="fast"
      aria-pressed="false"
      aria-label="Tunnel speed: fast">Fast</ModernButton
    >
    <ModernButton
      variant="neon"
      className="tunnel-btn"
      data-speed="reverse"
      aria-pressed="false"
      aria-label="Tunnel speed: reverse">Reverse</ModernButton
    >
  </div>

  <div class="tunnel-container" data-tunnel-interactive>
    <div class="tunnel" data-tunnel-rotation>
      {
        Array.from({ length: 60 }).map((_, i) => (
          <div
            class="tunnel-ring"
            style={`
            --index: ${i};
            --delay: ${i * 0.05}s;
          `}
          >
            <div class="ring-segment segment-1" />
            <div class="ring-segment segment-2" />
            <div class="ring-segment segment-3" />
            <div class="ring-segment segment-4" />
            <div class="ring-glow" />
          </div>
        ))
      }

      <!-- Energy beams -->
      {
        Array.from({ length: 8 }).map((_, i) => (
          <div
            class="energy-beam"
            style={`--beam-angle: ${i * 45}deg; --beam-delay: ${i * 0.2}s;`}
          />
        ))
      }

      <!-- Center vortex -->
      <div class="tunnel-vortex"></div>
    </div>
  </div>
</div>

<style>
  .tunnel-wrapper {
    content-visibility: auto;
    contain: layout paint style;
    contain-intrinsic-size: 800px;
    padding: 6rem 2rem;
    background: radial-gradient(
      ellipse at center,
      rgba(59, 130, 246, 0.15),
      transparent
    );
    min-height: 800px;
    position: relative;
  }

  .tunnel-title {
    font-size: 4rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    filter: drop-shadow(0 0 40px rgba(59, 130, 246, 0.5));
  }

  .tunnel-subtitle {
    text-align: center;
    color: rgba(203, 213, 225, 0.9);
    margin-bottom: 2rem;
    font-size: 1.25rem;
    font-weight: 300;
  }

  .tunnel-controls {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  /* .tunnel-btn styles replaced by ModernButton variant="neon" */

  .tunnel-btn.active {
    background: rgba(59, 130, 246, 0.3) !important;
    border-color: rgba(59, 130, 246, 0.8) !important;
    color: #fff !important;
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.6) !important;
  }

  .tunnel-container {
    perspective: 1000px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .tunnel {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    animation: tunnelRotate 20s linear infinite;
  }

  @keyframes tunnelRotate {
    0% {
      transform: rotateZ(0deg);
    }
    100% {
      transform: rotateZ(360deg);
    }
  }

  .tunnel-ring {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 400px;
    height: 400px;
    border: 3px solid rgba(59, 130, 246, 0.8);
    border-radius: 50%;
    transform-style: preserve-3d;
    transform: translate(-50%, -50%) translateZ(calc(var(--index) * -100px))
      scale(calc(1 - var(--index) * 0.02));
    animation: ringPulse 2s ease-in-out infinite;
    animation-delay: var(--delay);
    box-shadow:
      0 0 30px rgba(59, 130, 246, 0.5),
      inset 0 0 30px rgba(59, 130, 246, 0.3);
  }

  @keyframes ringPulse {
    0%,
    100% {
      border-color: rgba(59, 130, 246, 0.8);
      box-shadow:
        0 0 30px rgba(59, 130, 246, 0.5),
        inset 0 0 30px rgba(59, 130, 246, 0.3);
    }
    50% {
      border-color: rgba(139, 92, 246, 1);
      box-shadow:
        0 0 50px rgba(139, 92, 246, 0.8),
        inset 0 0 50px rgba(139, 92, 246, 0.5);
    }
  }

  .ring-segment {
    position: absolute;
    width: 20px;
    height: 20px;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 1),
      rgba(59, 130, 246, 0.5)
    );
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(59, 130, 246, 1);
  }

  .segment-1 {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .segment-2 {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .segment-3 {
    left: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .segment-4 {
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .ring-glow {
    position: absolute;
    inset: -20px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 0.3),
      transparent 70%
    );
    filter: blur(15px);
    animation: glowPulse 3s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes glowPulse {
    0%,
    100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }

  .energy-beam {
    position: absolute;
    width: 2px;
    height: 100%;
    left: 50%;
    top: 0;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(59, 130, 246, 0.6) 30%,
      rgba(139, 92, 246, 0.8) 50%,
      rgba(59, 130, 246, 0.6) 70%,
      transparent
    );
    transform-origin: 50% 50%;
    transform: translateX(-50%) rotate(var(--beam-angle));
    animation: beamPulse 2s ease-in-out infinite;
    animation-delay: var(--beam-delay);
    filter: blur(1px);
  }

  @keyframes beamPulse {
    0%,
    100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.9;
    }
  }

  .tunnel-vortex {
    position: absolute;
    width: 200px;
    height: 200px;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) translateZ(-5000px);
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.8),
      rgba(59, 130, 246, 0.6),
      rgba(139, 92, 246, 0.4),
      transparent
    );
    border-radius: 50%;
    box-shadow:
      0 0 80px rgba(59, 130, 246, 1),
      0 0 120px rgba(139, 92, 246, 0.8);
    animation: vortexPulse 4s ease-in-out infinite;
  }

  @keyframes vortexPulse {
    0%,
    100% {
      opacity: 0.6;
      transform: translate(-50%, -50%) translateZ(-5000px) scale(1);
    }
    50% {
      opacity: 1;
      transform: translate(-50%, -50%) translateZ(-5000px) scale(1.3);
    }
  }

  @media (max-width: 768px) {
    .tunnel-title {
      font-size: 2.5rem;
    }

    .tunnel-ring {
      width: 300px;
      height: 300px;
    }

    .tunnel-controls {
      gap: 0.5rem;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .tunnel,
    .tunnel::before,
    .tunnel::after,
    .tunnel-ring,
    .ring-segment,
    .ring-glow,
    .energy-beam,
    .tunnel-vortex,
    .tunnel-vortex::before {
      animation: none !important;
      transition: none !important;
    }
    .tunnel-container {
      perspective: none;
    }
    .tunnel {
      transform: none;
    }
  }
</style>

<script>
  const prefersReducedMotion = window.matchMedia(
    '(prefers-reduced-motion: reduce)'
  );

  const tunnelContainer = document.querySelector(
    '[data-tunnel-interactive]'
  ) as HTMLElement | null;
  const tunnel = document.querySelector(
    '[data-tunnel-rotation]'
  ) as HTMLElement | null;
  const buttons = document.querySelectorAll('.tunnel-btn');

  const moduleRoot = (tunnelContainer?.closest('[data-demo-module]') ||
    tunnelContainer?.closest('.demo-module')) as HTMLElement | null;
  const usesDemoLabControls = Boolean(moduleRoot);

  const isDemoPaused = () => {
    if (!usesDemoLabControls) return false;
    const html = document.documentElement;
    const htmlPaused = html.dataset.demoPaused === 'true';
    const htmlReduced = html.dataset.demoReducedMotion === 'true';
    const modPaused = moduleRoot?.dataset.demoPaused === 'true';
    const modReduced = moduleRoot?.dataset.demoReducedMotion === 'true';
    return htmlPaused || htmlReduced || modPaused || modReduced;
  };

  const isInteractiveAllowed = () => {
    if (prefersReducedMotion.matches) return false;
    if (isDemoPaused()) return false;
    return true;
  };

  // Speed controls: safe to keep available (no continuous work).
  const setSpeedButtonState = (activeBtn: Element) => {
    buttons.forEach(b => {
      const pressed = b === activeBtn;
      b.classList.toggle('active', pressed);
      b.setAttribute('aria-pressed', pressed ? 'true' : 'false');
    });
  };

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      setSpeedButtonState(btn);
      const speed = btn.getAttribute('data-speed');
      if (!tunnel) return;
      tunnel.style.animationDuration =
        speed === 'slow'
          ? '40s'
          : speed === 'fast'
            ? '10s'
            : speed === 'reverse'
              ? '20s'
              : '20s';
      tunnel.style.animationDirection =
        speed === 'reverse' ? 'reverse' : 'normal';
    });
  });

  let isInteractiveBound = false;

  const onMouseMove = (e: MouseEvent) => {
    if (!tunnelContainer) return;
    const rect = tunnelContainer.getBoundingClientRect();
    const x = (e.clientX - rect.left) / rect.width - 0.5;
    const y = (e.clientY - rect.top) / rect.height - 0.5;

    const rotateX = y * 30;
    const rotateY = x * 30;
    tunnelContainer.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
  };

  const onMouseLeave = () => {
    if (!tunnelContainer) return;
    tunnelContainer.style.transform =
      'perspective(1000px) rotateX(0) rotateY(0)';
  };

  const bindInteractive = () => {
    if (isInteractiveBound) return;
    if (!tunnelContainer || !tunnel) return;
    tunnelContainer.addEventListener('mousemove', onMouseMove);
    tunnelContainer.addEventListener('mouseleave', onMouseLeave);
    isInteractiveBound = true;
  };

  const unbindInteractive = () => {
    if (!isInteractiveBound) return;
    if (!tunnelContainer) return;
    tunnelContainer.removeEventListener('mousemove', onMouseMove);
    tunnelContainer.removeEventListener('mouseleave', onMouseLeave);
    onMouseLeave();
    isInteractiveBound = false;
  };

  const syncInteractive = () => {
    if (isInteractiveAllowed()) bindInteractive();
    else unbindInteractive();
  };

  if (tunnelContainer && tunnel) {
    syncInteractive();

    if (usesDemoLabControls) {
      const observer = new MutationObserver(syncInteractive);
      observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ['data-demo-paused', 'data-demo-reduced-motion'],
      });
      if (moduleRoot) {
        observer.observe(moduleRoot, {
          attributes: true,
          attributeFilter: ['data-demo-paused', 'data-demo-reduced-motion'],
        });
      }

      const onRMChange = () => syncInteractive();
      if ('addEventListener' in prefersReducedMotion) {
        prefersReducedMotion.addEventListener('change', onRMChange);
      } else {
        // @ts-expect-error older Safari
        prefersReducedMotion.addListener(onRMChange);
      }

      window.addEventListener(
        'beforeunload',
        () => {
          observer.disconnect();
          unbindInteractive();
          if ('removeEventListener' in prefersReducedMotion) {
            prefersReducedMotion.removeEventListener('change', onRMChange);
          } else {
            // @ts-expect-error older Safari
            prefersReducedMotion.removeListener(onRMChange);
          }
        },
        { once: true }
      );
    }
  }
</script>

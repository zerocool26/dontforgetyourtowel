---
import ModernButton from './ModernButton.astro';
import Hero3DEnvironment from './hero3d/Hero3DEnvironment.astro';
import Hero3DCore from './hero3d/Hero3DCore.astro';
import Hero3DOrbits from './hero3d/Hero3DOrbits.astro';
import Hero3DBeams from './hero3d/Hero3DBeams.astro';
import Hero3DData from './hero3d/Hero3DData.astro';
import Hero3DParticles from './hero3d/Hero3DParticles.astro';

interface HeroProps {
  /** Intensity of 3D effects: 'subtle' | 'medium' | 'intense' */
  intensity?: 'subtle' | 'medium' | 'intense';
  /** Enable mouse interactivity */
  interactive?: boolean;
  /** Custom color theme override (expects "r g b" strings) */
  theme?: {
    primary?: string;
    secondary?: string;
    accent?: string;
    cyber?: string;
  };
  /** Performance mode override */
  performanceMode?: boolean;
  /** Show data visualization elements */
  showDataStreams?: boolean;
  /** Animation entrance delay (ms) */
  entranceDelay?: number;
  /** Headline/subheading content */
  headline: string;
  subheading: string;
  badge?: string;
  /** CTA buttons config */
  ctas?: Array<{
    label: string;
    href: string;
    variant: 'primary' | 'secondary' | 'outline';
  }>;
}

const {
  intensity = 'medium',
  interactive = true,
  theme,
  performanceMode = false,
  showDataStreams = true,
  entranceDelay = 0,
  headline,
  subheading,
  badge = 'Ultra-premium ops',
  ctas = [],
} = Astro.props as HeroProps;

const dataSegments = [
  'SYS.ONLINE',
  'LATENCY.12MS',
  'UPTIME.99.99%',
  'SYNC.LIVE',
  'SECURE.LOCK',
  'ROUTE.AUTO',
  'CORE.ACTIVE',
  'GRID.LINK',
  'SIGNAL.HI',
  'FLOW.SAFE',
  'NODES.128',
  'CACHE.WARM',
];

const hexStream = [
  '#6EE7FF',
  '#7C3AED',
  '#F472B6',
  '#22D3EE',
  '#0EA5E9',
  '#A855F7',
  '#E879F9',
  '#38BDF8',
];

const coordStream = [
  'X:0.12 Y:0.84 Z:0.41',
  'X:0.42 Y:0.22 Z:0.91',
  'X:0.05 Y:0.64 Z:0.72',
  'X:0.73 Y:0.33 Z:0.18',
];

const streaks = [
  { x: '12%', y: '18%', rot: '24deg', len: '120px', delay: '0.4s' },
  { x: '72%', y: '22%', rot: '-18deg', len: '160px', delay: '1s' },
  { x: '18%', y: '58%', rot: '32deg', len: '140px', delay: '1.6s' },
  { x: '64%', y: '62%', rot: '-26deg', len: '180px', delay: '0.8s' },
  { x: '32%', y: '35%', rot: '12deg', len: '110px', delay: '2.2s' },
  { x: '80%', y: '44%', rot: '-8deg', len: '130px', delay: '2.8s' },
  { x: '40%', y: '78%', rot: '20deg', len: '150px', delay: '1.2s' },
  { x: '55%', y: '14%', rot: '-30deg', len: '140px', delay: '2.4s' },
];

const dust = [
  { x: '8%', y: '28%', size: '3px', delay: '0.2s' },
  { x: '18%', y: '68%', size: '2px', delay: '0.6s' },
  { x: '26%', y: '42%', size: '2px', delay: '1.1s' },
  { x: '34%', y: '22%', size: '3px', delay: '1.5s' },
  { x: '42%', y: '58%', size: '2px', delay: '0.9s' },
  { x: '50%', y: '34%', size: '3px', delay: '0.4s' },
  { x: '58%', y: '72%', size: '2px', delay: '1.8s' },
  { x: '66%', y: '26%', size: '3px', delay: '2.2s' },
  { x: '74%', y: '54%', size: '2px', delay: '1.3s' },
  { x: '82%', y: '18%', size: '3px', delay: '2.6s' },
  { x: '14%', y: '52%', size: '2px', delay: '0.8s' },
  { x: '22%', y: '82%', size: '3px', delay: '2.9s' },
  { x: '46%', y: '16%', size: '2px', delay: '1.9s' },
  { x: '62%', y: '10%', size: '3px', delay: '2.1s' },
  { x: '70%', y: '82%', size: '2px', delay: '1.7s' },
  { x: '86%', y: '68%', size: '3px', delay: '2.4s' },
];

const particles = Array.from({ length: 80 }).map((_, i) => {
  const x = Math.round((Math.random() * 2 - 1) * 240);
  const y = Math.round((Math.random() * 2 - 1) * 200);
  const z = Math.round((Math.random() * 2 - 1) * 280);
  const delay = (i % 20) * 0.12;
  const size = 2 + (i % 3);
  return { x, y, z, delay, size };
});

const heroStyle = {
  '--hero-primary': theme?.primary ?? '99 102 241',
  '--hero-secondary': theme?.secondary ?? '168 85 247',
  '--hero-accent': theme?.accent ?? '236 72 153',
  '--hero-cyber': theme?.cyber ?? '6 182 212',
  '--hero-entrance-delay': `${entranceDelay}ms`,
};
---

<div class="hero-3d-container">
  <div
    class="hero-3d"
    data-hero-3d
    data-intensity={intensity}
    data-interactive={interactive ? 'true' : 'false'}
    data-hero-tilt={interactive ? 'true' : 'false'}
    data-hero-fx="true"
    data-hero-ambient="true"
    data-hero-auto="true"
    data-hero-perf={performanceMode ? 'true' : 'false'}
    data-show-data={showDataStreams ? 'true' : 'false'}
    role="img"
    aria-label="Interactive 3D visualization representing advanced technology and innovation"
    style={heroStyle}
  >
    <div class="hero-visual" aria-hidden="true">
      <div class="hero-3d-stage">
        <div class="hero-3d-scene">
          <Hero3DEnvironment streaks={streaks} dust={dust} />
          <Hero3DCore />
          <Hero3DOrbits />
          <Hero3DBeams />
          <Hero3DData
            dataSegments={dataSegments}
            hexStream={hexStream}
            coordStream={coordStream}
          />
          <Hero3DParticles particles={particles} />

          <div class="hero-ripple-layer" aria-hidden="true"></div>

          <div class="scanlines"></div>
          <div class="hero-noise"></div>
          <div class="hero-vignette"></div>
        </div>
      </div>
    </div>

    <div class="hero-content" role="main" data-hero-anim>
      <span class="hero-badge" role="status">
        <span class="badge-dot" aria-hidden="true"></span>
        {badge}
      </span>
      <h1 class="hero-headline">{headline}</h1>
      <p class="hero-subheading">{subheading}</p>

      <div class="hero-ctas" role="group" aria-label="Call to action">
        {
          ctas.map(cta => (
            <ModernButton href={cta.href} variant={cta.variant} size="lg">
              {cta.label}
            </ModernButton>
          ))
        }
      </div>

      <slot />
    </div>

    <div class="hero-ui" aria-label="3D hero settings">
      <div class="hero-controls" aria-label="3D hero controls">
        <div class="hero-controls__group" role="group" aria-label="Intensity">
          <button
            type="button"
            class="hero-control-btn"
            data-hero-intensity="subtle"
          >
            Subtle
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-intensity="medium"
          >
            Medium
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-intensity="intense"
          >
            Intense
          </button>
        </div>
        <div class="hero-controls__group" role="group" aria-label="Presets">
          <button
            type="button"
            class="hero-control-btn"
            data-hero-preset="signal"
          >
            Signal
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-preset="cinematic"
          >
            Cinematic
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-preset="clarity"
          >
            Clarity
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-preset="mobile"
          >
            Mobile
          </button>
        </div>
        <div class="hero-controls__group" role="group" aria-label="Modes">
          <button
            type="button"
            class="hero-control-btn"
            data-hero-toggle="data"
          >
            Data
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-toggle="ambient"
          >
            Ambient
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-toggle="perf"
          >
            Calm
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-toggle="tilt"
          >
            Tilt
          </button>
          <button type="button" class="hero-control-btn" data-hero-toggle="fx">
            FX
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-action="replay"
          >
            Replay
          </button>
          <button
            type="button"
            class="hero-control-btn"
            data-hero-action="reset"
          >
            Reset
          </button>
        </div>
      </div>

      <div class="hero-telemetry" aria-live="polite">
        <div class="telemetry-row">
          <span class="telemetry-label">FPS</span>
          <span class="telemetry-value" data-hero-telemetry="fps">--</span>
        </div>
        <div class="telemetry-row">
          <span class="telemetry-label">Mode</span>
          <span class="telemetry-value" data-hero-telemetry="mode">Active</span>
        </div>
        <div class="telemetry-row">
          <span class="telemetry-label">Tier</span>
          <span class="telemetry-value" data-hero-telemetry="tier"
            >Balanced</span
          >
        </div>
        <div class="telemetry-row">
          <span class="telemetry-label">Intensity</span>
          <span class="telemetry-value" data-hero-telemetry="intensity">
            {intensity}
          </span>
        </div>
        <div class="telemetry-row">
          <span class="telemetry-label">Data</span>
          <span class="telemetry-value" data-hero-telemetry="data">On</span>
        </div>
        <div class="telemetry-row">
          <span class="telemetry-label">Cap</span>
          <span class="telemetry-value" data-hero-telemetry="cap">Auto</span>
        </div>
        <div class="telemetry-spark" aria-hidden="true">
          {
            Array.from({ length: 24 }).map(() => (
              <span class="telemetry-bar" data-hero-spark />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-3d-container {
    position: relative;
    padding: clamp(3rem, 6vw, 6rem) 0;
  }

  .hero-3d {
    --particle-count: 30;
    --ring-count: 4;
    --blur-enabled: 0;
    --hero-tilt-x: 0deg;
    --hero-tilt-y: 0deg;
    --cursor-x: 0;
    --cursor-y: 0;
    --hero-depth-scale: 1;
    --hero-perspective: 1400px;
    --hero-core-size: min(260px, 48vw);
    --hero-icosa-size: min(200px, 40vw);
    --hero-pulse-size: min(80px, 16vw);
    --hero-glint-size: min(120px, 22vw);

    position: relative;
    min-height: min(720px, 80vh);
    border-radius: 32px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: radial-gradient(
      circle at top,
      rgba(15, 23, 42, 0.9),
      #030712 60%
    );
    overflow: hidden;
    isolation: isolate;
    contain: layout paint style;
    content-visibility: auto;
    contain-intrinsic-size: 1000px 720px;
    cursor: default;
    display: flex;
    flex-direction: column;
  }

  .hero-visual {
    position: relative;
    min-height: clamp(420px, 62vh, 760px);
    isolation: isolate;
    overflow: hidden;
  }

  .hero-visual::before {
    content: '';
    position: absolute;
    inset: 8% 6% 16%;
    border-radius: 28px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow:
      0 0 80px rgba(var(--hero-primary), 0.25),
      0 0 120px rgba(var(--hero-accent), 0.18);
    opacity: 0.35;
    mix-blend-mode: screen;
    pointer-events: none;
    animation: frameGlow 12s ease-in-out infinite;
    z-index: 0;
  }

  .hero-visual::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 50% 30%,
      rgba(var(--hero-secondary), 0.18),
      transparent 60%
    );
    mix-blend-mode: screen;
    opacity: 0.25;
    pointer-events: none;
    z-index: 0;
  }

  .hero-3d[data-interactive='true'] {
    cursor: grab;
  }

  .hero-3d[data-hero-drag='true'] {
    cursor: grabbing;
  }

  .hero-controls {
    display: grid;
    gap: 0.6rem;
    padding: 0.75rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(6, 9, 16, 0.7);
    backdrop-filter: blur(10px);
  }

  .hero-controls__group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .hero-control-btn {
    min-height: 36px;
    padding: 0 0.75rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.05);
    color: rgba(226, 232, 240, 0.85);
    font-size: 0.7rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    font-family: var(--font-mono, ui-monospace);
    transition:
      border-color 200ms ease,
      background 200ms ease;
  }

  .hero-control-btn:hover {
    border-color: rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.12);
  }

  .hero-control-btn[data-active='true'] {
    border-color: rgba(var(--hero-cyber), 0.7);
    background: rgba(var(--hero-cyber), 0.18);
    color: #fff;
  }

  .hero-telemetry {
    display: grid;
    gap: 0.35rem;
    padding: 0.75rem 0.9rem;
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(6, 9, 16, 0.7);
    backdrop-filter: blur(12px);
    min-width: 160px;
    font-size: 0.65rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-family: var(--font-mono, ui-monospace);
    color: rgba(226, 232, 240, 0.75);
  }

  .hero-ui {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 1.25rem;
    padding: 0 2rem 2.5rem;
  }

  .telemetry-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.6rem;
  }

  .telemetry-value {
    color: rgba(226, 232, 240, 0.95);
  }

  .telemetry-spark {
    display: grid;
    grid-template-columns: repeat(12, minmax(0, 1fr));
    gap: 4px;
    margin-top: 0.35rem;
  }

  .telemetry-bar {
    height: calc(18px * var(--spark, 0.25));
    min-height: 4px;
    border-radius: 999px;
    background: rgba(var(--hero-cyber), 0.35);
    align-self: end;
    transition:
      height 300ms ease,
      background 300ms ease;
  }

  .telemetry-bar[data-level='mid'] {
    background: rgba(var(--hero-secondary), 0.45);
  }

  .telemetry-bar[data-level='high'] {
    background: rgba(var(--hero-primary), 0.6);
  }

  .hero-3d[data-intensity='subtle'] {
    --particle-count: 20;
  }

  .hero-3d[data-intensity='intense'] {
    --particle-count: 50;
    --ring-count: 6;
  }

  @media (pointer: fine) and (min-width: 1024px) {
    .hero-3d {
      --particle-count: 80;
      --ring-count: 8;
      --blur-enabled: 1;
    }
  }

  :global(html[data-demo-perf='true']) .hero-3d,
  .hero-3d[data-hero-perf='true'] {
    --particle-count: 15;
    --ring-count: 3;
    --blur-enabled: 0;
  }

  .hero-3d-stage {
    position: absolute;
    inset: 0;
    transform-origin: center;
    animation: stageFloat 18s ease-in-out infinite;
    z-index: 1;
    will-change: transform;
  }

  .hero-3d-scene {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
    perspective: var(--hero-perspective);
    perspective-origin: 50% 45%;
    transform: rotateX(var(--hero-tilt-x)) rotateY(var(--hero-tilt-y));
    transition: transform 300ms ease;
    z-index: 1;
    backface-visibility: hidden;
  }

  .hero-ripple-layer {
    position: absolute;
    inset: 0;
    pointer-events: none;
    transform-style: preserve-3d;
    z-index: 2;
  }

  .hero-ripple {
    position: absolute;
    width: 12px;
    height: 12px;
    border-radius: 999px;
    border: 1px solid rgba(var(--hero-cyber), 0.7);
    background: radial-gradient(
      circle,
      rgba(var(--hero-primary), 0.35),
      transparent 60%
    );
    transform: translate(-50%, -50%);
    opacity: 0.6;
    animation: rippleExpand 1.2s ease-out forwards;
    mix-blend-mode: screen;
  }

  .hero-3d[data-hero-active='true'] .hero-3d-scene {
    transition: transform 120ms ease;
  }

  .hero-3d[data-hero-tilt='false'] .hero-3d-scene {
    transform: rotateX(0deg) rotateY(0deg);
  }

  .layer {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
    pointer-events: none;
    opacity: 0;
    transform: translateZ(
      calc(var(--layer-depth, 0px) * var(--hero-depth-scale))
    );
    animation: layerEnter 1200ms ease-out both;
    animation-delay: calc(var(--hero-entrance-delay) + var(--layer-delay, 0ms));
    backface-visibility: hidden;
  }

  .layer-stars {
    --layer-depth: -620px;
    --layer-delay: 0ms;
    background-image:
      radial-gradient(rgba(255, 255, 255, 0.25) 1px, transparent 1px),
      radial-gradient(rgba(255, 255, 255, 0.18) 1px, transparent 1px);
    background-size:
      80px 80px,
      140px 140px;
    background-position:
      calc(50% + (var(--cursor-x) * 8%)) calc(50% + (var(--cursor-y) * 8%)),
      calc(50% + (var(--cursor-x) * -12%)) calc(50% + (var(--cursor-y) * -12%));
    opacity: 0.5;
    animation:
      layerEnter 1200ms ease-out both,
      starDrift 18s ease-in-out infinite;
    animation-delay:
      calc(var(--hero-entrance-delay) + var(--layer-delay, 0ms)), 0ms;
  }

  .layer-haze {
    --layer-depth: -420px;
    --layer-delay: 80ms;
    background: radial-gradient(
      circle at 50% 30%,
      rgba(var(--hero-cyber), 0.22),
      transparent 60%
    );
    filter: blur(60px);
    opacity: 0.55;
    animation:
      layerEnter 1200ms ease-out both,
      hazeFloat 16s ease-in-out infinite;
    animation-delay:
      calc(var(--hero-entrance-delay) + var(--layer-delay, 0ms)), 0ms;
  }

  .layer-aurora {
    --layer-depth: -360px;
    --layer-delay: 140ms;
    background: linear-gradient(
      120deg,
      rgba(var(--hero-cyber), 0.1),
      rgba(var(--hero-secondary), 0.25),
      rgba(var(--hero-accent), 0.2),
      transparent 65%
    );
    background-size: 200% 200%;
    mix-blend-mode: screen;
    opacity: 0.55;
    animation:
      layerEnter 1200ms ease-out both,
      auroraSweep 18s ease-in-out infinite;
    animation-delay:
      calc(var(--hero-entrance-delay) + var(--layer-delay, 0ms)), 0ms;
  }

  .layer-prism {
    --layer-depth: -140px;
    --layer-delay: 200ms;
    background:
      radial-gradient(
        circle at 20% 25%,
        rgba(var(--hero-accent), 0.25),
        transparent 55%
      ),
      radial-gradient(
        circle at 75% 40%,
        rgba(var(--hero-primary), 0.18),
        transparent 60%
      ),
      radial-gradient(
        circle at 50% 70%,
        rgba(var(--hero-cyber), 0.22),
        transparent 50%
      );
    filter: blur(12px);
    opacity: 0.6;
    mix-blend-mode: screen;
    animation:
      layerEnter 1200ms ease-out both,
      prismShift 12s ease-in-out infinite;
    animation-delay:
      calc(var(--hero-entrance-delay) + var(--layer-delay, 0ms)), 0ms;
  }

  .layer-grid {
    --layer-depth: -520px;
    --layer-delay: 0ms;
    background: radial-gradient(
      circle at 50% 120%,
      rgba(var(--hero-primary), 0.25),
      transparent 60%
    );
  }

  .layer-grid::after {
    content: '';
    position: absolute;
    inset: 10% 8% 40%;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.08) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
    background-size: 60px 60px;
    transform: rotateX(70deg) translateY(80px);
    opacity: 0.35;
  }

  .layer-grid::after {
    transform: rotateX(70deg) translateY(80px)
      translateX(calc(var(--cursor-x) * 8px));
  }

  .layer-nebula {
    --layer-depth: -260px;
    --layer-delay: 100ms;
    background:
      radial-gradient(
        circle at 20% 20%,
        rgba(var(--hero-secondary), 0.35),
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 30%,
        rgba(var(--hero-accent), 0.3),
        transparent 45%
      ),
      radial-gradient(
        circle at 50% 70%,
        rgba(var(--hero-cyber), 0.25),
        transparent 50%
      );
    filter: blur(calc(20px * var(--blur-enabled)));
    opacity: 0.85;
    background-position: calc(50% + (var(--cursor-x) * 10%))
      calc(50% + (var(--cursor-y) * 10%));
    animation:
      layerEnter 1200ms ease-out both,
      nebulaShift 14s ease-in-out infinite;
    animation-delay:
      calc(var(--hero-entrance-delay) + var(--layer-delay, 0ms)), 0ms;
  }

  .layer-rays {
    --layer-depth: -120px;
    --layer-delay: 300ms;
    background: conic-gradient(
      from 180deg,
      rgba(255, 255, 255, 0.12),
      transparent,
      rgba(255, 255, 255, 0.1)
    );
    mix-blend-mode: screen;
    filter: blur(40px);
    opacity: 0.4;
    animation:
      layerEnter 1200ms ease-out both,
      raysSpin 24s linear infinite;
    animation-delay:

---
import ModernButton from './ModernButton.astro';

interface HeroProps {
  /** Intensity of 3D effects: 'subtle' | 'medium' | 'intense' */
  intensity?: 'subtle' | 'medium' | 'intense';
  /** Enable mouse interactivity */
  interactive?: boolean;
  /** Custom color theme override (expects "r g b" strings) */
  theme?: {
    primary?: string;
    secondary?: string;
    accent?: string;
    cyber?: string;
  };
  /** Performance mode override */
  performanceMode?: boolean;
  /** Show data visualization elements */
  showDataStreams?: boolean;
  /** Animation entrance delay (ms) */
  entranceDelay?: number;
  /** Headline/subheading content */
  headline: string;
  subheading: string;
  badge?: string;
  /** CTA buttons config */
  ctas?: Array<{
    label: string;
    href: string;
    variant: 'primary' | 'secondary' | 'outline';
  }>;
}

const {
  intensity = 'medium',
  interactive = true,
  theme,
  performanceMode = false,
  showDataStreams = true,
  entranceDelay = 0,
  headline,
  subheading,
  badge = 'Ultra-premium ops',
  ctas = [],
} = Astro.props as HeroProps;

const dataSegments = [
  'SYS.ONLINE',
  'LATENCY.12MS',
  'UPTIME.99.99%',
  'SYNC.LIVE',
  'SECURE.LOCK',
  'ROUTE.AUTO',
  'CORE.ACTIVE',
  'GRID.LINK',
  'SIGNAL.HI',
  'FLOW.SAFE',
  'NODES.128',
  'CACHE.WARM',
];

const particles = Array.from({ length: 80 }).map((_, i) => {
  const x = Math.round((Math.random() * 2 - 1) * 240);
  const y = Math.round((Math.random() * 2 - 1) * 200);
  const z = Math.round((Math.random() * 2 - 1) * 280);
  const delay = (i % 20) * 0.12;
  const size = 2 + (i % 3);
  return { x, y, z, delay, size };
});

const heroStyle = {
  '--hero-primary': theme?.primary ?? '99 102 241',
  '--hero-secondary': theme?.secondary ?? '168 85 247',
  '--hero-accent': theme?.accent ?? '236 72 153',
  '--hero-cyber': theme?.cyber ?? '6 182 212',
  '--hero-entrance-delay': `${entranceDelay}ms`,
};
---

<div class="hero-3d-container">
  <div
    class="hero-3d"
    data-hero-3d
    data-intensity={intensity}
    data-interactive={interactive ? 'true' : 'false'}
    data-hero-perf={performanceMode ? 'true' : 'false'}
    data-show-data={showDataStreams ? 'true' : 'false'}
    role="img"
    aria-label="Interactive 3D visualization representing advanced technology and innovation"
    style={heroStyle}
  >
    <div class="hero-3d-scene" aria-hidden="true">
      <div class="layer layer-grid"></div>
      <div class="layer layer-nebula"></div>
      <div class="layer layer-rays"></div>

      <div class="layer layer-core">
        <div class="core-shell holo-surface"></div>
        <div class="core-icosa"></div>
        <div class="core-pulse"></div>
      </div>

      <div class="layer layer-orbits">
        <div class="orbit-ring ring-1"></div>
        <div class="orbit-ring ring-2"></div>
        <div class="orbit-ring ring-3"></div>
        <div class="orbit-ring ring-4"></div>
        <div class="mobius-loop"></div>
      </div>

      <div class="layer layer-beams">
        <span class="beam beam-1"></span>
        <span class="beam beam-2"></span>
        <span class="beam beam-3"></span>
      </div>

      <div class="layer layer-data">
        <div class="data-ring">
          {
            dataSegments.map((segment, i) => (
              <span class="data-segment" style={`--i:${i}`}>
                {segment}
              </span>
            ))
          }
        </div>
        <div class="binary-stream">
          {
            Array.from({ length: 28 }).map((_, i) => (
              <span class="binary-bit" style={`--i:${i}`}>
                0{i % 2}
              </span>
            ))
          }
        </div>
      </div>

      <div class="layer layer-particles">
        {
          particles.map(p => (
            <span
              class="particle"
              style={`--x:${p.x};--y:${p.y};--z:${p.z};--delay:${p.delay}s;--size:${p.size}px`}
            />
          ))
        }
      </div>

      <div class="scanlines"></div>
    </div>

    <div class="hero-content" role="main">
      <span class="hero-badge" role="status">
        <span class="badge-dot" aria-hidden="true"></span>
        {badge}
      </span>
      <h1 class="hero-headline">{headline}</h1>
      <p class="hero-subheading">{subheading}</p>

      <div class="hero-ctas" role="group" aria-label="Call to action">
        {
          ctas.map(cta => (
            <ModernButton href={cta.href} variant={cta.variant} size="lg">
              {cta.label}
            </ModernButton>
          ))
        }
      </div>

      <slot />
    </div>
  </div>
</div>

<style>
  .hero-3d-container {
    position: relative;
    padding: clamp(3rem, 6vw, 6rem) 0;
  }

  .hero-3d {
    --particle-count: 30;
    --ring-count: 4;
    --blur-enabled: 0;
    --hero-tilt-x: 0deg;
    --hero-tilt-y: 0deg;
    --cursor-x: 0;
    --cursor-y: 0;

    position: relative;
    min-height: min(720px, 80vh);
    border-radius: 32px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: radial-gradient(
      circle at top,
      rgba(15, 23, 42, 0.9),
      #030712 60%
    );
    overflow: hidden;
    isolation: isolate;
    contain: layout paint style;
    content-visibility: auto;
    contain-intrinsic-size: 1000px 720px;
  }

  .hero-3d[data-intensity='subtle'] {
    --particle-count: 20;
  }

  .hero-3d[data-intensity='intense'] {
    --particle-count: 50;
    --ring-count: 6;
  }

  @media (pointer: fine) and (min-width: 1024px) {
    .hero-3d {
      --particle-count: 80;
      --ring-count: 8;
      --blur-enabled: 1;
    }
  }

  :global(html[data-demo-perf='true']) .hero-3d,
  .hero-3d[data-hero-perf='true'] {
    --particle-count: 15;
    --ring-count: 3;
    --blur-enabled: 0;
  }

  .hero-3d-scene {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
    perspective: 1400px;
    transform: rotateX(var(--hero-tilt-x)) rotateY(var(--hero-tilt-y));
    transition: transform 300ms ease;
  }

  .layer {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
    pointer-events: none;
  }

  .layer-grid {
    background: radial-gradient(
      circle at 50% 120%,
      rgba(var(--hero-primary), 0.25),
      transparent 60%
    );
    transform: translateZ(-520px);
  }

  .layer-grid::after {
    content: '';
    position: absolute;
    inset: 10% 8% 40%;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.08) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
    background-size: 60px 60px;
    transform: rotateX(70deg) translateY(80px);
    opacity: 0.35;
  }

  .layer-nebula {
    background:
      radial-gradient(
        circle at 20% 20%,
        rgba(var(--hero-secondary), 0.35),
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 30%,
        rgba(var(--hero-accent), 0.3),
        transparent 45%
      ),
      radial-gradient(
        circle at 50% 70%,
        rgba(var(--hero-cyber), 0.25),
        transparent 50%
      );
    filter: blur(calc(20px * var(--blur-enabled)));
    transform: translateZ(-260px);
    opacity: 0.85;
    animation: nebulaShift 14s ease-in-out infinite;
  }

  .layer-rays {
    background: conic-gradient(
      from 180deg,
      rgba(255, 255, 255, 0.12),
      transparent,
      rgba(255, 255, 255, 0.1)
    );
    mix-blend-mode: screen;
    filter: blur(40px);
    transform: translateZ(-120px);
    opacity: 0.4;
    animation: raysSpin 24s linear infinite;
  }

  .layer-core {
    display: grid;
    place-items: center;
    transform: translateZ(120px);
  }

  .core-shell {
    width: min(260px, 48vw);
    aspect-ratio: 1;
    border-radius: 28% 72% 60% 40%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: linear-gradient(
      135deg,
      rgba(var(--hero-primary), 0.35),
      rgba(var(--hero-secondary), 0.2)
    );
    box-shadow:
      0 0 60px rgba(var(--hero-primary), 0.6),
      0 0 120px rgba(var(--hero-accent), 0.35);
    animation: corePulse 6s ease-in-out infinite;
    filter: drop-shadow(2px 0 0 rgba(255, 0, 0, 0.35))
      drop-shadow(-2px 0 0 rgba(0, 255, 255, 0.3));
  }

  .core-icosa {
    position: absolute;
    width: min(200px, 40vw);
    aspect-ratio: 1;
    border: 1px dashed rgba(255, 255, 255, 0.4);
    clip-path: polygon(
      50% 0%,
      88% 15%,
      100% 50%,
      75% 85%,
      50% 100%,
      25% 85%,
      0% 50%,
      12% 15%
    );
    animation: icosaSpin 12s linear infinite;
    background: linear-gradient(
      120deg,
      rgba(var(--hero-cyber), 0.2),
      transparent
    );
  }

  .core-pulse {
    position: absolute;
    width: min(80px, 16vw);
    aspect-ratio: 1;
    border-radius: 999px;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.9),
      rgba(var(--hero-primary), 0.4)
    );
    box-shadow: 0 0 40px rgba(var(--hero-primary), 0.7);
    animation: pulseGlow 3.2s ease-in-out infinite;
  }

  .layer-orbits {
    transform: translateZ(80px);
  }

  .orbit-ring {
    position: absolute;
    inset: 18% 18%;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 0 30px rgba(var(--hero-primary), 0.2);
    animation: orbitSpin 14s linear infinite;
  }

  .orbit-ring.ring-2 {
    inset: 26% 26%;
    transform: rotateX(70deg);
    animation-duration: 18s;
  }

  .orbit-ring.ring-3 {
    inset: 12% 12%;
    transform: rotateY(70deg);
    animation-duration: 22s;
  }

  .orbit-ring.ring-4 {
    inset: 8% 8%;
    transform: rotateX(40deg) rotateY(20deg);
    animation-duration: 28s;
  }

  .mobius-loop {
    position: absolute;
    inset: 30% 30%;
    border-radius: 999px;
    border: 1px dashed rgba(var(--hero-cyber), 0.45);
    animation: mobiusShift 12s ease-in-out infinite;
  }

  .layer-beams {
    transform: translateZ(140px);
  }

  .beam {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 2px;
    height: 200px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(var(--hero-primary), 0.8),
      rgba(var(--hero-secondary), 0.4),
      transparent
    );
    transform-origin: top;
    filter: blur(0.5px);
    animation: beamFlow 4s ease-in-out infinite;
  }

  .beam-1 {
    transform: translate(-50%, -50%) rotate(20deg);
  }

  .beam-2 {
    transform: translate(-50%, -50%) rotate(-45deg);
    animation-delay: 1.2s;
  }

  .beam-3 {
    transform: translate(-50%, -50%) rotate(120deg);
    animation-delay: 2.1s;
  }

  .layer-data {
    opacity: 1;
    transform: translateZ(180px);
    transition: opacity 300ms ease;
  }

  .hero-3d[data-show-data='false'] .layer-data {
    opacity: 0;
  }

  .data-ring {
    position: absolute;
    inset: 20% 20%;
    border-radius: 50%;
    animation: dataSpin 18s linear infinite;
  }

  .data-segment {
    position: absolute;
    top: -10px;
    left: 50%;
    transform-origin: 0 140px;
    transform: rotate(calc(var(--i) * 30deg));
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.55);
  }

  .binary-stream {
    position: absolute;
    right: 8%;
    top: 18%;
    display: grid;
    gap: 0.25rem;
  }

  .binary-bit {
    font-size: 0.6rem;
    color: rgba(var(--hero-cyber), 0.6);
    animation: binaryFlow 3s ease-in-out infinite;
    animation-delay: calc(var(--i) * 0.12s);
  }

  .layer-particles {
    transform: translateZ(220px);
  }

  .particle {
    position: absolute;
    left: 50%;
    top: 50%;
    width: var(--size);
    height: var(--size);
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 0 8px rgba(var(--hero-cyber), 0.6);
    transform: translate3d(
      calc(var(--x) * 1px + var(--cursor-x) * 16px),
      calc(var(--y) * 1px + var(--cursor-y) * 16px),
      calc(var(--z) * 1px)
    );
    opacity: 0.6;
    animation: particleDrift 8s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  .scanlines::after {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.2) 2px,
      rgba(0, 0, 0, 0.2) 4px
    );
    mix-blend-mode: soft-light;
    opacity: 0.4;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: clamp(2rem, 5vw, 4rem);
    max-width: 600px;
    text-shadow:
      0 0 40px rgba(var(--hero-primary), 0.5),
      0 0 80px rgba(var(--hero-secondary), 0.3);
    animation: heroEntrance 900ms ease var(--hero-entrance-delay) both;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.3rem 0.75rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    background: rgba(15, 23, 42, 0.6);
    color: rgba(226, 232, 240, 0.9);
    font-size: 0.65rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    font-family: var(--font-mono, ui-monospace);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(var(--hero-cyber), 1);
    box-shadow: 0 0 12px rgba(var(--hero-cyber), 0.8);
    animation: dotPulse 2s ease-in-out infinite;
  }

  .hero-headline {
    font-size: clamp(2.5rem, 8vw, 5.5rem);
    font-weight: 900;
    line-height: 1.05;
    background: linear-gradient(
      135deg,
      #fff 0%,
      rgba(var(--hero-primary), 1) 55%,
      rgba(var(--hero-secondary), 1) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subheading {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: rgba(226, 232, 240, 0.8);
    max-width: 52ch;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  @keyframes heroEntrance {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes corePulse {
    0%,
    100% {
      transform: scale(0.95);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes pulseGlow {
    0%,
    100% {
      opacity: 0.7;
      transform: scale(0.9);
    }
    50% {
      opacity: 1;
      transform: scale(1.15);
    }
  }

  @keyframes icosaSpin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes orbitSpin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes mobiusShift {
    0%,
    100% {
      transform: rotate(10deg) scale(0.95);
      opacity: 0.6;
    }
    50% {
      transform: rotate(-15deg) scale(1.05);
      opacity: 0.9;
    }
  }

  @keyframes beamFlow {
    0%,
    100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.9;
    }
  }

  @keyframes dataSpin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes binaryFlow {
    0%,
    100% {
      opacity: 0.2;
      transform: translateY(0);
    }
    50% {
      opacity: 0.8;
      transform: translateY(10px);
    }
  }

  @keyframes particleDrift {
    0%,
    100% {
      opacity: 0.5;
      transform: translate3d(
        calc(var(--x) * 1px + var(--cursor-x) * 14px),
        calc(var(--y) * 1px + var(--cursor-y) * 14px),
        calc(var(--z) * 1px)
      );
    }
    50% {
      opacity: 0.9;
      transform: translate3d(
        calc(var(--x) * 1px + var(--cursor-x) * 18px),
        calc(var(--y) * 1px + var(--cursor-y) * 18px),
        calc(var(--z) * 1px + 12px)
      );
    }
  }

  @keyframes dotPulse {
    0%,
    100% {
      transform: scale(0.9);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.15);
      opacity: 1;
    }
  }

  @keyframes nebulaShift {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(12px);
    }
  }

  @keyframes raysSpin {
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 900px) {
    .hero-3d {
      min-height: auto;
    }

    .hero-content {
      padding: 2rem;
    }

    .data-ring {
      inset: 24% 24%;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-3d * {
      animation: none !important;
      transition: none !important;
    }

    .hero-3d {
      background: radial-gradient(
        circle at top,
        rgba(15, 23, 42, 0.9),
        #0b1120 65%
      );
    }
  }
</style>

<script>
  import '../scripts/hero-3d';
</script>

---
import ModernButton from './ModernButton.astro';

const ariaLabel = 'Decorative aurora field animation';
---

<div
  class="aurora-stage"
  role="img"
  aria-label={ariaLabel}
  data-aurora
  data-aurora-prism="true"
  data-aurora-beam="true"
  data-aurora-boost="false"
>
  <div class="aurora-status" aria-live="polite">
    <span class="status-label">Prisms</span>
    <span class="status-value" data-aurora-status="prism">On</span>
    <span class="status-divider" aria-hidden="true"></span>
    <span class="status-label">Beams</span>
    <span class="status-value" data-aurora-status="beam">On</span>
    <span class="status-divider" aria-hidden="true"></span>
    <span class="status-label">Boost</span>
    <span class="status-value" data-aurora-status="boost">Off</span>
  </div>
  <div class="aurora-controls" role="group" aria-label="Aurora controls">
    <ModernButton
      variant="neon"
      className="aurora-btn active"
      data-aurora-toggle="prism"
      aria-pressed="true"
      aria-label="Toggle prisms"
    >
      Prisms
    </ModernButton>
    <ModernButton
      variant="neon"
      className="aurora-btn active"
      data-aurora-toggle="beam"
      aria-pressed="true"
      aria-label="Toggle beams"
    >
      Beams
    </ModernButton>
    <ModernButton
      variant="neon"
      className="aurora-btn"
      data-aurora-toggle="boost"
      aria-pressed="false"
      aria-label="Toggle boost"
    >
      Boost
    </ModernButton>
  </div>
  <div class="aurora-layer layer-1"></div>
  <div class="aurora-layer layer-2"></div>
  <div class="aurora-layer layer-3"></div>
  <div class="aurora-mist"></div>
  <div class="aurora-grid"></div>
  <div class="aurora-beams" aria-hidden="true"></div>
  <div class="aurora-prisms" aria-hidden="true">
    <span class="prism prism-1"></span>
    <span class="prism prism-2"></span>
    <span class="prism prism-3"></span>
  </div>
  <div class="aurora-core">
    <span class="core-ring ring-1"></span>
    <span class="core-ring ring-2"></span>
    <span class="core-ring ring-3"></span>
    <span class="core-spark"></span>
  </div>
</div>

<style>
  .aurora-stage {
    position: relative;
    min-height: clamp(320px, 48vw, 520px);
    border-radius: 24px;
    overflow: hidden;
    background: radial-gradient(circle at 20% 20%, #1c1f3c, #07090f 45%);
    isolation: isolate;
  }

  .aurora-status {
    position: absolute;
    top: 1rem;
    left: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 0.65rem;
    padding: 0.4rem 0.75rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(9, 12, 20, 0.6);
    color: rgba(226, 232, 240, 0.85);
    font-size: 0.6rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    font-family: var(--font-mono, ui-monospace);
    z-index: 5;
  }

  .status-divider {
    width: 1px;
    height: 12px;
    background: rgba(255, 255, 255, 0.2);
  }

  .aurora-controls {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    z-index: 5;
  }

  .aurora-btn.active {
    background: rgba(99, 102, 241, 0.25) !important;
    border-color: rgba(99, 102, 241, 0.7) !important;
    color: #fff !important;
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.5) !important;
  }

  .aurora-layer {
    position: absolute;
    inset: -20% 0 0 -20%;
    background: conic-gradient(
      from 180deg at 50% 50%,
      rgba(99, 102, 241, 0.45),
      rgba(16, 185, 129, 0.35),
      rgba(59, 130, 246, 0.4),
      rgba(236, 72, 153, 0.32),
      rgba(99, 102, 241, 0.45)
    );
    mix-blend-mode: screen;
    filter: blur(30px) saturate(140%);
    animation: aurora-spin 18s linear infinite;
    opacity: 0.7;
  }

  .aurora-stage[data-aurora-boost='true'] .aurora-layer {
    opacity: 0.9;
    filter: blur(24px) saturate(170%);
  }

  .aurora-layer.layer-2 {
    animation-duration: 26s;
    animation-direction: reverse;
    transform: scale(1.2) rotate(12deg);
    opacity: 0.5;
  }

  .aurora-layer.layer-3 {
    animation-duration: 34s;
    transform: scale(1.4) rotate(-18deg);
    opacity: 0.45;
  }

  .aurora-mist {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        circle at 80% 30%,
        rgba(148, 163, 184, 0.35),
        transparent 55%
      ),
      radial-gradient(
        circle at 20% 80%,
        rgba(56, 189, 248, 0.25),
        transparent 50%
      );
    filter: blur(40px);
    opacity: 0.6;
    animation: aurora-breathe 9s ease-in-out infinite;
  }

  .aurora-stage[data-aurora-boost='true'] .aurora-mist {
    opacity: 0.8;
  }

  .aurora-grid {
    position: absolute;
    inset: 10% 12%;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(circle, rgba(0, 0, 0, 0.85), transparent 70%);
    opacity: 0.4;
    animation: aurora-grid 12s ease-in-out infinite;
  }

  .aurora-beams {
    position: absolute;
    inset: -20% 0 0 -10%;
    background: repeating-linear-gradient(
      120deg,
      rgba(255, 255, 255, 0.06),
      rgba(255, 255, 255, 0.06) 2px,
      transparent 2px,
      transparent 14px
    );
    opacity: 0.3;
    filter: blur(8px);
    transform: rotate(8deg);
    animation: beamSweep 16s linear infinite;
  }

  .aurora-stage[data-aurora-beam='false'] .aurora-beams {
    display: none;
  }

  @keyframes beamSweep {
    0% {
      transform: translateX(-10%) rotate(8deg);
    }
    100% {
      transform: translateX(10%) rotate(8deg);
    }
  }

  .aurora-prisms {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .aurora-stage[data-aurora-prism='false'] .aurora-prisms {
    display: none;
  }

  .prism {
    position: absolute;
    width: 140px;
    height: 180px;
    border-radius: 24px;
    background: linear-gradient(
      160deg,
      rgba(255, 255, 255, 0.18),
      rgba(59, 130, 246, 0.12)
    );
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(6px);
    box-shadow: 0 20px 60px rgba(15, 23, 42, 0.4);
    animation: prismFloat 10s ease-in-out infinite;
  }

  .prism-1 {
    left: 12%;
    top: 18%;
  }

  .prism-2 {
    right: 14%;
    top: 28%;
    animation-delay: 2s;
  }

  .prism-3 {
    left: 45%;
    bottom: 12%;
    animation-delay: 4s;
  }

  @keyframes prismFloat {
    0%,
    100% {
      transform: translateY(0) rotate(1deg);
    }
    50% {
      transform: translateY(-16px) rotate(-2deg);
    }
  }

  .aurora-core {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    pointer-events: none;
  }

  .core-ring {
    position: absolute;
    width: 50%;
    aspect-ratio: 1;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 0 30px rgba(56, 189, 248, 0.2);
    animation: aurora-orbit 10s linear infinite;
  }

  .core-ring.ring-2 {
    width: 68%;
    border-color: rgba(129, 140, 248, 0.22);
    animation-duration: 16s;
    animation-direction: reverse;
  }

  .core-ring.ring-3 {
    width: 86%;
    border-color: rgba(236, 72, 153, 0.2);
    animation-duration: 22s;
  }

  .core-spark {
    position: absolute;
    width: clamp(40px, 8vw, 90px);
    aspect-ratio: 1;
    border-radius: 40% 60% 60% 40%;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.8),
      rgba(99, 102, 241, 0.3) 50%,
      transparent 70%
    );
    filter: blur(4px);
    animation: aurora-pulse 6s ease-in-out infinite;
  }

  .aurora-stage[data-aurora-boost='true'] .core-spark {
    filter: blur(2px) saturate(140%);
  }

  @keyframes aurora-spin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes aurora-breathe {
    0%,
    100% {
      opacity: 0.55;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  @keyframes aurora-grid {
    0%,
    100% {
      transform: translateY(0);
      opacity: 0.35;
    }
    50% {
      transform: translateY(-12px);
      opacity: 0.6;
    }
  }

  @keyframes aurora-orbit {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes aurora-pulse {
    0%,
    100% {
      transform: scale(0.9);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.05);
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .aurora-layer,
    .aurora-mist,
    .aurora-grid,
    .aurora-beams,
    .prism,
    .core-ring,
    .core-spark {
      animation: none !important;
    }
  }

  @media (max-width: 720px) {
    .aurora-controls {
      position: static;
      margin: 1rem;
      justify-content: flex-start;
    }

    .aurora-status {
      position: static;
      margin: 1rem;
      width: fit-content;
    }
  }
</style>

<script>
  const stage = document.querySelector('[data-aurora]') as HTMLElement | null;
  const buttons = document.querySelectorAll('[data-aurora-toggle]');
  const prismStatus = document.querySelector('[data-aurora-status="prism"]');
  const beamStatus = document.querySelector('[data-aurora-status="beam"]');
  const boostStatus = document.querySelector('[data-aurora-status="boost"]');

  if (stage) {
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const key = button.getAttribute('data-aurora-toggle');
        if (!key) return;
        const attr = `data-aurora-${key}`;
        const next = stage.getAttribute(attr) !== 'true';
        stage.setAttribute(attr, next ? 'true' : 'false');
        button.classList.toggle('active', next);
        button.setAttribute('aria-pressed', next ? 'true' : 'false');

        if (key === 'prism' && prismStatus) {
          prismStatus.textContent = next ? 'On' : 'Off';
        }
        if (key === 'beam' && beamStatus) {
          beamStatus.textContent = next ? 'On' : 'Off';
        }
        if (key === 'boost' && boostStatus) {
          boostStatus.textContent = next ? 'On' : 'Off';
        }
      });
    });
  }
</script>

---
/**
 * PWA Registration Component
 * Registers service worker and handles PWA installation
 */
import pkg from '../../package.json' assert { type: 'json' };
import { withBasePath } from '../utils/helpers';
import ModernButton from './ui/ModernButton.astro';

const SW_VERSION = pkg.version || '0.0.0';
const swPath = withBasePath(`sw.js?v=${SW_VERSION}`);
const swScope = withBasePath('');
---

<!-- Data container for service worker configuration -->
<div
  id="pwa-config"
  data-sw-path={swPath}
  data-sw-scope={swScope}
  class="hidden"
>
</div>

<script>
  (() => {
    // Prevent duplicate bindings across Astro page transitions.
    const w = window as any;
    if (w.__pwaRegistrationBound) return;
    w.__pwaRegistrationBound = true;

    // Get SW configuration from data attributes
    const configEl = document.getElementById('pwa-config');
    const SW_PATH = configEl?.dataset.swPath || '/sw.js';
    const SW_SCOPE = configEl?.dataset.swScope || '/';

    // Only refresh the page automatically when the user explicitly requested an update.
    let awaitingRefresh = false;
    let swRegistration: ServiceWorkerRegistration | null = null;

    // Avoid flakey reloads during automated testing.
    // Playwright sets navigator.webdriver=true.
    const isAutomated =
      typeof navigator !== 'undefined' && (navigator as any).webdriver === true;

    if (!isAutomated && 'serviceWorker' in navigator) {
      const registerServiceWorker = () => {
        navigator.serviceWorker
          .register(SW_PATH, { scope: SW_SCOPE })
          .then(registration => {
            console.log('[PWA] Service Worker registered:', registration.scope);

            swRegistration = registration;

            // If an update is already waiting (e.g., user navigated back while a SW updated), surface it.
            if (registration.waiting && navigator.serviceWorker.controller) {
              showUpdateNotification();
            }

            // Check for updates conservatively and only when it makes sense.
            // (Polling too frequently can waste battery/CPU and cause noisy updates.)
            const UPDATE_INTERVAL_MS = 4 * 60 * 60 * 1000; // 4 hours
            window.setInterval(() => {
              if (document.visibilityState !== 'visible') return;
              if (navigator.onLine === false) return;
              registration.update().catch(() => {
                // ignore
              });
            }, UPDATE_INTERVAL_MS);

            // Also check when the tab becomes visible again or when network returns.
            document.addEventListener('visibilitychange', () => {
              if (document.visibilityState === 'visible' && navigator.onLine) {
                registration.update().catch(() => {
                  // ignore
                });
              }
            });

            window.addEventListener('online', () => {
              registration.update().catch(() => {
                // ignore
              });
            });

            // Handle updates
            registration.addEventListener('updatefound', () => {
              const newWorker = registration.installing;
              newWorker?.addEventListener('statechange', () => {
                if (
                  newWorker.state === 'installed' &&
                  navigator.serviceWorker.controller
                ) {
                  // New service worker available
                  showUpdateNotification();
                }
              });
            });
          })
          .catch(error => {
            console.error('[PWA] Service Worker registration failed:', error);
          });

        // Handle controller change
        let refreshing = false;
        navigator.serviceWorker.addEventListener('controllerchange', () => {
          // Only reload automatically if the user pressed “Update Now”.
          if (!awaitingRefresh) return;
          if (refreshing) return;
          refreshing = true;
          window.location.reload();
        });
      };

      // If the script runs after `load` (rare, but possible with deferred hydration), don’t miss registration.
      if (document.readyState === 'complete') {
        registerServiceWorker();
      } else {
        window.addEventListener('load', registerServiceWorker, { once: true });
      }
    }

    // Track whether the user is likely navigating with keyboard.
    let hadKeyboardEvent = false;
    window.addEventListener(
      'keydown',
      e => {
        if (e.key === 'Tab' || e.key === 'ArrowDown' || e.key === 'ArrowUp') {
          hadKeyboardEvent = true;
        }
      },
      { passive: true }
    );
    window.addEventListener(
      'pointerdown',
      () => {
        hadKeyboardEvent = false;
      },
      { passive: true }
    );

    function showUpdateNotification(): void {
      const notification = document.getElementById('pwa-notification');
      if (!notification) return;

      notification.classList.remove('hidden');

      // If the user is navigating by keyboard, announce the prompt.
      if (hadKeyboardEvent) {
        (notification as HTMLElement).focus({ preventScroll: true });
      }

      const updateBtn = document.getElementById(
        'update-btn'
      ) as HTMLElement | null;
      const dismissBtn = document.getElementById(
        'dismiss-btn'
      ) as HTMLElement | null;

      // Avoid duplicate handlers across Astro page transitions / repeated updatefound events.
      if (updateBtn && !(updateBtn as any)._pwaBound) {
        (updateBtn as any)._pwaBound = true;
        updateBtn.addEventListener('click', () => {
          awaitingRefresh = true;

          const regPromise = swRegistration
            ? Promise.resolve(swRegistration)
            : navigator.serviceWorker.getRegistration();

          regPromise.then(reg => {
            reg?.waiting?.postMessage({ type: 'SKIP_WAITING' });
          });
        });
      }

      if (dismissBtn && !(dismissBtn as any)._pwaBound) {
        (dismissBtn as any)._pwaBound = true;
        dismissBtn.addEventListener('click', () => {
          notification.classList.add('hidden');
        });
      }
    }

    // PWA install prompt
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    let deferredPrompt: BeforeInstallPromptEvent | null = null;

    const INSTALL_DISMISS_KEY = 'pwa-install-dismissed-at';
    const INSTALL_DISMISS_DAYS = 7;
    const INSTALL_SHOW_DELAY_MS = 20_000;

    function isStandaloneMode(): boolean {
      try {
        const navAny = window.navigator as any;
        return (
          window.matchMedia?.('(display-mode: standalone)').matches ||
          // iOS Safari (non-standard)
          navAny?.standalone === true
        );
      } catch {
        return false;
      }
    }

    function isDismissedRecently(): boolean {
      try {
        const raw = localStorage.getItem(INSTALL_DISMISS_KEY);
        if (!raw) return false;
        const ts = Number(raw);
        if (!Number.isFinite(ts)) return false;
        const days = (Date.now() - ts) / (1000 * 60 * 60 * 24);
        return days < INSTALL_DISMISS_DAYS;
      } catch {
        return false;
      }
    }

    function dismissInstallPrompt(): void {
      try {
        localStorage.setItem(INSTALL_DISMISS_KEY, String(Date.now()));
      } catch {
        // ignore
      }

      document.getElementById('pwa-install-prompt')?.classList.add('hidden');
    }

    interface BeforeInstallPromptEvent extends Event {
      prompt(): Promise<void>;
      userChoice: Promise<{ outcome: 'accepted' | 'dismissed' }>;
    }

    window.addEventListener('beforeinstallprompt', (e: Event) => {
      e.preventDefault();
      deferredPrompt = e as BeforeInstallPromptEvent;

      // Respect user choice + don't show inside installed standalone mode.
      if (isStandaloneMode() || isDismissedRecently()) return;

      // Show a custom prompt after the user has had time to engage.
      window.setTimeout(() => {
        // User may have installed or dismissed since the event fired.
        if (!deferredPrompt || isStandaloneMode() || isDismissedRecently())
          return;
        showInstallButton();
      }, INSTALL_SHOW_DELAY_MS);
    });

    function showInstallButton(): void {
      const promptEl = document.getElementById('pwa-install-prompt');
      const installBtn = document.getElementById('pwa-install-btn');
      const dismissBtn = document.getElementById('pwa-install-dismiss-btn');

      if (!promptEl || !installBtn) return;

      promptEl.classList.remove('hidden');

      // If the user is navigating by keyboard, announce the prompt.
      if (hadKeyboardEvent) {
        (promptEl as HTMLElement).focus({ preventScroll: true });
      }

      // Avoid duplicate handlers across Astro page transitions.
      if (!(installBtn as any)._pwaBound) {
        (installBtn as any)._pwaBound = true;
        installBtn.addEventListener('click', async () => {
          if (!deferredPrompt) return;
          await deferredPrompt.prompt();
          const { outcome } = await deferredPrompt.userChoice;
          console.log(`[PWA] Install prompt outcome: ${outcome}`);
          deferredPrompt = null;
          promptEl.classList.add('hidden');

          // If the user dismissed, keep it quiet for a bit.
          if (outcome === 'dismissed') {
            dismissInstallPrompt();
          }
        });
      }

      if (dismissBtn && !(dismissBtn as any)._pwaBound) {
        (dismissBtn as any)._pwaBound = true;
        dismissBtn.addEventListener('click', () => {
          dismissInstallPrompt();
        });
      }
    }

    window.addEventListener('appinstalled', () => {
      console.log('[PWA] App installed successfully');
      deferredPrompt = null;
      document.getElementById('pwa-install-prompt')?.classList.add('hidden');
    });
  })();
</script>

<!-- Update Notification -->
<div
  id="pwa-notification"
  class="fixed bottom-4 right-4 z-50 hidden max-w-sm rounded-lg border border-slate-700 bg-slate-800 p-4 shadow-2xl"
  role="status"
  aria-live="polite"
  aria-atomic="true"
  tabindex="-1"
>
  <div class="flex items-start gap-3">
    <div
      class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-blue-500/20"
    >
      <svg
        class="h-6 w-6 text-blue-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
        ></path>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-semibold text-white">Update Available</h3>
      <p class="mt-1 text-sm text-slate-300">
        A new version of the app is ready.
      </p>
      <div class="mt-3 flex gap-2">
        <ModernButton
          id="update-btn"
          variant="primary"
          size="xs"
          className="px-3 py-1.5 text-xs font-medium"
        >
          Update Now
        </ModernButton>
        <ModernButton
          id="dismiss-btn"
          variant="ghost"
          size="xs"
          className="px-3 py-1.5 text-xs font-medium text-slate-300 hover:text-white"
        >
          Later
        </ModernButton>
      </div>
    </div>
  </div>
</div>

<!-- PWA install prompt (demo-safe) -->
<div
  id="pwa-install-prompt"
  class="bottom-safe-bottom fixed bottom-20 left-4 right-4 z-50 hidden max-w-md md:bottom-4 md:left-4 md:right-auto"
  role="region"
  aria-label="Install app prompt"
  aria-live="polite"
  aria-atomic="true"
  tabindex="-1"
>
  <div
    class="rounded-2xl border border-white/10 bg-zinc-950/95 p-4 shadow-2xl backdrop-blur"
  >
    <div class="flex items-start justify-between gap-4">
      <div class="min-w-0">
        <h3 class="text-sm font-semibold text-white">Install this app</h3>
        <p class="mt-1 text-sm text-zinc-300">
          Add to your home screen for quicker access and a more app-like
          experience.
        </p>
      </div>
      <div class="flex flex-shrink-0 items-center gap-2">
        <ModernButton
          id="pwa-install-dismiss-btn"
          variant="ghost"
          size="xs"
          className="px-3 py-1.5 text-xs font-medium text-zinc-300 hover:text-white"
        >
          Later
        </ModernButton>
        <ModernButton
          id="pwa-install-btn"
          variant="gradient"
          size="xs"
          className="px-3 py-1.5 text-xs font-semibold"
        >
          <svg
            class="-mt-0.5 mr-2 inline-block h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
            ></path>
          </svg>
          Install App
        </ModernButton>
      </div>
    </div>
  </div>
</div>

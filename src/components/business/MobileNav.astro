---
import { withBasePath } from '../../utils/helpers';

const items = [
  { label: 'Home', href: withBasePath('/') },
  { label: 'Services', href: withBasePath('services/') },
  { label: 'Pricing', href: withBasePath('pricing/') },
  { label: 'About', href: withBasePath('about/') },
];
---

<nav
  aria-label="Primary navigation"
  class="fixed bottom-0 left-0 right-0 z-50 border-t border-white/10 bg-zinc-950/95 backdrop-blur md:hidden"
>
  <ul class="mx-auto flex max-w-[740px]">
    {
      items.map(item => (
        <li class="flex-1">
          <a
            class="flex flex-col items-center justify-center gap-1 py-3 text-[0.7rem] font-semibold text-zinc-300 hover:text-white"
            href={item.href}
          >
            <span
              class="h-1.5 w-1.5 rounded-full bg-accent-500/60"
              aria-hidden="true"
            />
            <span>{item.label}</span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>

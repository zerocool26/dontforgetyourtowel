---
import ModernCard from '../ui/ModernCard.astro';
import ModernButton from '../ui/ModernButton.astro';

export interface Props {
  name: string;
  price: string;
  description: string;
  perks: string[];
  highlight?: boolean;
  ctaLabel: string;
  ctaHref: string;
}

const {
  name,
  price,
  description,
  perks,
  highlight = false,
  ctaLabel,
  ctaHref,
} = Astro.props as Props;
---

<ModernCard
  variant="minimal"
  className={`flex h-full flex-col gap-6 p-7 ${highlight ? 'border-accent-500 bg-zinc-950' : 'border-white/10 bg-zinc-950/60 hover:border-white/20'} transition-colors`}
>
  <div class="space-y-3">
    <span
      class={`inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold uppercase tracking-[0.25em] ${highlight ? 'bg-accent-500/20 text-accent-200' : 'bg-white/5 text-zinc-300'}`}
    >
      {highlight ? 'Recommended' : 'Tier'}
    </span>
    <h3 class="text-2xl font-semibold text-white">{name}</h3>
    <p class="text-3xl font-semibold text-white">{price}</p>
    <p class="text-sm text-zinc-300">{description}</p>
  </div>

  <ul class="space-y-2 text-sm text-zinc-300">
    {
      perks.map(perk => (
        <li class="flex items-start gap-2">
          <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500" />
          <span>{perk}</span>
        </li>
      ))
    }
  </ul>

  <div class="mt-auto">
    <ModernButton
      href={ctaHref}
      variant={highlight ? 'primary' : 'secondary'}
      className="min-h-[48px] w-full"
    >
      {ctaLabel}
    </ModernButton>
  </div>
</ModernCard>

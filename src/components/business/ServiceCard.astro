---
import ModernCard from '../ui/ModernCard.astro';
import ModernButton from '../ui/ModernButton.astro';

export interface Props {
  title: string;
  description: string;
  price?: string;
  priceNote?: string;
  href?: string;
  bullets?: string[];
}

const {
  title,
  description,
  price,
  priceNote,
  href,
  bullets = [],
} = Astro.props as Props;
---

<ModernCard
  variant="minimal"
  className="h-full border-white/10 bg-zinc-950/60 p-6 transition-colors hover:border-accent-500/50"
>
  <div class="flex items-start justify-between gap-6">
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-white">{title}</h3>
      <p class="text-sm leading-relaxed text-zinc-300">{description}</p>
    </div>
    {
      price && (
        <div class="text-right">
          <p class="text-sm font-semibold text-white">{price}</p>
          {priceNote && <p class="text-[0.75rem] text-zinc-400">{priceNote}</p>}
        </div>
      )
    }
  </div>

  {
    bullets.length > 0 && (
      <ul class="mt-5 space-y-2 text-sm text-zinc-300">
        {bullets.map(item => (
          <li class="flex items-start gap-2">
            <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
    )
  }

  {
    href && (
      <div class="mt-6">
        <ModernButton
          href={href}
          variant="secondary"
          className="w-full min-h-[48px]"
        >
          Learn more
        </ModernButton>
      </div>
    )
  }
</ModernCard>

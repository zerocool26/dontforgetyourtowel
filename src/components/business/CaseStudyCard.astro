---
import ModernCard from '../ui/ModernCard.astro';

export interface Props {
  title: string;
  industry: string;
  summary: string;
  results: { label: string; value: string }[];
  href?: string;
}

const { title, industry, summary, results, href } = Astro.props as Props;
---

{
  href ? (
    <a
      href={href}
      class="block h-full rounded-2xl focus:outline-none focus-visible:ring-2 focus-visible:ring-accent-400 focus-visible:ring-offset-2 focus-visible:ring-offset-zinc-950"
    >
      <ModernCard
        variant="minimal"
        className="h-full p-6 bg-zinc-950/60 border-white/10 hover:border-accent-500/50 transition-colors"
      >
        <div class="flex items-start justify-between gap-4">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-accent-300">
              {industry}
            </p>
            <h3 class="mt-2 text-lg font-semibold text-white">{title}</h3>
          </div>
        </div>

        <p class="mt-3 text-sm leading-relaxed text-zinc-300">{summary}</p>

        <dl class="mt-5 grid grid-cols-2 gap-4">
          {results.slice(0, 4).map(item => (
            <div class="rounded-lg border border-white/10 bg-white/5 px-3 py-2">
              <dt class="text-[0.7rem] uppercase tracking-widest text-zinc-400">
                {item.label}
              </dt>
              <dd class="mt-1 text-sm font-semibold text-white">
                {item.value}
              </dd>
            </div>
          ))}
        </dl>
      </ModernCard>
    </a>
  ) : (
    <ModernCard
      variant="minimal"
      className="h-full p-6 bg-zinc-950/60 border-white/10 hover:border-accent-500/50 transition-colors"
    >
      <div class="flex items-start justify-between gap-4">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-accent-300">
            {industry}
          </p>
          <h3 class="mt-2 text-lg font-semibold text-white">{title}</h3>
        </div>
      </div>

      <p class="mt-3 text-sm leading-relaxed text-zinc-300">{summary}</p>

      <dl class="mt-5 grid grid-cols-2 gap-4">
        {results.slice(0, 4).map(item => (
          <div class="rounded-lg border border-white/10 bg-white/5 px-3 py-2">
            <dt class="text-[0.7rem] uppercase tracking-widest text-zinc-400">
              {item.label}
            </dt>
            <dd class="mt-1 text-sm font-semibold text-white">{item.value}</dd>
          </div>
        ))}
      </dl>
    </ModernCard>
  )
}

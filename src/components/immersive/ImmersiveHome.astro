---
import ImmersiveLabs from '../react/ImmersiveLabs.tsx';
const chapters = [
  // Longer, more cinematic scroll (chapters can repeat scenes intentionally)
  { id: 'origin' },
  { id: 'origin' },
  { id: 'interference' },
  { id: 'interference' },
  { id: 'field' },
  { id: 'field' },
  { id: 'lensing' },
  { id: 'lensing' },
  { id: 'collapse' },
  { id: 'collapse' },
  { id: 'afterglow' },
  { id: 'afterglow' },
];
---

<section
  class="ih"
  data-ih=""
  data-ih-scene="origin"
  style={`--ih-chapters:${chapters.length}`}
>
  <div class="ih-stage" aria-hidden="true">
    <canvas class="ih-canvas" data-ih-canvas></canvas>

    <div class="ih-space">
      <div class="ih-core" data-ih-css-core aria-hidden="true">
        <div class="ih-core-shell"></div>
        <div class="ih-core-spark"></div>
      </div>

      <div class="ih-debug" data-ih-debug aria-hidden="true"></div>

      <div class="ih-hint" data-ih-hint aria-hidden="true">
        <span class="ih-hint-pill">Tap to pulse Â· Pinch to zoom</span>
      </div>

      <div class="ih-layer ih-stars"></div>
      <div class="ih-layer ih-fog"></div>
      <div class="ih-layer ih-halo"></div>
      <div class="ih-layer ih-rings"></div>
      <div class="ih-layer ih-sweep"></div>

      <div class="ih-portal-glint" aria-hidden="true"></div>

      <!-- Pure cinematic mode: no on-screen HUD -->
    </div>
  </div>

  <div class="ih-progress" aria-hidden="true">
    <span class="ih-progress-bar"></span>
  </div>

  <div class="ih-track" aria-hidden="true">
    {
      chapters.map(ch => (
        <section class="ih-chapter" data-ih-chapter="" data-scene={ch.id} />
      ))
    }
  </div>

  <div class="ih-content">
    <div class="ih-content-inner">
      <header class="ih-panel ih-panel-intro" data-ih-panel>
        <p class="ih-eyebrow">Immersive systems</p>
        <h2 class="ih-title ih-split" data-split>
          Multi-layered interaction for the full scroll journey
        </h2>
        <p class="ih-lede">
          Keep the hero, but evolve everything around it: tactile copy blocks,
          motion-driven lab modules, and a responsive R3F sandbox tuned for
          mobile.
        </p>
        <div class="ih-metrics">
          <div class="ih-metric">
            <span>Adaptive GPU</span>
            <strong>Smart scaling</strong>
          </div>
          <div class="ih-metric">
            <span>Scroll intelligence</span>
            <strong>Lenis + GSAP</strong>
          </div>
          <div class="ih-metric">
            <span>Interactive core</span>
            <strong>R3F + Theatre</strong>
          </div>
        </div>
      </header>

      <section class="ih-panel ih-rail" data-ih-panel data-ih-rail>
        <p class="ih-eyebrow">Journey map</p>
        <h3 class="ih-title ih-split" data-split>
          The whole scroll is now choreographed, not just the hero
        </h3>
        <div class="ih-rail-track">
          {
            [
              'Origin',
              'Interference',
              'Field',
              'Lensing',
              'Collapse',
              'Afterglow',
            ].map((label, i) => (
              <div class="ih-rail-item" data-ih-rail-item data-index={i}>
                <span class="ih-rail-dot" />
                <span class="ih-rail-label">{label}</span>
              </div>
            ))
          }
        </div>
        <p class="ih-lede">
          Scroll progress drives the rail, lighting up the current chapter while
          keeping the rest visible for context.
        </p>
      </section>

      <section class="ih-panel ih-modes" data-ih-panel>
        <p class="ih-eyebrow">Interactive modes</p>
        <h3 class="ih-title ih-split" data-split>
          Tap a mode to remap the cinematic energy
        </h3>
        <p class="ih-lede">
          Each mode biases the overlays and scroll grading to keep the journey
          reactive without touching the core 3D hero system.
        </p>
        <div class="ih-mode-grid" role="list">
          {
            ['Calm', 'Boost', 'Prism', 'Pulse'].map(mode => (
              <button
                class="ih-mode"
                type="button"
                data-ih-mode
                data-mode={mode.toLowerCase()}
              >
                <span class="ih-mode-title">{mode}</span>
                <span class="ih-mode-caption">Adaptive overlay bias</span>
              </button>
            ))
          }
        </div>
      </section>

      <ImmersiveLabs client:visible />

      <section class="ih-panel ih-panel-outro" data-ih-panel>
        <h3 class="ih-title ih-split" data-split>
          Motion, narrative, and data all stitched into one scroll
        </h3>
        <p class="ih-lede">
          Every chapter now layers cinematic depth, tactile UI, and elastic
          motion, so the whole homepage feels alive on desktop and mobile.
        </p>
        <div class="ih-pill-row">
          <span class="ih-pill">Framer Motion reveals</span>
          <span class="ih-pill">Leva live tuning</span>
          <span class="ih-pill">Postprocessed R3F</span>
        </div>
      </section>
    </div>
  </div>

  <div class="sr-only" aria-live="polite">Immersive home experience.</div>
</section>

<style>
  .ih {
    position: relative;
    /* The scroll experience is intentionally long.
       Use dynamic viewport height where available to prevent "ending early"
       on mobile browsers with collapsing address bars. */
    min-height: calc(var(--ih-chapters, 6) * 160vh);
    background:
      radial-gradient(
        120% 90% at 50% 18%,
        rgba(59, 130, 246, 0.18),
        transparent 60%
      ),
      radial-gradient(
        85% 70% at 55% 25%,
        rgba(168, 85, 247, 0.16),
        transparent 62%
      ),
      radial-gradient(circle at 50% 20%, #0b1222, #020617 60%);
    overflow: clip;
    isolation: isolate;

    /* Mobile interaction reliability:
       - avoids double-tap zoom stealing our interactions
       - keeps scroll behavior natural
       - still allows pinch (we selectively preventDefault only during 2-finger gestures) */
    touch-action: manipulation;

    /* driven by script */
    --ih-scroll: 0;
    --ih-local: 0;
    --ih-vel: 0;
    --ih-progress: 0;
    --ih-parallax-x: 0;
    --ih-parallax-y: 0;
    --ih-pointer-x: 0;
    --ih-pointer-y: 0;
    --ih-energy: 0;
    --ih-energy-soft: 0;
    --ih-direction: 1;
    --ih-burst: 0;
    --ih-event: 0;
    --ih-pinch: 0;
    --ih-quality: 1;
    --ih-hue: 210;
    --ih-hue-2: 280;
    --ih-grade: 0.2;

    --ih-portal-x: 0.5;
    --ih-portal-y: 0.5;
    --ih-portal-r: 0.36;
  }

  @supports (height: 100dvh) {
    .ih {
      min-height: calc(var(--ih-chapters, 6) * 1.6 * var(--viewport-height));
    }
  }

  @media (max-width: 768px) {
    .ih {
      min-height: calc(var(--ih-chapters, 6) * 200vh);
    }

    @supports (height: 100dvh) {
      .ih {
        min-height: calc(var(--ih-chapters, 6) * 2 * var(--viewport-height));
      }
    }
  }

  .ih-stage {
    position: fixed;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    transform: translateZ(0);
    will-change: transform;
  }

  .ih-portal-glint {
    position: absolute;
    left: calc(var(--ih-portal-x, 0.5) * 100%);
    top: calc(var(--ih-portal-y, 0.5) * 100%);
    width: calc(var(--ih-portal-r, 0.36) * 2 * 100vmin);
    height: calc(var(--ih-portal-r, 0.36) * 2 * 100vmin);
    transform: translate(-50%, -50%);
    border-radius: 999px;
    pointer-events: none;
    opacity: calc(
      0.08 + var(--ih-impact, 0) * 0.22 + var(--ih-pressure, 0) * 0.18
    );
    will-change: transform, opacity;

    /* A crisp ring + soft inner sheen. Keep it cheap: no blur filters. */
    background:
      radial-gradient(
        circle at 28% 26%,
        rgba(255, 255, 255, 0.12),
        transparent 42%
      ),
      radial-gradient(
        circle at 50% 50%,
        transparent 60%,
        hsla(var(--ih-hue), 90%, 70%, 0.16) 62%,
        hsla(var(--ih-hue-2), 90%, 72%, 0.12) 66%,
        transparent 70%
      );
  }

  .ih-progress {
    position: fixed;
    right: clamp(16px, 3vw, 32px);
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: min(48vh, 420px);
    border-radius: 999px;
    background: rgba(148, 163, 184, 0.2);
    overflow: hidden;
    z-index: 3;
    box-shadow: 0 0 18px rgba(15, 23, 42, 0.4);
  }

  .ih-progress-bar {
    position: absolute;
    inset: auto 0 0 0;
    height: calc(var(--ih-progress) * 100%);
    background: linear-gradient(180deg, #22d3ee, #6366f1, #ec4899);
    border-radius: 999px;
    box-shadow: 0 0 24px rgba(99, 102, 241, 0.7);
    transition: height 120ms ease-out;
  }

  /* Premium vignette + subtle grade (keeps it clean, not noisy) */
  .ih::before {
    content: '';
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    background:
      radial-gradient(
        80% 65% at 50% 40%,
        rgba(255, 255, 255, 0.03),
        rgba(2, 6, 23, 0.75) 70%
      ),
      linear-gradient(
        180deg,
        rgba(2, 6, 23, 0.45),
        rgba(2, 6, 23, 0) 45%,
        rgba(2, 6, 23, 0.55)
      );
    mix-blend-mode: multiply;
  }

  /* Cinematic pulse/shockwave, driven by --ih-burst */
  .ih-stage::after {
    content: '';
    position: absolute;
    inset: -20%;
    pointer-events: none;
    opacity: calc(0.04 + (var(--ih-burst) * 0.22) + (var(--ih-event) * 0.16));
    /* Cleaner grade: two-tone (cyan -> violet) instead of rainbow */
    background: radial-gradient(
      circle at 50% 50%,
      rgba(255, 255, 255, 0.12),
      hsla(var(--ih-hue), 90%, 60%, 0.14) 22%,
      hsla(var(--ih-hue-2), 90%, 62%, 0.1) 46%,
      rgba(2, 6, 23, 0) 72%
    );
    transform: scale(
      calc(0.92 + (var(--ih-burst) * 0.22) + (var(--ih-event) * 0.08))
    );
    filter: blur(
      calc(10px + (var(--ih-burst) * 18px) + (var(--ih-event) * 10px))
    );
    mix-blend-mode: screen;
    transition: opacity 200ms ease;
  }

  /* Clean cinematic rings (scroll + touch driven) */
  .ih-rings {
    position: absolute;
    inset: 0;
    transform: translateZ(140px);
    opacity: calc(0.18 + (var(--ih-impact) * 0.42));
    mix-blend-mode: screen;
    pointer-events: none;
  }

  .ih-rings::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: min(90vmin, 920px);
    height: min(90vmin, 920px);
    transform: translate(-50%, -50%)
      rotate(calc((var(--ih-scroll) * 220deg) + (var(--ih-parallax-x) * 8deg)))
      scale(calc(0.92 + (var(--ih-impact) * 0.08) + (var(--ih-pinch) * 0.03)));
    border-radius: 999px;
    background:
      radial-gradient(
        circle at 50% 50%,
        rgba(255, 255, 255, 0) 46%,
        rgba(255, 255, 255, 1) 56%,
        rgba(255, 255, 255, 0) 66%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(255, 255, 255, 0) 28%,
        rgba(255, 255, 255, 1) 38%,
        rgba(255, 255, 255, 0) 48%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(255, 255, 255, 0) 62%,
        rgba(255, 255, 255, 1) 70%,
        rgba(255, 255, 255, 0) 78%
      );
    mask:
      radial-gradient(
        circle at 50% 50%,
        transparent 0 22%,
        #000 26% 84%,
        transparent 88%
      ),
      radial-gradient(circle at 42% 38%, #000 0 26%, transparent 52%);
    -webkit-mask:
      radial-gradient(
        circle at 50% 50%,
        transparent 0 22%,
        #000 26% 84%,
        transparent 88%
      ),
      radial-gradient(circle at 42% 38%, #000 0 26%, transparent 52%);
    filter: blur(1px) saturate(1.1);
    opacity: calc(0.18 + (var(--ih-impact) * 0.58));
  }

  .ih-rings::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: min(72vmin, 720px);
    height: min(72vmin, 720px);
    transform: translate(-50%, -50%)
      rotate(
        calc((var(--ih-scroll) * -260deg) + (var(--ih-parallax-y) * -10deg))
      )
      scale(calc(0.94 + (var(--ih-event) * 0.06) + (var(--ih-burst) * 0.06)));
    border-radius: 999px;
    background: conic-gradient(
      from 90deg,
      rgba(255, 255, 255, 0),
      hsla(var(--ih-hue), 90%, 62%, 0.22),
      hsla(var(--ih-hue-2), 90%, 62%, 0.18),
      rgba(255, 255, 255, 0)
    );
    mask: radial-gradient(
      circle at 50% 50%,
      transparent 54%,
      #000 62%,
      transparent 70%
    );
    -webkit-mask: radial-gradient(
      circle at 50% 50%,
      transparent 54%,
      #000 62%,
      transparent 70%
    );
    filter: blur(2.2px) saturate(1.15);
    opacity: calc(0.12 + (var(--ih-impact) * 0.55));
  }

  /* Subtle scanline/glint pass during chapter flips (purely visual) */
  .ih-stage::before {
    content: '';
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: calc(var(--ih-event) * 0.22);
    background:
      repeating-linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.08) 0px,
        rgba(255, 255, 255, 0) 2px,
        rgba(255, 255, 255, 0) 10px
      ),
      radial-gradient(
        120% 90% at 50% 40%,
        rgba(56, 189, 248, 0.14),
        rgba(2, 6, 23, 0) 58%
      );
    mix-blend-mode: screen;
    filter: blur(0.2px) saturate(1.2);
    transform: translateZ(0);
  }

  .ih-canvas {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0.95;
    mix-blend-mode: screen;
    filter: saturate(calc(1.05 + (var(--ih-burst) * 0.22)))
      contrast(calc(1.05 + (var(--ih-burst) * 0.16) + (var(--ih-grade) * 0.08)))
      brightness(calc(1 + (var(--ih-event) * 0.08) + (var(--ih-grade) * 0.06)))
      blur(calc((1 - var(--ih-quality)) * 0.9px));
  }

  /* CSS-only fallback core (shown when WebGL is unavailable/disabled).
     IMPORTANT: keep this fully hidden during WebGL to avoid the two
     "centers" fighting (canvas vs CSS) on mobile GPUs. */
  .ih-core {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
    transform: translateZ(320px);
    opacity: 0;
    pointer-events: none;
  }

  .ih[data-ih-center='css'] .ih-core {
    opacity: 0.95;
  }

  .ih[data-ih-center='css'] .ih-canvas {
    display: none;
  }

  .ih-debug {
    position: absolute;
    left: 12px;
    bottom: 12px;
    z-index: 4;
    max-width: min(92vw, 560px);
    padding: 10px 12px;
    border-radius: 12px;
    font-family:
      ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono',
      'Courier New', monospace;
    font-size: 12px;
    line-height: 1.35;
    color: rgba(226, 232, 240, 0.92);
    background: rgba(2, 6, 23, 0.55);
    border: 1px solid rgba(148, 163, 184, 0.22);
    backdrop-filter: blur(10px);
    box-shadow: 0 18px 60px rgba(2, 6, 23, 0.45);
    opacity: 0;
    transform: translateY(6px);
    transition:
      opacity 180ms ease,
      transform 180ms ease;
    pointer-events: none;
    white-space: pre-wrap;
  }

  .ih-hint {
    position: absolute;
    left: 50%;
    bottom: clamp(16px, 4vh, 40px);
    transform: translateX(-50%);
    z-index: 4;
    opacity: 0;
    transition:
      opacity 260ms ease,
      transform 260ms ease;
    pointer-events: none;
  }

  .ih-hint-pill {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 14px;
    border-radius: 999px;
    font-size: 12px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(226, 232, 240, 0.82);
    background: rgba(2, 6, 23, 0.55);
    border: 1px solid rgba(148, 163, 184, 0.22);
    backdrop-filter: blur(10px);
    box-shadow: 0 18px 60px rgba(2, 6, 23, 0.45);
  }

  @media (pointer: coarse) {
    .ih[data-ih-rendered='1'] .ih-hint {
      opacity: 0.92;
      transform: translateX(-50%) translateY(0);
    }

    .ih[data-ih-touched='1'] .ih-hint {
      opacity: 0;
      transform: translateX(-50%) translateY(8px);
    }
  }

  .ih[data-ih-debug='1'] .ih-debug {
    opacity: 1;
    transform: translateY(0);
  }

  .ih[data-ih-status]:not([data-ih-status='ok']):not([data-ih-status=''])
    .ih-debug {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mobile Safari / low-power GPUs: screen blend can make a darker WebGL frame
     appear almost invisible against a dark background. Prefer normal compositing
     and simpler filters for reliability. */
  @media (max-width: 768px) {
    .ih-stage::before,
    .ih-stage::after {
      mix-blend-mode: normal;
      filter: none;
      opacity: calc(0.02 + (var(--ih-event) * 0.14) + (var(--ih-burst) * 0.12));
    }

    .ih-canvas {
      mix-blend-mode: normal;
      opacity: 1;
      /* Avoid filter chains that can cause banding or near-invisibility on some GPUs */
      filter: none;
    }

    .ih-rings {
      mix-blend-mode: normal;
      opacity: calc(0.12 + (var(--ih-impact) * 0.28));
    }

    /* Chrome mobile tends to flicker when animating large blurred layers while
       a fixed WebGL canvas is updating beneath. Firefox mobile is typically fine.
       Keep the look, reduce the most expensive compositing work only on Chrome. */
    .ih[data-ih-browser='chrome'] .ih-fog {
      animation: none;
      filter: blur(14px) saturate(1.1);
      opacity: 0.78;
    }

    .ih[data-ih-browser='chrome'] .ih-stars {
      animation-duration: 34s;
      opacity: 0.34;
    }
  }

  .ih-space {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
    perspective: 1200px;
    transform: translateZ(0);

    /* Camera */
    transform: translate3d(
        calc(var(--ih-parallax-x) * -10px),
        calc(var(--ih-parallax-y) * -10px),
        0
      )
      rotateX(calc(var(--ih-parallax-y) * -7deg))
      rotateY(calc(var(--ih-parallax-x) * 10deg))
      rotateZ(calc((var(--ih-scroll) - 0.5) * -6deg))
      scale(calc(1 + (var(--ih-pinch) * 0.04) + (var(--ih-event) * 0.015)));
  }

  /* The CSS fallback core styles (kept authored/pretty, but only visible when
     we are in CSS mode). */
  .ih[data-ih-center='css'] .ih-core {
    mix-blend-mode: screen;
  }

  .ih[data-ih-center='css'] .ih-core::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: min(72vmin, 720px);
    height: min(72vmin, 720px);
    transform: translate3d(-50%, -50%, 0)
      scale(calc(0.88 + (var(--ih-burst) * 0.08) + (var(--ih-pinch) * 0.05)));
    border-radius: 999px;
    background: radial-gradient(
      circle at 42% 38%,
      rgba(255, 255, 255, 0.28),
      hsla(var(--ih-hue), 90%, 62%, 0.22) 28%,
      hsla(var(--ih-hue-2), 90%, 62%, 0.16) 48%,
      rgba(2, 6, 23, 0) 68%
    );
    filter: blur(10px) saturate(1.25);
  }

  .ih[data-ih-center='css'] .ih-core::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: min(42vmin, 420px);
    height: min(42vmin, 420px);
    transform: translate3d(-50%, -50%, 0)
      rotate(calc(var(--ih-scroll) * 220deg))
      scale(calc(0.96 + (var(--ih-event) * 0.04)));
    border-radius: 999px;
    background: conic-gradient(
      from 180deg,
      hsla(var(--ih-hue), 90%, 60%, 0),
      hsla(var(--ih-hue), 90%, 65%, 0.36),
      hsla(var(--ih-hue-2), 90%, 64%, 0.3),
      hsla(var(--ih-hue-2), 90%, 62%, 0.22),
      hsla(var(--ih-hue), 90%, 60%, 0)
    );
    -webkit-mask:
      radial-gradient(circle at 50% 50%, transparent 42%, #000 56%),
      radial-gradient(circle at 46% 38%, #000 0 32%, transparent 55%);
    mask:
      radial-gradient(circle at 50% 50%, transparent 42%, #000 56%),
      radial-gradient(circle at 46% 38%, #000 0 32%, transparent 55%);
    filter: blur(1.2px) saturate(1.1);
    opacity: calc(0.55 + (var(--ih-burst) * 0.18) + (var(--ih-event) * 0.14));
  }

  .ih[data-ih-center='css'] .ih-core-shell {
    position: absolute;
    left: 50%;
    top: 50%;
    width: min(30vmin, 300px);
    height: min(30vmin, 300px);
    transform: translate3d(-50%, -50%, 0)
      rotate(calc(var(--ih-scroll) * -120deg));
    border-radius: 999px;
    border: 1px solid hsla(var(--ih-hue), 90%, 70%, 0.35);
    box-shadow:
      0 0 40px hsla(var(--ih-hue-2), 90%, 70%, 0.22),
      inset 0 0 30px rgba(255, 255, 255, 0.08);
    opacity: calc(0.5 + (var(--ih-event) * 0.2));
  }

  .ih[data-ih-center='css'] .ih-core-spark {
    position: absolute;
    left: 50%;
    top: 50%;
    width: min(18vmin, 180px);
    height: min(18vmin, 180px);
    transform: translate3d(-50%, -50%, 0)
      rotate(calc(var(--ih-scroll) * 260deg))
      scale(calc(0.9 + (var(--ih-burst) * 0.2)));
    border-radius: 999px;
    background: radial-gradient(
      circle at 40% 40%,
      rgba(255, 255, 255, 0.5),
      hsla(var(--ih-hue), 90%, 65%, 0.18) 50%,
      rgba(2, 6, 23, 0) 72%
    );
    filter: blur(2px);
    opacity: calc(0.6 + (var(--ih-burst) * 0.25));
  }

  .ih-halo {
    position: absolute;
    inset: 0;
    transform: translateZ(180px);

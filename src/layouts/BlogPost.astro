---
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { getMarkdownReadingTime } from '../utils/reading-time';
import WebVitals from '../components/WebVitals.astro';
import ErrorTracking from '../components/ErrorTracking.astro';
import StructuredData from '../components/StructuredData.astro';
import CommandPalette from '../components/CommandPalette';
import ToastContainer from '../components/ToastContainer';
import TableOfContents from '../components/TableOfContents.astro';
import type { MarkdownHeading } from 'astro';

type Props = CollectionEntry<'blog'>['data'] & {
  readingTime?: string;
  headings?: MarkdownHeading[];
};

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  readingTime,
  author,
  headings,
} = Astro.props;

// Define local interface to bypass potential stale type generation issues
interface AuthorEntry {
  data: {
    name: string;
    role: string;
    avatar?: string;
    bio: string;
    twitter?: string;
    github?: string;
  };
}

const authorData = (
  author ? await getEntry(author) : null
) as AuthorEntry | null;

// Calculate reading time from slot content if not provided
let displayReadingTime = readingTime;
if (!displayReadingTime && Astro.slots.has('default')) {
  const content = await Astro.slots.render('default');
  const rtInfo = getMarkdownReadingTime(content);
  displayReadingTime = rtInfo.text;
}
---

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage}
      type="article"
      author={authorData?.data.name}
      publishDate={pubDate}
    />
    <StructuredData
      type="article"
      data={{
        title,
        description,
        pubDate: pubDate.toISOString(),
        updatedDate: updatedDate?.toISOString(),
        image: heroImage?.src,
      }}
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-[100] focus:rounded-lg focus:bg-indigo-600 focus:px-4 focus:py-2 focus:text-white focus:outline-none focus:ring-2 focus:ring-indigo-400"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content">
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <Image
                width={1020}
                height={510}
                src={heroImage}
                alt={`Cover image for ${title}`}
                loading="eager"
                fetchpriority="high"
              />
            )
          }
        </div>
        <div class="relative mx-auto max-w-6xl px-4 lg:flex lg:gap-12 lg:px-8">
          <div class="prose mx-auto w-full max-w-[720px] lg:mx-0">
            <header class="title">
              <div class="date">
                <time datetime={pubDate.toISOString()}>
                  <FormattedDate date={pubDate} />
                </time>
                {
                  displayReadingTime && (
                    <span class="reading-time" title="Estimated reading time">
                      {' '}
                      · {displayReadingTime}
                    </span>
                  )
                }
                {
                  updatedDate && (
                    <div class="last-updated-on">
                      Last updated on{' '}
                      <time datetime={updatedDate.toISOString()}>
                        <FormattedDate date={updatedDate} />
                      </time>
                    </div>
                  )
                }
              </div>
              <h1>{title}</h1>
              {
                authorData && (
                  <div class="author-info">
                    <span class="byline">By {authorData.data.name}</span>
                    {authorData.data.role && (
                      <span class="role"> · {authorData.data.role}</span>
                    )}
                  </div>
                )
              }
              <hr />
            </header>
            <slot />
          </div>
          {
            headings && headings.length > 0 && (
              <aside class="hidden w-[250px] shrink-0 lg:block">
                <TableOfContents headings={headings} />
              </aside>
            )
          }
        </div>
      </article>
    </main>
    <Footer />
    <CommandPalette client:idle />
    <ToastContainer client:idle />
    <WebVitals />
    <ErrorTracking />
  </body>
</html>

<style>
  .author-info {
    margin-top: 0.5em;
    font-size: 0.9em;
    color: rgb(var(--gray));
    text-align: center;
  }
</style>

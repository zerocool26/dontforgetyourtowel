---
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { getMarkdownReadingTime } from '../utils/reading-time';
import WebVitals from '../components/WebVitals.astro';
import ErrorTracking from '../components/ErrorTracking.astro';
import StructuredData from '../components/StructuredData.astro';
import PWARegistration from '../components/PWARegistration.astro';
import CommandPalette from '../components/CommandPalette';
import ToastContainer from '../components/ToastContainer';
import TableOfContents from '../components/TableOfContents.astro';
import type { MarkdownHeading } from 'astro';
import { withBasePath } from '../utils/helpers';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  heroImage?: any;
  draft?: boolean;
  readingTime?: string;
  headings?: MarkdownHeading[];
  author?: unknown;
  relatedPosts?: Array<{
    id: string;
    title: string;
    description: string;
    url: string;
    pubDate?: Date;
  }>;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  readingTime,
  author,
  headings,
  relatedPosts,
} = Astro.props;

// Define local interface to bypass potential stale type generation issues
interface AuthorEntry {
  data: {
    name: string;
    role: string;
    avatar?: string;
    bio: string;
    twitter?: string;
    github?: string;
  };
}

const authorData = (
  author && typeof author !== 'string' ? await getEntry(author as any) : null
) as AuthorEntry | null;

const authorName = typeof author === 'string' ? author : authorData?.data?.name;
const authorRole = authorData?.data?.role;

// Calculate reading time from slot content if not provided
let displayReadingTime = readingTime;
if (!displayReadingTime && Astro.slots.has('default')) {
  const content = await Astro.slots.render('default');
  const rtInfo = getMarkdownReadingTime(content);
  displayReadingTime = rtInfo.text;
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage}
      type="article"
      author={authorName}
      publishDate={pubDate}
    />
    <StructuredData
      type="article"
      data={{
        title,
        description,
        pubDate: pubDate.toISOString(),
        updatedDate: updatedDate?.toISOString(),
        image: heroImage?.src,
      }}
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--shadow-strong);
      }
      .prose {
        padding: 1em;
        color: var(--color-text-primary);
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: var(--color-text-secondary);
      }
      .last-updated-on {
        font-style: italic;
      }
      .author-info {
        margin-top: 0.5em;
        font-size: 0.9em;
        color: var(--color-text-secondary);
        text-align: center;
      }
    </style>
  </head>

  <body class="antialiased">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-[100] focus:rounded-sm focus:bg-accent-600 focus:px-4 focus:py-2 focus:text-white focus:outline-none focus:ring-2 focus:ring-accent-400"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content" tabindex="-1">
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <Image
                width={1020}
                height={510}
                src={heroImage}
                alt={`Cover image for ${title}`}
                loading="eager"
                fetchpriority="high"
              />
            )
          }
        </div>
        <div class="relative mx-auto max-w-6xl px-4 lg:flex lg:gap-12 lg:px-8">
          <div class="prose mx-auto w-full max-w-[720px] lg:mx-0">
            <header class="title">
              <div class="date">
                <time datetime={pubDate.toISOString()}>
                  <FormattedDate date={pubDate} />
                </time>
                {
                  displayReadingTime && (
                    <span class="reading-time" title="Estimated reading time">
                      {' '}
                      · {displayReadingTime}
                    </span>
                  )
                }
                {
                  updatedDate && (
                    <div class="last-updated-on">
                      Last updated on{' '}
                      <time datetime={updatedDate.toISOString()}>
                        <FormattedDate date={updatedDate} />
                      </time>
                    </div>
                  )
                }
              </div>
              <h1>{title}</h1>
              {
                authorName && (
                  <div class="author-info">
                    <span class="byline">By {authorName}</span>
                    {authorRole && <span class="role"> · {authorRole}</span>}
                  </div>
                )
              }
              <hr />
            </header>
            <slot />

            {
              relatedPosts && relatedPosts.length > 0 && (
                <aside
                  class="mt-12 border-t border-white/10 pt-8"
                  aria-labelledby="related-posts-title"
                >
                  <h2
                    id="related-posts-title"
                    class="m-0 text-xl font-semibold text-white"
                  >
                    Related posts
                  </h2>
                  <ul class="mt-4 grid list-none gap-4 p-0 sm:grid-cols-2">
                    {relatedPosts.map(post => (
                      <li class="m-0 rounded-xl border border-white/10 bg-zinc-950/40 p-4">
                        <a
                          class="text-base font-semibold text-accent-300 hover:underline"
                          href={withBasePath(post.url)}
                        >
                          {post.title}
                        </a>
                        <p class="mt-2 text-sm leading-relaxed text-zinc-300">
                          {post.description}
                        </p>
                      </li>
                    ))}
                  </ul>
                </aside>
              )
            }
          </div>
          {
            headings && headings.length > 0 && (
              <aside class="hidden w-[250px] shrink-0 lg:block">
                <TableOfContents headings={headings} />
              </aside>
            )
          }
        </div>
      </article>
    </main>
    <PWARegistration />
    <CommandPalette client:only="preact" />
    <ToastContainer client:only="preact" />
    <WebVitals />
    <ErrorTracking />
  </body>
</html>

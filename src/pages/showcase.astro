---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';
import ModernButton from '../components/ui/ModernButton.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
import Grid from '../components/ui/Grid.astro';
import Stats from '../components/ui/Stats.astro';
import LegacyRedirect from '../components/LegacyRedirect.astro';

type CardVariant =
  | 'outline'
  | 'gradient'
  | 'neon'
  | 'glass'
  | 'bordered'
  | 'default'
  | 'minimal'
  | 'elevated'
  | undefined;

const buttonVariants = [
  {
    variant: 'primary',
    label: 'Primary CTA',
    description:
      'Gradient-backed hero button for the single most important flow.',
  },
  {
    variant: 'secondary',
    label: 'Secondary CTA',
    description: 'Low-lift action used next to primaries and inside cards.',
  },
  {
    variant: 'outline',
    label: 'Ghost Surface',
    description: 'High contrast outline for toolbars and content actions.',
  },
  {
    variant: 'gradient',
    label: 'Marketing Spark',
    description: 'Animated gradient for launch moments and promo blocks.',
  },
  {
    variant: 'neon',
    label: 'Attention Pulse',
    description: 'Use sparingly for labs, beta features, or system alerts.',
  },
];

const cardShowcase: {
  title: string;
  variant: CardVariant;
  badge: string;
  description: string;
  points: string[];
}[] = [
  {
    title: 'Glass metrics',
    variant: 'glass',
    badge: 'Realtime ready',
    description: 'Layer subtle gradients with telemetry pills for quant proof.',
    points: ['Latency stabilized at 92ms', 'Sync health holding at 99.8%'],
  },
  {
    title: 'Neon insights',
    variant: 'neon',
    badge: 'Narrative led',
    description:
      'Pair iconography with short blurbs to call attention to wins.',
    points: ['Playbooks ship weekly', 'Security posture auto audited'],
  },
  {
    title: 'Bordered content',
    variant: 'bordered',
    badge: 'Editorial safe',
    description: 'Structured cards for blog digests or release note snippets.',
    points: ['MDX compatible', 'Frictionless copy/paste tokens'],
  },
];

const typographyScale = [
  {
    label: 'Display',
    sample: 'Ship delightful UI systems',
    className: 'text-4xl md:text-5xl font-semibold tracking-tight',
    token: '--font-size-4xl | --line-height-relaxed',
  },
  {
    label: 'Headline',
    sample: 'Opinionated defaults reduce meetings',
    className: 'text-2xl md:text-3xl font-semibold tracking-tight',
    token: '--font-size-3xl | --line-height-normal',
  },
  {
    label: 'Eyebrow',
    sample: 'SYSTEM_STATUS_OK',
    className: 'text-sm font-mono uppercase tracking-[0.35em]',
    token: '--font-size-sm | letter-spacing: 0.35em',
  },
  {
    label: 'Body',
    sample: 'Purpose-built for static deployments + high-trust teams.',
    className: 'text-base text-neutral-600',
    token: '--font-size-base | --line-height-relaxed',
  },
];

const utilityTokens = [
  {
    label: 'Spacing scale',
    value: '0.25rem → 3rem',
    token: '--spacing-xs…--spacing-4xl',
    description: 'Used by Grid + Section pads to maintain breathing room.',
  },
  {
    label: 'Radius presets',
    value: '8px / 16px / 24px',
    token: '--radius-sm…--radius-xl',
    description: 'Applies to cards, inputs, and avatar shells for cohesion.',
  },
  {
    label: 'Elevation steps',
    value: 'Shadows 100 → 900',
    token: '--shadow-sm…--shadow-strong',
    description: 'Pre-tuned to look soft in light mode and crisp in dark.',
  },
];

const statShowcase = {
  title: 'Production-ready primitives',
  subtitle: 'Numbers pulled directly from the starter configuration.',
  stats: [
    {
      label: 'Patterns shipped',
      value: '32',
      description: 'Hero, pricing, dashboard, blog',
    },
    {
      label: 'Design tokens',
      value: '64',
      description: 'Color, type, motion, spacing',
    },
    {
      label: 'Runtime JS',
      value: '6kb',
      description: 'Theme toggle + analytics hook',
    },
    {
      label: 'Test suites',
      value: '45',
      description: 'Vitest + Playwright coverage',
    },
  ],
};
---

<LegacyRedirect
  destination="/"
  reason="This page was part of the original starter template and has been removed."
/>


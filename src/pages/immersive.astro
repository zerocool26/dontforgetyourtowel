---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import ImmersiveHome from '../components/immersive/ImmersiveHome.astro';

const title = 'Immersive 3D Lab';
const description =
  'A full-screen, scroll-driven 3D showcase featuring cinematic WebGL-style layers and a modular scene system.';
---

<MarketingLayout
  title={title}
  description={description}
  bodyClass="bg-zinc-950"
  mainClass="p-0"
  showFooter={false}
  showStickyCTA={false}
  showHeader={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <ImmersiveHome />
</MarketingLayout>

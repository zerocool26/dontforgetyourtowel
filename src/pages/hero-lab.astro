---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import Hero3DUltra from '../components/ui/Hero3DUltra.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import { withBasePath } from '../utils/helpers';

const pageTitle = 'Hero Lab';
const pageDescription =
  'Interactive hero tuning with live telemetry, presets, and adaptive quality tiers.';

const ctas = [
  { label: 'Demo Lab', href: withBasePath('demo-lab/'), variant: 'outline' },
  {
    label: 'Shop Demo',
    href: withBasePath('shop-demo/'),
    variant: 'secondary',
  },
  { label: 'Contact', href: withBasePath('contact/'), variant: 'primary' },
];
---

<MarketingLayout title={pageTitle} description={pageDescription}>
  <div class="mx-auto w-full max-w-[1200px] px-5 pt-16 sm:px-6 lg:px-8">
    <header class="space-y-4">
      <div
        class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 font-mono text-xs uppercase tracking-widest text-zinc-200"
      >
        <span class="h-2 w-2 rounded-full bg-accent-500" aria-hidden="true"
        ></span>
        {pageTitle}
      </div>
      <h1
        class="font-display text-4xl font-bold tracking-tight text-white sm:text-5xl"
      >
        {pageTitle}
      </h1>
      <p
        class="max-w-[70ch] text-base leading-relaxed text-zinc-300 sm:text-lg"
      >
        {pageDescription}
      </p>
    </header>

    <section class="pt-10">
      <Hero3DUltra
        headline="Command-grade 3D hero orchestration."
        subheading="Use presets, watch live telemetry, and let adaptive quality keep the experience smooth across devices."
        badge="Hero Lab"
        ctas={ctas}
        intensity="medium"
        interactive={true}
        showDataStreams={true}
      />
    </section>

    <section class="grid gap-6 pt-12 md:grid-cols-2">
      <ModernCard className="p-6" variant="glass">
        <h2 class="font-display text-xl font-semibold text-white">
          How to tune
        </h2>
        <ul class="mt-3 space-y-2 text-sm text-zinc-300">
          <li>Pick a preset for a quick scene profile.</li>
          <li>Use the Calm toggle to cap effects if the device stutters.</li>
          <li>Press Replay to re-run entrance choreography.</li>
          <li>
            Hold <strong>Shift</strong> while dragging to lock pointer control.
          </li>
        </ul>
      </ModernCard>
      <ModernCard className="p-6" variant="glass">
        <h2 class="font-display text-xl font-semibold text-white">
          Telemetry signals
        </h2>
        <ul class="mt-3 space-y-2 text-sm text-zinc-300">
          <li>
            <strong>FPS</strong> updates every second with a rolling sparkline.
          </li>
          <li>
            <strong>Tier</strong> shifts based on intensity and calm mode.
          </li>
          <li><strong>Cap</strong> shows whether auto-calming is active.</li>
          <li>
            Reduced motion pauses all motion while keeping visuals intact.
          </li>
        </ul>
      </ModernCard>
    </section>

    <section class="pt-12">
      <ModernCard className="p-6" variant="glass">
        <div
          class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between"
        >
          <div>
            <p
              class="font-mono text-xs uppercase tracking-widest text-zinc-400"
            >
              Next
            </p>
            <p class="text-sm text-zinc-200">
              Explore the full motion suite and advanced animation modules.
            </p>
          </div>
          <div class="flex flex-wrap gap-3">
            <ModernButton
              href={withBasePath('demo-lab/')}
              variant="secondary"
              rounded="sm"
            >
              Open Demo Lab
            </ModernButton>
            <ModernButton
              href={withBasePath('/')}
              variant="primary"
              rounded="sm"
            >
              Return home
            </ModernButton>
          </div>
        </div>
      </ModernCard>
    </section>
  </div>
</MarketingLayout>

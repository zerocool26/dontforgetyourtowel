---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import TrustBadge from '../components/business/TrustBadge.astro';
import { withBasePath } from '../utils/helpers';
import { CONTACT_EMAIL } from '../consts';

const values = [
  {
    title: 'Security-first by design',
    description:
      'We treat security as a core operating system—controls, visibility, and governance built into every engagement.',
  },
  {
    title: 'Operational clarity',
    description:
      'Clear SLAs, reporting, and simple escalation paths so stakeholders always know what’s happening and why.',
  },
  {
    title: 'Business outcomes',
    description:
      'We prioritize uptime, risk reduction, and measurable ROI over shiny tools and busywork.',
  },
];

const leadership = [
  {
    name: 'Alex Rivera',
    title: 'Managing Partner',
    bio: '15+ years across delivery leadership, infrastructure modernization, and client success.',
  },
  {
    name: 'Taylor Chen',
    title: 'Security & Risk Lead',
    bio: 'Risk assessments, incident response readiness, and compliance programs across regulated industries.',
  },
  {
    name: 'Jordan Kim',
    title: 'Cloud & Engineering Lead',
    bio: 'Cloud/DevOps, platform modernization, and automation/AI enablement with governance and privacy controls.',
  },
];

const milestones = [
  {
    year: '2015',
    title: 'Founded',
    copy: 'Started as a hands-on IT partner for local SMBs.',
  },
  {
    year: '2019',
    title: 'Security practice',
    copy: 'Expanded into managed security and compliance support.',
  },
  {
    year: '2022',
    title: 'Cloud modernization',
    copy: 'Standardized migration playbooks and DR testing.',
  },
  {
    year: '2025',
    title: 'AI consulting',
    copy: 'Launched AI readiness and automation programs.',
  },
];

const startProjectHref = `mailto:${encodeURIComponent(
  CONTACT_EMAIL
)}?subject=${encodeURIComponent('Project inquiry')}`;
---

<MarketingLayout
  title="About | Olive Global Systems"
  description="Meet the team behind enterprise cybersecurity, cloud engineering, and AI-enabled delivery programs."
>
  <section class="relative overflow-hidden bg-zinc-950">
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(0,102,255,0.16),_transparent_55%)]"
    >
    </div>
    <div class="mx-auto max-w-[1220px] px-6 pb-16 pt-28">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div class="space-y-6">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-zinc-400"
          >
            About us
          </p>
          <h1 class="text-4xl font-bold text-white sm:text-5xl">
            Enterprise-grade expertise.
            <span class="text-accent-300"> Human-first delivery.</span>
          </h1>
          <p class="max-w-2xl text-base text-zinc-300">
            We’re a multi-discipline IT firm: advisory + hands-on delivery. We
            help organizations reduce risk, improve reliability, and ship modern
            systems faster—without compromising security.
          </p>
          <div class="flex flex-col gap-3 sm:flex-row">
            <ModernButton
              href={withBasePath('services/')}
              variant="secondary"
              className="min-h-[48px]"
            >
              Explore services
            </ModernButton>
            <ModernButton
              href={startProjectHref}
              variant="primary"
              className="min-h-[48px]"
            >
              Start a project
            </ModernButton>
          </div>
        </div>

        <div class="grid gap-4">
          <TrustBadge label="Security programs" sublabel="Risk + governance" />
          <TrustBadge
            label="Delivery playbooks"
            sublabel="Repeatable execution"
          />
          <TrustBadge label="Cloud engineering" sublabel="Azure • AWS • M365" />
          <TrustBadge label="Operations" sublabel="SLA + reporting" />
        </div>
      </div>
    </div>
  </section>

  <section class="border-y border-white/5 bg-zinc-900/30">
    <div
      class="mx-auto grid max-w-[1220px] gap-4 px-6 py-8 sm:grid-cols-2 lg:grid-cols-4"
    >
      <ModernCard
        variant="minimal"
        className="border-white/10 bg-zinc-950/60 p-5"
      >
        <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
          Operating Model
        </p>
        <p class="mt-2 text-2xl font-semibold text-white">Assess → Optimize</p>
        <p class="mt-1 text-xs text-zinc-400">
          Structured engagement lifecycle with clear checkpoints.
        </p>
      </ModernCard>
      <ModernCard
        variant="minimal"
        className="border-white/10 bg-zinc-950/60 p-5"
      >
        <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
          Capability Breadth
        </p>
        <p class="mt-2 text-2xl font-semibold text-white">6 Practices</p>
        <p class="mt-1 text-xs text-zinc-400">
          Security, MSP, AI, Apps, Network, and Cloud engineering.
        </p>
      </ModernCard>
      <ModernCard
        variant="minimal"
        className="border-white/10 bg-zinc-950/60 p-5"
      >
        <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
          Engagement Types
        </p>
        <p class="mt-2 text-2xl font-semibold text-white">Project + Managed</p>
        <p class="mt-1 text-xs text-zinc-400">
          From focused architecture sprints to ongoing operations.
        </p>
      </ModernCard>
      <ModernCard
        variant="minimal"
        className="border-white/10 bg-zinc-950/60 p-5"
      >
        <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
          Delivery Cadence
        </p>
        <p class="mt-2 text-2xl font-semibold text-white">
          Monthly + Quarterly
        </p>
        <p class="mt-1 text-xs text-zinc-400">
          Recurring reporting and roadmap alignment rhythm.
        </p>
      </ModernCard>
    </div>
  </section>

  <section
    class="sticky top-16 z-20 border-b border-white/5 bg-zinc-950/85 backdrop-blur"
  >
    <div class="mx-auto max-w-[1220px] px-6 py-4 sm:py-5">
      <div class="flex flex-wrap items-center gap-2">
        <p class="mr-2 text-xs uppercase tracking-[0.28em] text-zinc-500">
          Quick Jump
        </p>
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#mission-values">Mission</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#leadership">Leadership</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#certifications">Certifications</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#milestones">Milestones</a
        >
      </div>
    </div>
  </section>

  <section
    id="mission-values"
    class="scroll-mt-32 border-y border-white/5 bg-zinc-900/30"
  >
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="max-w-3xl space-y-4">
        <h2 class="text-3xl font-semibold text-white">Mission & core values</h2>
        <p class="text-sm text-zinc-300">
          Our mission is simple: protect, optimize, and transform your
          technology so you can focus on running your business.
        </p>
      </div>

      <div class="mt-10 grid gap-5 md:grid-cols-3">
        {
          values.map(v => (
            <ModernCard
              variant="minimal"
              className="p-6 bg-zinc-950/60 border-white/10"
            >
              <h3 class="text-lg font-semibold text-white">{v.title}</h3>
              <p class="mt-3 text-sm leading-relaxed text-zinc-300">
                {v.description}
              </p>
            </ModernCard>
          ))
        }
      </div>
    </div>
  </section>

  <section id="leadership" class="scroll-mt-32 bg-zinc-950">
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="max-w-3xl space-y-4">
        <h2 class="text-3xl font-semibold text-white">Leadership</h2>
        <p class="text-sm text-zinc-300">
          A senior team with deep MSP, security, and cloud delivery experience.
        </p>
      </div>
      <div class="mt-10 grid gap-5 md:grid-cols-3">
        {
          leadership.map(p => (
            <ModernCard
              variant="minimal"
              className="p-6 bg-zinc-950/60 border-white/10"
            >
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-500/15 font-semibold text-accent-200">
                {p.name
                  .split(' ')
                  .slice(0, 2)
                  .map(s => s[0])
                  .join('')}
              </div>
              <p class="mt-4 text-sm font-semibold text-white">{p.name}</p>
              <p class="text-xs text-zinc-400">{p.title}</p>
              <p class="mt-3 text-sm leading-relaxed text-zinc-300">{p.bio}</p>
            </ModernCard>
          ))
        }
      </div>
    </div>
  </section>

  <section
    id="certifications"
    class="scroll-mt-32 border-y border-white/5 bg-zinc-900/30"
  >
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div class="space-y-4">
          <h2 class="text-3xl font-semibold text-white">
            Certifications & partnerships
          </h2>
          <p class="text-sm text-zinc-300">
            We align to recognized frameworks and partner programs to deliver
            repeatable, auditable outcomes.
          </p>
        </div>
        <div class="grid gap-4">
          <TrustBadge label="SOC 2" sublabel="Readiness + reporting" />
          <TrustBadge label="ISO 27001" sublabel="Security management" />
          <TrustBadge label="Microsoft Partner" sublabel="Modern workplace" />
          <TrustBadge label="AWS Partner" sublabel="Cloud infrastructure" />
        </div>
      </div>
    </div>
  </section>

  <section id="milestones" class="scroll-mt-32 bg-zinc-950">
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="max-w-3xl space-y-4">
        <h2 class="text-3xl font-semibold text-white">Milestones</h2>
        <p class="text-sm text-zinc-300">
          A steady cadence of capability-building—without losing our hands-on
          support culture.
        </p>
      </div>

      <div class="mt-10 grid gap-4">
        {
          milestones.map(m => (
            <ModernCard
              variant="minimal"
              className="p-6 bg-zinc-950/60 border-white/10"
            >
              <div class="flex items-start justify-between gap-6">
                <div>
                  <p class="text-xs font-semibold uppercase tracking-[0.3em] text-zinc-400">
                    {m.year}
                  </p>
                  <p class="mt-2 text-sm font-semibold text-white">{m.title}</p>
                  <p class="mt-2 text-sm text-zinc-300">{m.copy}</p>
                </div>
              </div>
            </ModernCard>
          ))
        }
      </div>
    </div>
  </section>

  <section class="border-t border-white/5 bg-zinc-900/30">
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-8">
        <div
          class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between"
        >
          <div class="max-w-2xl">
            <h2 class="text-2xl font-semibold text-white">Work with us</h2>
            <p class="mt-3 text-sm text-zinc-300">
              Whether you need a focused consulting sprint or ongoing managed
              services, we’ll help you choose a right-sized engagement.
            </p>
            <p class="mt-3 text-sm text-zinc-300">
              <a
                class="text-accent-300 hover:underline"
                href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a
              >
            </p>
          </div>
          <div class="flex flex-col gap-3 sm:flex-row">
            <ModernButton
              href={startProjectHref}
              variant="primary"
              className="min-h-[48px]"
            >
              Email us
            </ModernButton>
            <ModernButton
              variant="secondary"
              className="min-h-[48px]"
              href={withBasePath('services/')}
            >
              View services
            </ModernButton>
          </div>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>

---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import '../styles/car-showroom-v3.css';

const title = 'Car Showroom — 3D Studio';
const description =
  'A dedicated, manufacturer-style 3D car showroom: models, materials, colors, camera, and studio backgrounds.';

const base = import.meta.env.BASE_URL ?? '/';
const galleryHref = `${base}gallery/`;
---

<MarketingLayout
  title={title}
  description={description}
  mainClass="p-0"
  bodyClass="bg-black"
  showFooter={false}
  showStickyCTA={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <section class="sr" data-sr-root>
    <div class="sr__grid">
      <header class="sr__top">
        <div class="sr__title">
          <h1>Car Showroom</h1>
          <p>Studio-grade 3D preview • mobile sheet + desktop panel</p>
        </div>
        <div class="sr__actions">
          <a class="sr-btn" href={galleryHref}>3D Gallery</a>
          <button type="button" class="sr-btn sr-btn--icon" data-sr-cmdk-open>
            Search
          </button>
          <button type="button" class="sr-btn sr-btn--icon" data-sr-help-open>
            Help
          </button>
          <button
            type="button"
            class="sr-btn sr-btn--primary sr-btn--icon"
            data-sr-screenshot
          >
            Screenshot
          </button>
          <button type="button" class="sr-btn sr-btn--icon" data-sr-share>
            Copy link
          </button>
          <button
            type="button"
            class="sr-btn"
            data-sr-panel-toggle
            aria-expanded="true"
          >
            Panel
          </button>
        </div>
      </header>

      <div class="sr__viewer">
        <canvas class="sr__canvas" data-sr-canvas></canvas>

        <div class="sr__thirds" data-sr-thirds-overlay aria-hidden="true"></div>
        <div class="sr__centerMarker" data-sr-center-overlay aria-hidden="true">
        </div>
        <div class="sr__horizon" data-sr-horizon-overlay aria-hidden="true">
        </div>

        <div class="sr__letterbox" data-sr-letterbox aria-hidden="true"></div>
        <button
          type="button"
          class="sr-btn sr__cinematicExit"
          data-sr-cinematic-exit
          aria-label="Exit cinematic mode"
        >
          Exit cinematic
        </button>

        <div class="sr__quick" data-sr-quick>
          <button
            type="button"
            class="sr__quickBtn"
            data-sr-quick-toggle
            aria-expanded="false"
            aria-label="Open quick controls"
          >
            Quick
          </button>

          <div class="sr__quickMenu" data-sr-quick-menu hidden>
            <div class="sr__quickRow">
              <button type="button" class="sr-chip" data-sr-quick-panel>
                Panel
              </button>
              <button type="button" class="sr-chip" data-sr-cmdk-open>
                Search
              </button>
              <button type="button" class="sr-chip" data-sr-help-open>
                Help
              </button>
              <button
                type="button"
                class="sr-chip"
                data-sr-quick-jump="presets"
              >
                Presets
              </button>
              <button type="button" class="sr-chip" data-sr-quick-jump="tools">
                Tools
              </button>
            </div>

            <div class="sr__quickGrid">
              <label class="sr-field">
                <span>Background</span>
                <select data-sr-quick-bg>
                  <option value="studio">Studio</option>
                  <option value="day">Day</option>
                  <option value="sunset">Sunset</option>
                  <option value="night">Night</option>
                  <option value="grid">Grid</option>
                  <option value="void">Void</option>
                </select>
              </label>

              <label class="sr-field">
                <span>Quality</span>
                <select data-sr-quick-quality>
                  <option value="eco">Eco</option>
                  <option value="balanced">Balanced</option>
                  <option value="ultra">Ultra</option>
                </select>
              </label>

              <label class="sr-field">
                <span>Auto-rotate</span>
                <input type="checkbox" data-sr-quick-autorotate />
              </label>
            </div>

            <div class="sr__quickRow">
              <button type="button" class="sr-chip" data-sr-quick-frame>
                Frame
              </button>
              <button type="button" class="sr-chip" data-sr-quick-photo>
                Photo
              </button>
              <button type="button" class="sr-chip" data-sr-quick-thirds>
                Thirds
              </button>
              <button type="button" class="sr-chip" data-sr-quick-center>
                Center
              </button>
              <button type="button" class="sr-chip" data-sr-quick-horizon>
                Horizon
              </button>
              <button type="button" class="sr-chip" data-sr-quick-cinematic>
                Cine
              </button>
              <button type="button" class="sr-chip" data-sr-quick-interior>
                Interior
              </button>
              <button type="button" class="sr-chip" data-sr-quick-hotspots>
                Hotspots
              </button>
              <button type="button" class="sr-chip" data-sr-quick-decals>
                Decals
              </button>
            </div>

            <div class="sr__quickRow">
              <button type="button" class="sr-chip" data-sr-screenshot>
                Screenshot
              </button>
              <button type="button" class="sr-chip" data-sr-share>
                Copy link
              </button>
              <button type="button" class="sr-chip" data-sr-reground>
                Re-ground
              </button>
            </div>
          </div>
        </div>

        <div class="sr__hud">
          <div class="sr__status sr-pill" aria-live="polite">
            <span class="sr-pill__dot"></span>
            <span data-sr-status-loading hidden>Loading…</span>
            <span class="sr-pill__muted" data-sr-status-error hidden></span>
          </div>

          <div class="sr-pill">
            <span class="sr-pill__muted">FPS</span>
            <span data-sr-fps>--</span>
            <span class="sr-pill__muted">RES</span>
            <span data-sr-res>1.00x</span>
            <span class="sr-pill__muted" data-sr-mode>LIVE</span>
            <span class="sr-pill__muted" data-sr-eco hidden>ECO</span>
          </div>
        </div>
      </div>

      <aside class="sr__panel" data-sr-panel>
        <div class="sr__panelHead" data-sr-panel-drag>
          <div>
            <div
              class="sr__panelHandle"
              data-sr-panel-handle
              aria-hidden="true"
            >
            </div>
            <strong>Settings</strong>
          </div>
          <button type="button" class="sr-btn" data-sr-panel-close>Close</button
          >
        </div>

        <div class="sr__panelBody" data-sr-panel-body>
          <input
            type="file"
            accept=".glb,model/gltf-binary"
            data-sr-model-file
            hidden
          />

          <div class="sr__jump" aria-label="Jump to section" data-sr-jumpbar>
            <button type="button" class="sr-chip" data-sr-jump="presets">
              Presets
            </button>
            <button type="button" class="sr-chip" data-sr-jump="model">
              Model
            </button>
            <button type="button" class="sr-chip" data-sr-jump="environment">
              Env
            </button>
            <button type="button" class="sr-chip" data-sr-jump="inspector">
              Inspect
            </button>
            <button type="button" class="sr-chip" data-sr-jump="camera">
              Camera
            </button>
            <button type="button" class="sr-chip" data-sr-jump="performance">
              Perf
            </button>
            <button type="button" class="sr-chip" data-sr-jump="tools">
              Tools
            </button>
          </div>

          <section
            class="sr-section"
            id="sr-sec-presets"
            data-sr-section="presets"
          >
            <div class="sr-section__head">
              <h2>Presets</h2>
              <button
                type="button"
                class="sr-section__toggle"
                data-sr-section-toggle
                aria-expanded="true"
              >
                Hide
              </button>
            </div>

            <div class="sr-grid">
              <label class="sr-field">
                <span>Name</span>
                <input
                  type="text"
                  placeholder="My setup"
                  autocomplete="off"
                  data-sr-preset-name
                />
              </label>

              <label class="sr-field">
                <span>Saved</span>
                <select data-sr-preset-select></select>
              </label>

              <div class="sr-row">
                <button
                  type="button"
                  class="sr-btn sr-btn--primary"
                  data-sr-preset-save
                >
                  Save
                </button>
                <button type="button" class="sr-btn" data-sr-preset-load>
                  Load
                </button>
                <button type="button" class="sr-btn" data-sr-preset-delete>
                  Delete
                </button>
              </div>

              <label class="sr-field">
                <span>Export / Import JSON</span>
                <textarea
                  rows="4"
                  placeholder="Paste preset JSON here…"
                  data-sr-preset-io></textarea>
              </label>

              <div class="sr-row">
                <button type="button" class="sr-btn" data-sr-preset-export>
                  Export
                </button>
                <button type="button" class="sr-btn" data-sr-preset-import>
                  Import
                </button>
              </div>
            </div>
          </section>

          <section class="sr-section" id="sr-sec-tools" data-sr-section="tools">
            <div class="sr-section__head">
              <h2>Tools</h2>
              <button
                type="button"
                class="sr-section__toggle"
                data-sr-section-toggle
                aria-expanded="true"
              >
                Hide
              </button>
            </div>

            <div class="sr-row">
              <button type="button" class="sr-btn" data-sr-reground>
                Re-ground
              </button>
              <button type="button" class="sr-btn" data-sr-screenshot-copy>
                Copy screenshot
              </button>
              <button type="button" class="sr-btn" data-sr-share>
                Copy link
              </button>
            </div>

            <div class="sr-grid">
              <label class="sr-field">
                <span>Cinematic mode</span>
                <input type="checkbox" data-sr-cinematic />
              </label>

              <label class="sr-field">
                <span>License plate text</span>
                <input
                  type="text"
                  inputmode="text"
                  maxlength="10"
                  placeholder="DFYTWL"
                  autocomplete="off"
                  data-sr-plate-text
                />
              </label>

              <div class="sr-row">
                <button type="button" class="sr-btn" data-sr-plate-apply>
                  Apply plate
                </button>
                <button type="button" class="sr-btn" data-sr-plate-reset>
                  Reset plate
                </button>
              </div>

              <label class="sr-field">
                <span>Decal / sticker mode</span>
                <input type="checkbox" data-sr-decal-mode />
              </label>

              <label class="sr-field">
                <span>Decal text</span>
                <input
                  type="text"
                  inputmode="text"
                  maxlength="18"
                  placeholder="RACE"
                  autocomplete="off"
                  data-sr-decal-text
                />
              </label>

              <label class="sr-field">
                <span>Decal color</span>
                <input type="color" value="#ffffff" data-sr-decal-color />
              </label>

              <label class="sr-field">
                <span>Decal size</span>
                <input
                  type="range"
                  min="0.05"
                  max="1.2"
                  step="0.01"
                  value="0.35"
                  data-sr-decal-size
                />
              </label>

              <label class="sr-field">
                <span>Decal rotation</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="0"
                  data-sr-decal-rot
                />
              </label>

              <label class="sr-field">
                <span>Decal opacity</span>
                <input
                  type="range"
                  min="0.1"
                  max="1"
                  step="0.01"
                  value="0.92"
                  data-sr-decal-opacity
                />
              </label>

              <div class="sr-row">
                <button type="button" class="sr-btn" data-sr-decal-clear>
                  Clear decals
                </button>
              </div>
            </div>

            <p class="sr-hint">
              Presets save everything you see in the panel (camera, lighting,
              quality, post, etc.).
            </p>

            <p class="sr-hint">Tip: press <kbd>C</kbd> to toggle cinematic.</p>

            <p class="sr-hint">
              Tip: enable decal mode, then click the car to place stickers.
            </p>
          </section>

          <section class="sr-section" id="sr-sec-model" data-sr-section="model">
            <div class="sr-section__head">
              <h2>Model</h2>
              <button
                type="button"
                class="sr-section__toggle"
                data-sr-section-toggle
                aria-expanded="true"
              >
                Hide
              </button>
            </div>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Preset</span>
                <select data-sr-model>
                  <option value="models/porsche-911-gt3rs.glb"
                    >Porsche GT3RS</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_LOD3_low.glb"
                    >Porsche Carrera (Low)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_advanced_perf.glb"
                    >Porsche Carrera (Perf)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_advanced_materials.glb"
                    >Porsche Carrera (Materials)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_LOD1_original_animated.glb"
                    >Porsche Carrera (Animated)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_LOD0_highpoly_animated.glb"
                    >Porsche Carrera (HiPoly)</option
                  >
                </select>
              </label>

              <label class="sr-field">
                <span>Model URL</span>
                <input
                  type="url"
                  inputmode="url"
                  placeholder="models/… or https://…"
                  data-sr-model-url
                />
              </label>

              <div class="sr-row">
                <button
                  type="button"
                  class="sr-btn sr-btn--primary"
                  data-sr-model-load>Load</button
                >
                <button type="button" class="sr-btn" data-sr-model-import
                  >Import</button
                >
              </div>

              <p class="sr-hint">
                Tip: use a repo-relative path (models/…) for GitHub Pages.
              </p>

              <div class="sr-grid">
                <label class="sr-field">
                  <span>Scale</span>
                  <input
                    type="range"
                    min="0.25"
                    max="2"
                    step="0.01"
                    value="1"
                    data-sr-model-scale
                  />
                </label>

                <label class="sr-field">
                  <span>Yaw</span>
                  <input
                    type="range"
                    min="-180"
                    max="180"
                    step="1"
                    value="0"
                    data-sr-model-yaw
                  />
                </label>

                <label class="sr-field">
                  <span>Lift</span>
                  <input
                    type="range"
                    min="-1.5"
                    max="1.5"
                    step="0.01"
                    value="0"
                    data-sr-model-lift
                  />
                </label>
              </div>

              <div class="sr-row">
                <button
                  type="button"
                  class="sr-btn"
                  data-sr-model-transform-reset
                >
                  Reset transform
                </button>
              </div>
            </div>
          </section>

          <section class="sr-section" id="sr-sec-look" data-sr-section="look">
            <div class="sr-section__head">
              <h2>Look</h2>
              <div class="sr-section__headActions">
                <button
                  type="button"
                  class="sr-section__toggle"
                  data-sr-reset-look
                >
                  Reset
                </button>
                <button
                  type="button"
                  class="sr-section__toggle"
                  data-sr-section-toggle
                  aria-expanded="true"
                >
                  Hide
                </button>
              </div>
            </div>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Paint</span>
                <input type="color" value="#00d1b2" data-sr-paint />
              </label>

              <label class="sr-field">
                <span>Finish</span>
                <select data-sr-finish>
                  <option value="gloss">Gloss</option>
                  <option value="satin">Satin</option>
                  <option value="matte">Matte</option>
                </select>
              </label>

              <label class="sr-field">
                <span>Clearcoat</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.8"
                  data-sr-clearcoat
                />
              </label>

              <label class="sr-field">
                <span>Wrap mode</span>
                <input type="checkbox" data-sr-wrap-enabled />
              </label>

              <label class="sr-field">
                <span>Wrap pattern</span>
                <select data-sr-wrap-pattern>
                  <option value="solid">Solid</option>
                  <option value="stripes">Stripes</option>
                  <option value="carbon">Carbon</option>
                  <option value="camo">Camo</option>
                  <option value="checker">Checker</option>
                  <option value="hex">Hex</option>
                  <option value="race">Race</option>
                </select>
              </label>

              <label class="sr-field">
                <span>Wrap color</span>
                <input type="color" value="#ffffff" data-sr-wrap-color />
              </label>
              <label class="sr-field">
                <span>Wrap tint</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.8"
                  data-sr-wrap-tint
                />
              </label>
              <label class="sr-field">
                <span>Wrap scale</span>
                <input
                  type="range"
                  min="0.25"
                  max="4"
                  step="0.01"
                  value="1"
                  data-sr-wrap-scale
                />
              </label>
              <label class="sr-field">
                <span>Wrap rotation</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="0"
                  data-sr-wrap-rotation
                />
              </label>
              <label class="sr-field">
                <span>Wrap offset X</span>
                <input
                  type="range"
                  min="-1"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-wrap-offset-x
                />
              </label>
              <label class="sr-field">
                <span>Wrap offset Y</span>
                <input
                  type="range"
                  min="-1"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-wrap-offset-y
                />
              </label>

              <label class="sr-field">
                <span>Glass mode</span>
                <input type="checkbox" data-sr-glass-mode />
              </label>
              <label class="sr-field">
                <span>Glass tint</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.35"
                  data-sr-glass-tint
                />
              </label>

              <label class="sr-field">
                <span>Wheel color</span>
                <input type="color" value="#111827" data-sr-wheel-color />
              </label>
              <label class="sr-field">
                <span>Trim color</span>
                <input type="color" value="#0b0f14" data-sr-trim-color />
              </label>
              <label class="sr-field">
                <span>Caliper color</span>
                <input type="color" value="#ef4444" data-sr-caliper-color />
              </label>
              <label class="sr-field">
                <span>Light color</span>
                <input type="color" value="#ffffff" data-sr-light-color />
              </label>
              <label class="sr-field">
                <span>Light glow</span>
                <input
                  type="range"
                  min="0"
                  max="6"
                  step="0.01"
                  value="1.25"
                  data-sr-light-glow
                />
              </label>

              <label class="sr-field">
                <span>Keep original materials</span>
                <input type="checkbox" data-sr-original-mats />
              </label>
            </div>
          </section>

          <section
            class="sr-section"
            id="sr-sec-environment"
            data-sr-section="environment"
          >
            <div class="sr-section__head">
              <h2>Environment</h2>
              <div class="sr-section__headActions">
                <button
                  type="button"
                  class="sr-section__toggle"
                  data-sr-reset-environment
                >
                  Reset
                </button>
                <button
                  type="button"
                  class="sr-section__toggle"
                  data-sr-section-toggle
                  aria-expanded="true"
                >
                  Hide
                </button>
              </div>
            </div>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Background</span>
                <select data-sr-bg>
                  <option value="studio">Studio</option>
                  <option value="day">Day</option>
                  <option value="sunset">Sunset</option>
                  <option value="night">Night</option>
                  <option value="grid">Grid</option>
                  <option value="void">Void (transparent)</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Light preset</span>
                <select data-sr-light-preset>
                  <option value="studio">Studio</option>
                  <option value="golden">Golden</option>
                  <option value="ice">Ice</option>
                  <option value="neon">Neon</option>
                  <option value="noir">Noir</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Intensity</span>
                <input
                  type="range"
                  min="0.2"
                  max="2.5"
                  step="0.01"
                  value="1.1"
                  data-sr-light-intensity
                />
              </label>
              <label class="sr-field">
                <span>Warmth</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-light-warmth
                />
              </label>
              <label class="sr-field">
                <span>Rim boost</span>
                <input
                  type="range"
                  min="0.5"
                  max="2"
                  step="0.01"
                  value="1"
                  data-sr-light-rim
                />
              </label>

              <label class="sr-field">
                <span>Env intensity</span>
                <input
                  type="range"
                  min="0"
                  max="3"
                  step="0.01"
                  value="0.9"
                  data-sr-env-intensity
                />
              </label>
              <label class="sr-field">
                <span>Env rotation</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="0"
                  data-sr-env-rotation
                />
              </label>
            </div>
          </section>

          <section class="sr-section" id="sr-sec-scene" data-sr-section="scene">
            <div class="sr-section__head">
              <h2>Scene</h2>
              <button
                type="button"
                class="sr-section__toggle"
                data-sr-section-toggle
                aria-expanded="true"
              >
                Hide
              </button>
            </div>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Grid</span>
                <input type="checkbox" data-sr-grid />
              </label>
              <label class="sr-field">
                <span>Axes</span>
                <input type="checkbox" data-sr-axes />
              </label>
              <label class="sr-field">
                <span>Haptics</span>
                <input type="checkbox" checked data-sr-haptics />
              </label>
            </div>
          </section>

          <section
            class="sr-section"
            id="sr-sec-inspector"
            data-sr-section="inspector"
          >
            <div class="sr-section__head">
              <h2>Inspector</h2>
              <button
                type="button"
                class="sr-section__toggle"
                data-sr-section-toggle
                aria-expanded="true"
              >
                Hide
              </button>
            </div>

            <div class="sr-readout sr-readout--stats" aria-live="polite">
              <div>
                <strong data-sr-stat-meshes>--</strong>
                <small>Meshes</small>
              </div>
              <div>

---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';

const title = 'Car Showroom — 3D Studio';
const description =
  'A dedicated, manufacturer-style 3D car showroom: models, materials, colors, camera, and studio backgrounds.';
---

<MarketingLayout
  title={title}
  description={description}
  mainClass="p-0"
  bodyClass="bg-black"
  showFooter={false}
  showStickyCTA={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <section class="car-showroom" data-car-showroom-root>
    <canvas class="car-showroom__canvas" data-car-showroom-canvas></canvas>

    <input
      class="csr-file"
      type="file"
      accept=".glb,model/gltf-binary"
      data-csr-file
      hidden
    />

    <div class="csr-status" data-csr-status aria-live="polite">
      <div class="csr-status__loading" data-csr-loading hidden>
        <span class="csr-status__dot"></span>
        <span>Loading model…</span>
      </div>
      <div class="csr-status__error" data-csr-error hidden></div>
    </div>

    <div class="car-showroom__hud" aria-label="Car showroom controls">
      <div class="car-showroom__hud-top">
        <div class="car-showroom__title">
          <p class="car-showroom__kicker">3D Car Showroom</p>
          <h1 class="car-showroom__headline">Studio Configurator</h1>
        </div>

        <div class="car-showroom__actions">
          <button type="button" class="csr-btn" data-csr-toggle-panel>
            Options
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-copy-link
            title="Copy a shareable link"
          >
            Share
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-import
            title="Load a local .glb file"
          >
            Import GLB
          </button>
          <a class="csr-btn csr-btn--ghost" href={withBasePath('gallery/')}
            >3D Gallery</a
          >
        </div>
      </div>

      <div class="car-showroom__panel" data-csr-panel hidden>
        <div class="csr-grid">
          <label class="csr-field">
            <span>Model</span>
            <select data-csr-model>
              <option value="/models/porsche-911-gt3rs.glb"
                >Porsche 911 GT3 RS</option
              >
            </select>
          </label>

          <label class="csr-field csr-field--wide">
            <span>Model URL</span>
            <div class="csr-inline">
              <input
                class="csr-text"
                type="text"
                inputmode="url"
                spellcheck="false"
                autocomplete="off"
                placeholder="/models/your-car.glb or https://…/car.glb"
                data-csr-model-url
              />
              <button type="button" class="csr-btn" data-csr-load-model>
                Load
              </button>
            </div>
          </label>

          <label class="csr-field">
            <span>Mode</span>
            <select data-csr-mode>
              <option value="paint">Paint</option>
              <option value="wrap">Wrap</option>
              <option value="glass">Glass</option>
              <option value="wireframe">Wireframe</option>
            </select>
          </label>

          <label class="csr-field">
            <span>Camera</span>
            <select data-csr-camera>
              <option value="hero">Hero</option>
              <option value="front">Front 3/4</option>
              <option value="rear">Rear 3/4</option>
              <option value="side">Side</option>
              <option value="top">Top</option>
              <option value="detail">Detail</option>
            </select>
          </label>

          <label class="csr-field">
            <span>Body color</span>
            <input type="color" value="#00d1b2" data-csr-color />
          </label>

          <div class="csr-field csr-field--wide">
            <span>Color presets</span>
            <div class="csr-swatches" role="list">
              <button
                type="button"
                class="csr-swatch"
                style="--swatch:#00d1b2"
                data-csr-swatch="#00d1b2"
                aria-label="Teal"></button>
              <button
                type="button"
                class="csr-swatch"
                style="--swatch:#60a5fa"
                data-csr-swatch="#60a5fa"
                aria-label="Blue"></button>
              <button
                type="button"
                class="csr-swatch"
                style="--swatch:#f472b6"
                data-csr-swatch="#f472b6"
                aria-label="Pink"></button>
              <button
                type="button"
                class="csr-swatch"
                style="--swatch:#fbbf24"
                data-csr-swatch="#fbbf24"
                aria-label="Gold"></button>
              <button
                type="button"
                class="csr-swatch"
                style="--swatch:#f87171"
                data-csr-swatch="#f87171"
                aria-label="Red"></button>
              <button
                type="button"
                class="csr-swatch"
                style="--swatch:#e5e7eb"
                data-csr-swatch="#e5e7eb"
                aria-label="Silver"></button>
            </div>
          </div>

          <label class="csr-field">
            <span>Body finish</span>
            <select data-csr-finish>
              <option value="gloss">Gloss</option>
              <option value="satin">Satin</option>
              <option value="matte">Matte</option>
            </select>
          </label>

          <label class="csr-field">
            <span>Wheel finish</span>
            <select data-csr-wheel-finish>
              <option value="graphite">Graphite</option>
              <option value="chrome">Chrome</option>
              <option value="black">Black</option>
            </select>
          </label>

          <label class="csr-field">
            <span>Trim finish</span>
            <select data-csr-trim-finish>
              <option value="black">Black</option>
              <option value="chrome">Chrome</option>
              <option value="brushed">Brushed</option>
            </select>
          </label>

          <label class="csr-field csr-field--wide">
            <span>Glass tint</span>
            <input
              type="range"
              min="0"
              max="1"
              step="0.01"
              value="0.15"
              data-csr-glass-tint
            />
          </label>

          <label class="csr-field csr-field--wide">
            <span>Background</span>
            <select data-csr-background>
              <option value="studio">Studio</option>
              <option value="day">Day</option>
              <option value="sunset">Sunset</option>
              <option value="night">Night</option>
              <option value="grid">Grid</option>
            </select>
          </label>

          <label class="csr-field">
            <span>Auto-rotate</span>
            <input type="checkbox" checked data-csr-autorotate />
          </label>

          <label class="csr-field csr-field--wide">
            <span>Spin speed</span>
            <input
              type="range"
              min="0"
              max="2"
              step="0.01"
              value="0.65"
              data-csr-spinspeed
            />
          </label>

          <label class="csr-field csr-field--wide">
            <span>Zoom</span>
            <input
              type="range"
              min="0"
              max="1"
              step="0.01"
              value="0"
              data-csr-zoom
            />
          </label>

          <div class="csr-row">
            <button type="button" class="csr-btn" data-csr-reset>Reset</button>
            <button
              type="button"
              class="csr-btn csr-btn--ghost"
              data-csr-reset-camera
            >
              Reset camera
            </button>
            <p class="csr-hint">Drag orbit • Wheel/pinch zoom • O options</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    import '../scripts/car-showroom';
  </script>

  <style>
    .car-showroom {
      position: relative;
      height: calc(100svh - 64px);
      background:
        radial-gradient(
          120% 90% at 50% 15%,
          rgba(34, 211, 238, 0.1),
          transparent 55%
        ),
        radial-gradient(
          90% 70% at 70% 45%,
          rgba(124, 58, 237, 0.1),
          transparent 55%
        ),
        #02030a;
      overflow: hidden;
    }

    .car-showroom__canvas {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      display: block;
      touch-action: none;
    }

    .car-showroom__hud {
      position: absolute;
      inset: 0;
      pointer-events: none;
      padding: 18px;
    }

    .car-showroom__hud-top {
      pointer-events: none;
      display: flex;
      justify-content: space-between;
      gap: 14px;
      align-items: flex-start;
    }

    .car-showroom__title {
      pointer-events: none;
      color: rgba(255, 255, 255, 0.92);
      text-shadow: 0 10px 40px rgba(0, 0, 0, 0.45);
    }

    .car-showroom__kicker {
      margin: 0;
      font-family:
        ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
        'Liberation Mono', 'Courier New', monospace;
      font-size: 12px;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.62);
    }

    .car-showroom__headline {
      margin: 6px 0 0;
      font-size: 20px;
      letter-spacing: -0.02em;
    }

    .car-showroom__actions {
      pointer-events: auto;
      display: flex;
      gap: 10px;
    }

    .csr-btn {
      pointer-events: auto;
      border-radius: 10px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(0, 0, 0, 0.35);
      color: rgba(255, 255, 255, 0.92);
      padding: 10px 12px;
      font-size: 13px;
      font-weight: 650;
      backdrop-filter: blur(14px);
    }

    .csr-btn--ghost {
      text-decoration: none;
      background: rgba(255, 255, 255, 0.06);
    }

    .car-showroom__panel {
      pointer-events: auto;
      position: absolute;
      right: 18px;
      top: 64px;
      width: min(520px, calc(100vw - 36px));
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(18px);
      padding: 14px;
    }

    .csr-grid {
      display: grid;
      gap: 12px;
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .csr-field {
      display: grid;
      gap: 6px;
      color: rgba(255, 255, 255, 0.88);
      font-size: 12px;
    }

    .csr-field span {
      color: rgba(255, 255, 255, 0.65);
      letter-spacing: 0.06em;
      text-transform: uppercase;
      font-family:
        ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
        'Liberation Mono', 'Courier New', monospace;
      font-size: 11px;
    }

    .csr-field select,
    .csr-field input[type='range'],
    .csr-field input[type='color'],
    .csr-text {
      width: 100%;
    }

    .csr-swatches {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: center;
    }

    .csr-swatch {
      width: 28px;
      height: 28px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.16);
      background: var(--swatch);
      box-shadow:
        0 0 0 2px rgba(0, 0, 0, 0.35) inset,
        0 8px 22px rgba(0, 0, 0, 0.35);
    }

    .csr-swatch:active {
      transform: scale(0.98);
    }

    .csr-inline {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 10px;
      align-items: center;
    }

    .csr-text {
      border-radius: 10px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(255, 255, 255, 0.06);
      color: rgba(255, 255, 255, 0.9);
      padding: 10px 12px;
      outline: none;
      font-size: 13px;
    }

    .csr-text::placeholder {
      color: rgba(255, 255, 255, 0.45);
    }

    .csr-field select {
      border-radius: 10px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(255, 255, 255, 0.06);
      color: rgba(255, 255, 255, 0.9);
      padding: 9px 10px;
      outline: none;
    }

    .csr-field input[type='range'] {
      accent-color: rgb(34, 211, 238);
    }

    .csr-field input[type='color'] {
      height: 40px;
      border-radius: 10px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(255, 255, 255, 0.06);
      padding: 6px;
    }

    .csr-status {
      position: absolute;
      left: 18px;
      bottom: 18px;
      pointer-events: none;
      display: grid;
      gap: 8px;
      z-index: 10;
      max-width: min(560px, calc(100vw - 36px));
    }

    .csr-status__loading {
      pointer-events: none;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(0, 0, 0, 0.45);
      padding: 10px 12px;
      color: rgba(255, 255, 255, 0.88);
      font-size: 12px;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      backdrop-filter: blur(14px);
    }

    .csr-status__dot {
      width: 10px;
      height: 10px;
      border-radius: 999px;
      background: #22d3ee;
      box-shadow: 0 0 20px rgba(34, 211, 238, 0.5);
      animation: csr-pulse 1.1s ease-in-out infinite;
    }

    @keyframes csr-pulse {
      0%,
      100% {
        transform: scale(0.85);
        opacity: 0.7;
      }
      50% {
        transform: scale(1);
        opacity: 1;
      }
    }

    .csr-status__error {
      pointer-events: auto;
      border-radius: 14px;
      border: 1px solid rgba(248, 113, 113, 0.25);
      background: rgba(0, 0, 0, 0.55);
      color: rgba(254, 202, 202, 0.95);
      padding: 10px 12px;
      font-size: 13px;
      line-height: 1.35;
      backdrop-filter: blur(14px);
    }

    .csr-field--wide {
      grid-column: 1 / -1;
    }

    .csr-row {
      grid-column: 1 / -1;
      display: flex;
      gap: 12px;
      align-items: center;
      justify-content: space-between;
    }

    .csr-hint {
      margin: 0;
      font-size: 12px;
      color: rgba(255, 255, 255, 0.65);
    }

    @media (max-width: 520px) {
      .csr-grid {
        grid-template-columns: 1fr;
      }

      .car-showroom__panel {
        right: 18px;
        left: 18px;
        width: auto;
        top: 74px;
      }

      .car-showroom__actions {
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
      }
    }
  </style>
</MarketingLayout>

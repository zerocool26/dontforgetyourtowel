---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';
import '../styles/car-showroom.css';

const title = 'Car Showroom — 3D Studio';
const description =
  'A dedicated, manufacturer-style 3D car showroom: models, materials, colors, camera, and studio backgrounds.';
---

<MarketingLayout
  title={title}
  description={description}
  mainClass="p-0"
  bodyClass="bg-black"
  showFooter={false}
  showStickyCTA={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <section class="car-showroom" data-car-showroom-root>
    <canvas class="car-showroom__canvas" data-car-showroom-canvas></canvas>

    <input
      class="csr-file"
      type="file"
      accept=".glb,model/gltf-binary"
      data-csr-file
      hidden
    />

    <div class="csr-status" data-csr-status aria-live="polite">
      <div class="csr-status__loading" data-csr-loading hidden>
        <span class="csr-status__dot"></span>
        <span>Loading model…</span>
      </div>
      <div class="csr-status__error" data-csr-error hidden></div>
    </div>

    <!-- Quality Indicator (Mobile Only) -->
    <div class="csr-quality-badge" data-csr-quality-badge hidden>
      <span class="csr-quality-badge__fps" data-csr-quality-fps>--</span>
      <span class="csr-quality-badge__label" data-csr-quality-label>FPS</span>
    </div>

    <!-- Floating Action Button (Mobile Only) -->
    <div class="csr-fab" data-csr-fab hidden>
      <button
        type="button"
        class="csr-fab__trigger"
        data-csr-fab-trigger
        aria-label="Quick actions"
        aria-expanded="false"
      >
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <circle cx="12" cy="12" r="1"></circle>
          <circle cx="12" cy="5" r="1"></circle>
          <circle cx="12" cy="19" r="1"></circle>
        </svg>
      </button>
      <div class="csr-fab__menu" data-csr-fab-menu hidden>
        <button
          type="button"
          class="csr-fab__action"
          data-csr-fab-screenshot
          title="Screenshot"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"
            ></path>
            <circle cx="12" cy="13" r="4"></circle>
          </svg>
        </button>
        <button
          type="button"
          class="csr-fab__action"
          data-csr-fab-share
          title="Share"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="18" cy="5" r="3"></circle>
            <circle cx="6" cy="12" r="3"></circle>
            <circle cx="18" cy="19" r="3"></circle>
            <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
            <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
          </svg>
        </button>
        <button
          type="button"
          class="csr-fab__action"
          data-csr-fab-frame
          title="Frame view"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"></rect>
            <line x1="7" y1="2" x2="7" y2="22"></line>
            <line x1="17" y1="2" x2="17" y2="22"></line>
            <line x1="2" y1="12" x2="22" y2="12"></line>
            <line x1="2" y1="7" x2="7" y2="7"></line>
            <line x1="2" y1="17" x2="7" y2="17"></line>
            <line x1="17" y1="17" x2="22" y2="17"></line>
            <line x1="17" y1="7" x2="22" y2="7"></line>
          </svg>
        </button>
        <button
          type="button"
          class="csr-fab__action"
          data-csr-fab-reset
          title="Reset view"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <polyline points="23 4 23 10 17 10"></polyline>
            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
          </svg>
        </button>
        <button
          type="button"
          class="csr-fab__action csr-fab__action--toggle"
          data-csr-fab-gyro
          data-active="false"
          title="Tilt controls"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M12 2a10 10 0 1 0 0 20 10 10 0 1 0 0-20"></path>
            <path d="M12 6v6l4 2"></path>
            <path d="M16.2 7.8l2.9-2.9"></path>
            <path d="M18.4 12h4.1"></path>
            <path d="M16.2 16.2l2.9 2.9"></path>
          </svg>
        </button>
      </div>
    </div>

    <div class="car-showroom__hud" aria-label="Car showroom controls">
      <div class="car-showroom__hud-top">
        <div class="car-showroom__title">
          <p class="car-showroom__kicker">3D Car Showroom</p>
          <h1 class="car-showroom__headline">Studio Configurator</h1>
        </div>

        <div class="car-showroom__actions">
          <button
            type="button"
            class="csr-btn"
            data-csr-toggle-panel
            aria-controls="csr-panel"
            aria-expanded="true"
          >
            Options
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-copy-link
            title="Copy a shareable link"
          >
            Share
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-screenshot
            title="Download a PNG screenshot"
          >
            Screenshot
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-import
            title="Load a local .glb file"
          >
            Import GLB
          </button>
          <a class="csr-btn csr-btn--ghost" href={withBasePath('gallery/')}
            >3D Gallery</a
          >
        </div>
      </div>

      <div
        id="csr-panel"
        class="car-showroom__panel"
        data-csr-panel
        aria-label="Configurator options"
      >
        <div class="csr-panel-head">
          <div class="csr-panel-head__row">
            <strong class="csr-panel-head__title">Options</strong>
            <button
              type="button"
              class="csr-btn csr-btn--ghost csr-btn--icon"
              data-csr-close-panel
              aria-label="Close options"
              title="Close"
            >
              ✕
            </button>
          </div>

          <div class="csr-panel-inspector">
            <div class="csr-inspector-card">
              <span class="csr-inspector-title">Selection</span>
              <div class="csr-readout" data-csr-selected-part>
                Tap/click the car to select
              </div>
              <div
                class="csr-readout csr-readout--mini"
                data-csr-selected-mesh
                hidden
              >
                Mesh: —
              </div>
              <div
                class="csr-readout csr-readout--mini"
                data-csr-selected-path
                hidden
              >
                Path: —
              </div>
              <div
                class="csr-readout csr-readout--mini"
                data-csr-selected-material
                hidden
              >
                Material: —
              </div>
            </div>
            <div class="csr-inspector-card">
              <span class="csr-inspector-title">Model stats</span>
              <div class="csr-readout csr-readout--stats">
                <div>
                  <strong data-csr-model-size>—</strong>
                  <small>Size (X×Y×Z)</small>
                </div>
                <div>
                  <strong data-csr-model-meshes>—</strong>
                  <small>Meshes</small>
                </div>
                <div>
                  <strong data-csr-model-tris>—</strong>
                  <small>Triangles</small>
                </div>
                <div>
                  <strong data-csr-fps>—</strong>
                  <small>FPS</small>
                </div>
              </div>
            </div>
          </div>

          <div class="csr-panel-filter">
            <input
              class="csr-text csr-filter-input"
              type="search"
              placeholder="Filter settings…"
              data-csr-filter
            />
            <button
              type="button"
              class="csr-btn csr-btn--ghost csr-btn--icon"
              data-csr-filter-clear
              aria-label="Clear filter"
              title="Clear filter"
            >
              ✕
            </button>
          </div>

          <button
            type="button"
            class="csr-sheet-handle"
            data-csr-sheet-handle
            aria-label="Resize options panel"
            title="Drag to resize"></button>

          <!-- Pull indicator for expand gesture -->
          <div class="csr-pull-indicator" aria-hidden="true">
            <svg
              class="csr-pull-indicator__icon"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M18 15l-6-6-6 6"></path>
            </svg>
            <span class="csr-pull-indicator__text">Pull to expand</span>
          </div>

          <label class="csr-tab-select">
            <span>Section</span>
            <select data-csr-tab-select>
              <option value="quick">Quick</option>
              <option value="tools">Tools</option>
              <option value="look">Look</option>
              <option value="env">Environment</option>
              <option value="camera">Camera</option>
              <option value="post">Post</option>
              <option value="motion">Motion</option>
              <option value="setup">Setup</option>
            </select>
          </label>

          <div
            class="csr-tabs"
            role="tablist"
            aria-label="Configurator sections"
          >
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-quick"
              data-csr-tab-btn="quick"
              tabindex="-1"
            >
              Quick
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-tools"
              data-csr-tab-btn="tools"
              tabindex="-1"
            >
              Tools
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="true"
              aria-controls="csr-tab-look"
              data-csr-tab-btn="look"
            >
              Look
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-env"
              data-csr-tab-btn="env"
              tabindex="-1"
            >
              Environment
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-camera"
              data-csr-tab-btn="camera"
              tabindex="-1"
            >
              Camera
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-post"
              data-csr-tab-btn="post"
              tabindex="-1"
            >
              Post
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-motion"
              data-csr-tab-btn="motion"
              tabindex="-1"
            >
              Motion
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-setup"
              data-csr-tab-btn="setup"
              tabindex="-1"
            >
              Setup
            </button>
          </div>
        </div>

        <!-- Smart Mobile Quick Bar -->
        <div class="csr-mobile-quickbar" data-csr-mobile-quickbar>
          <div class="csr-mobile-quickbar__row">
            <!-- Mode Pills -->
            <div
              class="csr-mode-pills"
              role="radiogroup"
              aria-label="Paint mode"
            >
              <button
                type="button"
                class="csr-mode-pill"
                data-mode="paint"
                data-active="true"
                role="radio"
                aria-checked="true"
              >
                <svg
                  class="csr-mode-pill__icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                  ></path>
                </svg>
                Paint
              </button>
              <button
                type="button"
                class="csr-mode-pill"
                data-mode="wrap"
                role="radio"
                aria-checked="false"
              >
                <svg
                  class="csr-mode-pill__icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                  <path d="M3 9h18M9 21V9"></path>
                </svg>
                Wrap
              </button>
              <button
                type="button"
                class="csr-mode-pill"
                data-mode="glass"
                role="radio"
                aria-checked="false"
              >
                <svg
                  class="csr-mode-pill__icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
                Glass
              </button>
              <button
                type="button"
                class="csr-mode-pill"
                data-mode="factory"
                role="radio"
                aria-checked="false"
              >
                <svg
                  class="csr-mode-pill__icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                  ></path>
                </svg>
                OEM
              </button>
            </div>
          </div>
          <div class="csr-mobile-quickbar__row">
            <!-- Quick Color Strip -->
            <div class="csr-quick-strip">
              <div class="csr-quick-strip__colors" data-csr-quick-colors>
                <button
                  type="button"
                  class="csr-quick-strip__color"
                  style="--color:#0b0f1a"
                  data-quick-color="#0b0f1a"
                  title="Black"></button>
                <button
                  type="button"
                  class="csr-quick-strip__color"
                  style="--color:#e5e7eb"
                  data-quick-color="#e5e7eb"
                  title="Silver"></button>
                <button
                  type="button"
                  class="csr-quick-strip__color"
                  style="--color:#f87171"
                  data-quick-color="#f87171"
                  title="Red"></button>
                <button
                  type="button"
                  class="csr-quick-strip__color"
                  style="--color:#60a5fa"
                  data-quick-color="#60a5fa"
                  title="Blue"></button>
                <button
                  type="button"
                  class="csr-quick-strip__color"
                  style="--color:#22c55e"
                  data-quick-color="#22c55e"
                  title="Green"></button>
                <button
                  type="button"
                  class="csr-quick-strip__color"
                  data-active="true"
                  style="--color:#00d1b2"
                  data-quick-color="#00d1b2"
                  title="Teal"></button>
              </div>
              <button
                type="button"
                class="csr-quick-strip__more"
                data-csr-open-colors
                title="More colors">+</button
              >
            </div>
          </div>
        </div>

        <div class="csr-tab-panels" data-csr-tab-panels>
          <div class="csr-filter-empty" data-csr-filter-empty hidden>
            No matching settings. Try another keyword.
          </div>
          <div
            id="csr-tab-quick"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="quick"
            hidden
          >
            <div class="csr-quick-row">
              <button type="button" class="csr-chip" data-csr-quick-panel>
                Options
              </button>
              <button
                type="button"
                class="csr-chip csr-chip--ghost"
                data-csr-quick-frame
              >
                Frame
              </button>
              <button
                type="button"
                class="csr-chip csr-chip--ghost"
                data-csr-quick-reset
              >
                Reset View
              </button>
            </div>
            <div class="csr-quick-row csr-quick-row--controls">
              <label class="csr-quick-toggle">
                <span>Spin</span>
                <input type="checkbox" data-csr-quick-spin />
              </label>
              <label class="csr-quick-range">
                <span>Zoom</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.8"
                  data-csr-quick-zoom
                />
              </label>
              <label class="csr-quick-select">
                <span>Style</span>
                <select data-csr-quick-style>
                  <option value="">Style preset</option>
                  <option value="stealth">Stealth</option>
                  <option value="track">Track</option>
                  <option value="lux">Luxury</option>
                  <option value="neo">Neo</option>
                  <option value="classic">Classic</option>
                </select>
              </label>
              <label class="csr-quick-select">
                <span>Light</span>
                <select data-csr-quick-light>
                  <option value="studio">Studio</option>
                  <option value="golden">Golden</option>
                  <option value="neon">Neon</option>
                  <option value="ice">Ice</option>
                  <option value="noir">Noir</option>
                </select>
              </label>
            </div>

            <p class="csr-hint">
              One finger rotates. Two fingers zoom. Long-press selects a part.
            </p>

            <!-- Quick Color Palette (Mobile) -->
            <div class="csr-quick-colors" data-csr-quick-colors hidden>
              <span class="csr-quick-colors__label">Quick Colors</span>
              <div class="csr-quick-colors__grid">
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#000000"
                  title="Midnight Black"
                  style="--color: #000000"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#ffffff"
                  title="Pearl White"
                  style="--color: #ffffff"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#c0c0c0"
                  title="Silver"
                  style="--color: #c0c0c0"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#b91c1c"
                  title="Racing Red"
                  style="--color: #b91c1c"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#1e40af"
                  title="Ocean Blue"
                  style="--color: #1e40af"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#15803d"
                  title="British Green"
                  style="--color: #15803d"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#f59e0b"
                  title="Sunset Orange"
                  style="--color: #f59e0b"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#7c3aed"
                  title="Royal Purple"
                  style="--color: #7c3aed"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#fbbf24"
                  title="Golden Yellow"
                  style="--color: #fbbf24"></button>
                <button
                  type="button"
                  class="csr-quick-color"
                  data-color="#0891b2"
                  title="Teal"
                  style="--color: #0891b2"></button>
              </div>
            </div>
          </div>

          <div
            id="csr-tab-tools"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="tools"
            hidden
          >
            <div class="csr-grid">
              <div class="csr-row" data-csr-no-filter>
                <button type="button" class="csr-btn" data-csr-tools-frame>
                  Frame
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-tools-reset-view
                >
                  Reset View
                </button>
              </div>

              <div class="csr-row" data-csr-no-filter>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-tools-share
                >
                  Share
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-tools-screenshot
                >
                  Screenshot
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-tools-import
                >
                  Import GLB
                </button>
                <a
                  class="csr-btn csr-btn--ghost"
                  href={withBasePath('gallery/')}
                  data-csr-no-swipe>3D Gallery</a
                >
              </div>

              <div class="csr-row" data-csr-no-filter>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-tools-gyro
                >
                  Tilt Controls
                </button>
              </div>

              <p class="csr-hint">
                Tip: Keep the panel in “Peek” for best visibility while you
                adjust materials.
              </p>
            </div>
          </div>

          <div
            id="csr-tab-look"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="look"
          >
            <div class="csr-grid">
              <!-- Quick Settings Section -->
              <div class="csr-section csr-section--full">
                <div class="csr-section__header">
                  <svg
                    class="csr-section__icon"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"
                    ></path>
                    <circle cx="12" cy="12" r="4"></circle>
                  </svg>

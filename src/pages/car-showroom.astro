---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import '../styles/car-showroom-v3.css';

const title = 'Car Showroom — 3D Studio';
const description =
  'A dedicated, manufacturer-style 3D car showroom: models, materials, colors, camera, and studio backgrounds.';

const base = import.meta.env.BASE_URL ?? '/';
const galleryHref = `${base}gallery/`;
---

<MarketingLayout
  title={title}
  description={description}
  mainClass="p-0"
  bodyClass="bg-black"
  showFooter={false}
  showStickyCTA={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <section class="sr" data-sr-root>
    <div class="sr__grid">
      <header class="sr__top">
        <div class="sr__title">
          <h1>Car Showroom</h1>
          <p>Studio-grade 3D preview • mobile sheet + desktop panel</p>
        </div>
        <div class="sr__actions">
          <a class="sr-btn" href={galleryHref}>3D Gallery</a>
          <button
            type="button"
            class="sr-btn sr-btn--primary sr-btn--icon"
            data-sr-screenshot
          >
            Screenshot
          </button>
          <button type="button" class="sr-btn sr-btn--icon" data-sr-share>
            Copy link
          </button>
          <button
            type="button"
            class="sr-btn"
            data-sr-panel-toggle
            aria-expanded="true"
          >
            Panel
          </button>
        </div>
      </header>

      <div class="sr__viewer">
        <canvas class="sr__canvas" data-sr-canvas></canvas>

        <div class="sr__hud">
          <div class="sr__status sr-pill" aria-live="polite">
            <span class="sr-pill__dot"></span>
            <span data-sr-status-loading hidden>Loading…</span>
            <span class="sr-pill__muted" data-sr-status-error hidden></span>
          </div>

          <div class="sr-pill">
            <span class="sr-pill__muted">FPS</span>
            <span data-sr-fps>--</span>
            <span class="sr-pill__muted">RES</span>
            <span data-sr-res>1.00x</span>
            <span class="sr-pill__muted" data-sr-mode>LIVE</span>
            <span class="sr-pill__muted" data-sr-eco hidden>ECO</span>
          </div>
        </div>
      </div>

      <aside class="sr__panel" data-sr-panel>
        <div class="sr__panelHead">
          <div>
            <div
              class="sr__panelHandle"
              data-sr-panel-handle
              aria-hidden="true"
            >
            </div>
            <strong>Settings</strong>
          </div>
          <button type="button" class="sr-btn" data-sr-panel-close>Close</button
          >
        </div>

        <div class="sr__panelBody">
          <input
            type="file"
            accept=".glb,model/gltf-binary"
            data-sr-model-file
            hidden
          />

          <section class="sr-section">
            <h2>Model</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Preset</span>
                <select data-sr-model>
                  <option value="models/porsche-911-gt3rs.glb"
                    >Porsche GT3RS</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_LOD3_low.glb"
                    >Porsche Carrera (Low)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_advanced_perf.glb"
                    >Porsche Carrera (Perf)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_advanced_materials.glb"
                    >Porsche Carrera (Materials)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_LOD1_original_animated.glb"
                    >Porsche Carrera (Animated)</option
                  >
                  <option
                    value="models/free_porsche_911_carrera_4s_LOD0_highpoly_animated.glb"
                    >Porsche Carrera (HiPoly)</option
                  >
                </select>
              </label>

              <label class="sr-field">
                <span>Model URL</span>
                <input
                  type="url"
                  inputmode="url"
                  placeholder="models/… or https://…"
                  data-sr-model-url
                />
              </label>

              <div class="sr-row">
                <button
                  type="button"
                  class="sr-btn sr-btn--primary"
                  data-sr-model-load>Load</button
                >
                <button type="button" class="sr-btn" data-sr-model-import
                  >Import</button
                >
              </div>

              <p class="sr-hint">
                Tip: use a repo-relative path (models/…) for GitHub Pages.
              </p>
            </div>
          </section>

          <section class="sr-section">
            <h2>Look</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Paint</span>
                <input type="color" value="#00d1b2" data-sr-paint />
              </label>
              <label class="sr-field">
                <span>Keep original materials</span>
                <input type="checkbox" data-sr-original-mats />
              </label>
            </div>
          </section>

          <section class="sr-section">
            <h2>Environment</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Background</span>
                <select data-sr-bg>
                  <option value="studio">Studio</option>
                  <option value="day">Day</option>
                  <option value="sunset">Sunset</option>
                  <option value="night">Night</option>
                  <option value="void">Void (transparent)</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Light preset</span>
                <select data-sr-light-preset>
                  <option value="studio">Studio</option>
                  <option value="golden">Golden</option>
                  <option value="ice">Ice</option>
                  <option value="neon">Neon</option>
                  <option value="noir">Noir</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Intensity</span>
                <input
                  type="range"
                  min="0.2"
                  max="2.5"
                  step="0.01"
                  value="1"
                  data-sr-light-intensity
                />
              </label>
              <label class="sr-field">
                <span>Warmth</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-light-warmth
                />
              </label>
              <label class="sr-field">
                <span>Rim boost</span>
                <input
                  type="range"
                  min="0.5"
                  max="2"
                  step="0.01"
                  value="1"
                  data-sr-light-rim
                />
              </label>

              <label class="sr-field">
                <span>Env intensity</span>
                <input
                  type="range"
                  min="0"
                  max="3"
                  step="0.01"
                  value="0.9"
                  data-sr-env-intensity
                />
              </label>
              <label class="sr-field">
                <span>Env rotation</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="0"
                  data-sr-env-rotation
                />
              </label>
            </div>
          </section>

          <section class="sr-section">
            <h2>Scene</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Grid</span>
                <input type="checkbox" data-sr-grid />
              </label>
              <label class="sr-field">
                <span>Axes</span>
                <input type="checkbox" data-sr-axes />
              </label>
              <label class="sr-field">
                <span>Haptics</span>
                <input type="checkbox" checked data-sr-haptics />
              </label>
            </div>
          </section>

          <section class="sr-section">
            <h2>Inspector</h2>

            <div class="sr-readout sr-readout--stats" aria-live="polite">
              <div>
                <strong data-sr-stat-meshes>--</strong>
                <small>Meshes</small>
              </div>
              <div>
                <strong data-sr-stat-mats>--</strong>
                <small>Materials</small>
              </div>
              <div>
                <strong data-sr-stat-tris>--</strong>
                <small>Triangles</small>
              </div>
              <div>
                <strong data-sr-stat-tex>--</strong>
                <small>Textures</small>
              </div>
            </div>

            <div class="sr-grid">
              <label class="sr-field">
                <span>Filter</span>
                <input
                  type="text"
                  placeholder="wheel / glass / body…"
                  data-sr-inspector-filter
                />
              </label>
              <label class="sr-field">
                <span>Mesh</span>
                <select data-sr-inspector-mesh></select>
              </label>

              <label class="sr-field">
                <span>Pick on click</span>
                <input type="checkbox" checked data-sr-inspector-pick />
              </label>
              <label class="sr-field">
                <span>Isolate selection</span>
                <input type="checkbox" data-sr-inspector-isolate />
              </label>

              <label class="sr-field">
                <span>Highlight selection</span>
                <input type="checkbox" checked data-sr-inspector-highlight />
              </label>
              <label class="sr-field">
                <span>Wireframe</span>
                <input type="checkbox" data-sr-wireframe />
              </label>

              <div class="sr-row">
                <button type="button" class="sr-btn" data-sr-inspector-clear>
                  Clear
                </button>
                <button type="button" class="sr-btn" data-sr-inspector-reset>
                  Reset
                </button>
              </div>

              <div
                class="sr-readout sr-readout--mini"
                data-sr-inspector-selected
              >
                No selection.
              </div>
            </div>
          </section>

          <section class="sr-section">
            <h2>Animation</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Clip</span>
                <select data-sr-anim-clip disabled></select>
              </label>
              <label class="sr-field">
                <span>Play</span>
                <input type="checkbox" checked data-sr-anim-play disabled />
              </label>
              <label class="sr-field">
                <span>Speed</span>
                <input
                  type="range"
                  min="0"
                  max="2"
                  step="0.01"
                  value="1"
                  data-sr-anim-speed
                  disabled
                />
              </label>
              <div class="sr-row">
                <button
                  type="button"
                  class="sr-btn"
                  data-sr-anim-restart
                  disabled
                >
                  Restart
                </button>
              </div>
            </div>
          </section>

          <section class="sr-section">
            <h2>Floor + Shadows</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Floor color</span>
                <input type="color" value="#0f172a" data-sr-floor-color />
              </label>
              <label class="sr-field">
                <span>Floor opacity</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="1"
                  data-sr-floor-opacity
                />
              </label>
              <label class="sr-field">
                <span>Roughness</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="1"
                  data-sr-floor-roughness
                />
              </label>
              <label class="sr-field">
                <span>Metalness</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-floor-metalness
                />
              </label>
              <label class="sr-field">
                <span>Shadows</span>
                <input type="checkbox" checked data-sr-shadows />
              </label>
              <label class="sr-field">
                <span>Shadow strength</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.6"
                  data-sr-shadow-strength
                />
              </label>
              <label class="sr-field">
                <span>Shadow size</span>
                <input
                  type="range"
                  min="2"
                  max="20"
                  step="0.5"
                  value="10"
                  data-sr-shadow-size
                />
              </label>
              <label class="sr-field">
                <span>High quality shadows</span>
                <input type="checkbox" data-sr-shadow-hq />
              </label>
            </div>
          </section>

          <section class="sr-section">
            <h2>Camera</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Preset</span>
                <select data-sr-camera-preset>
                  <option value="hero">Hero</option>
                  <option value="front">Front</option>
                  <option value="rear">Rear</option>
                  <option value="side">Side</option>
                  <option value="top">Top</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Mode</span>
                <select data-sr-camera-mode>
                  <option value="orbit">Orbit</option>
                  <option value="manual">Manual</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Yaw</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="35"
                  data-sr-camera-yaw
                />
              </label>
              <label class="sr-field">
                <span>Pitch</span>
                <input
                  type="range"
                  min="-10"
                  max="85"
                  step="1"
                  value="12"
                  data-sr-camera-pitch
                />
              </label>
              <label class="sr-field">
                <span>Distance</span>
                <input
                  type="range"
                  min="1.5"
                  max="18"
                  step="0.1"
                  value="6"
                  data-sr-camera-distance
                />
              </label>
              <label class="sr-field">
                <span>FOV</span>
                <input
                  type="range"
                  min="25"
                  max="75"
                  step="1"
                  value="45"
                  data-sr-camera-fov
                />
              </label>
              <div class="sr-row">
                <button type="button" class="sr-btn" data-sr-camera-frame
                  >Frame</button
                >
                <button type="button" class="sr-btn" data-sr-camera-reset
                  >Reset</button
                >
              </div>
            </div>
          </section>

          <section class="sr-section">
            <h2>Motion</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Auto-rotate</span>
                <input type="checkbox" checked data-sr-autorotate />
              </label>
              <label class="sr-field">
                <span>Style</span>
                <select data-sr-motion-style>
                  <option value="turntable">Turntable</option>
                  <option value="float">Float</option>
                  <option value="pendulum">Pendulum</option>
                  <option value="none">None</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Speed</span>
                <input
                  type="range"
                  min="0"
                  max="2"
                  step="0.01"
                  value="0.7"
                  data-sr-motion-speed
                />
              </label>
              <label class="sr-field">
                <span>Zoom</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-zoom
                />
              </label>
            </div>
          </section>

          <section class="sr-section">
            <h2>Performance</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Quality</span>
                <select data-sr-quality>
                  <option value="eco">Eco</option>
                  <option value="balanced" selected>Balanced</option>
                  <option value="ultra">Ultra</option>
                </select>
              </label>
              <label class="sr-field">
                <span>Auto quality (FPS)</span>
                <input type="checkbox" checked data-sr-auto-quality />
              </label>

              <label class="sr-field">
                <span>Target FPS</span>
                <input
                  type="range"
                  min="30"
                  max="90"
                  step="1"
                  value="55"
                  data-sr-target-fps
                />
              </label>
            </div>
          </section>

          <section class="sr-section">
            <h2>Post</h2>
            <div class="sr-grid">
              <label class="sr-field">
                <span>Exposure</span>
                <input
                  type="range"
                  min="0.5"
                  max="2"
                  step="0.01"
                  value="1"
                  data-sr-exposure
                />
              </label>
              <label class="sr-field">
                <span>Bloom</span>
                <input
                  type="range"
                  min="0"
                  max="2"
                  step="0.01"
                  value="0.35"
                  data-sr-bloom
                />
              </label>
              <label class="sr-field">
                <span>Bloom threshold</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.9"
                  data-sr-bloom-threshold
                />
              </label>
              <label class="sr-field">
                <span>Bloom radius</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-sr-bloom-radius
                />
              </label>
            </div>
          </section>
        </div>
      </aside>
    </div>

    <script>
      import '../scripts/car-showroom-v3';
    </script>
  </section>
</MarketingLayout>

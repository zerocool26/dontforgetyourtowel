---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { withBasePath } from '../utils/helpers';
import '../styles/car-showroom.css';

const title = 'Car Showroom — 3D Studio';
const description =
  'A dedicated, manufacturer-style 3D car showroom: models, materials, colors, camera, and studio backgrounds.';
---

<MarketingLayout
  title={title}
  description={description}
  mainClass="p-0"
  bodyClass="bg-black"
  showFooter={false}
  showStickyCTA={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <section class="car-showroom" data-car-showroom-root>
    <canvas class="car-showroom__canvas" data-car-showroom-canvas></canvas>

    <input
      class="csr-file"
      type="file"
      accept=".glb,model/gltf-binary"
      data-csr-file
      hidden
    />

    <div class="csr-status" data-csr-status aria-live="polite">
      <div class="csr-status__loading" data-csr-loading hidden>
        <span class="csr-status__dot"></span>
        <span>Loading model…</span>
      </div>
      <div class="csr-status__error" data-csr-error hidden></div>
    </div>

    <div class="car-showroom__hud" aria-label="Car showroom controls">
      <div class="car-showroom__hud-top">
        <div class="car-showroom__title">
          <p class="car-showroom__kicker">3D Car Showroom</p>
          <h1 class="car-showroom__headline">Studio Configurator</h1>
        </div>

        <div class="car-showroom__actions">
          <button
            type="button"
            class="csr-btn"
            data-csr-toggle-panel
            aria-controls="csr-panel"
            aria-expanded="true"
          >
            Options
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-copy-link
            title="Copy a shareable link"
          >
            Share
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-screenshot
            title="Download a PNG screenshot"
          >
            Screenshot
          </button>
          <button
            type="button"
            class="csr-btn csr-btn--ghost"
            data-csr-import
            title="Load a local .glb file"
          >
            Import GLB
          </button>
          <a class="csr-btn csr-btn--ghost" href={withBasePath('gallery/')}
            >3D Gallery</a
          >
        </div>
      </div>

      <div
        id="csr-panel"
        class="car-showroom__panel"
        data-csr-panel
        aria-label="Configurator options"
      >
        <div class="csr-panel-head">
          <div class="csr-panel-head__row">
            <strong class="csr-panel-head__title">Options</strong>
            <button
              type="button"
              class="csr-btn csr-btn--ghost csr-btn--icon"
              data-csr-close-panel
              aria-label="Close options"
              title="Close"
            >
              ✕
            </button>
          </div>

          <div class="csr-panel-inspector">
            <div class="csr-inspector-card">
              <span class="csr-inspector-title">Selection</span>
              <div class="csr-readout" data-csr-selected-part>
                Tap/click the car to select
              </div>
              <div
                class="csr-readout csr-readout--mini"
                data-csr-selected-mesh
                hidden
              >
                Mesh: —
              </div>
              <div
                class="csr-readout csr-readout--mini"
                data-csr-selected-path
                hidden
              >
                Path: —
              </div>
              <div
                class="csr-readout csr-readout--mini"
                data-csr-selected-material
                hidden
              >
                Material: —
              </div>
            </div>
            <div class="csr-inspector-card">
              <span class="csr-inspector-title">Model stats</span>
              <div class="csr-readout csr-readout--stats">
                <div>
                  <strong data-csr-model-size>—</strong>
                  <small>Size (X×Y×Z)</small>
                </div>
                <div>
                  <strong data-csr-model-meshes>—</strong>
                  <small>Meshes</small>
                </div>
                <div>
                  <strong data-csr-model-tris>—</strong>
                  <small>Triangles</small>
                </div>
                <div>
                  <strong data-csr-fps>—</strong>
                  <small>FPS</small>
                </div>
              </div>
            </div>
          </div>

          <div class="csr-panel-filter">
            <input
              class="csr-text csr-filter-input"
              type="search"
              placeholder="Filter settings…"
              data-csr-filter
            />
            <button
              type="button"
              class="csr-btn csr-btn--ghost csr-btn--icon"
              data-csr-filter-clear
              aria-label="Clear filter"
              title="Clear filter"
            >
              ✕
            </button>
          </div>

          <div
            class="csr-tabs"
            role="tablist"
            aria-label="Configurator sections"
          >
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="true"
              aria-controls="csr-tab-look"
              data-csr-tab-btn="look"
            >
              Look
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-env"
              data-csr-tab-btn="env"
              tabindex="-1"
            >
              Environment
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-camera"
              data-csr-tab-btn="camera"
              tabindex="-1"
            >
              Camera
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-post"
              data-csr-tab-btn="post"
              tabindex="-1"
            >
              Post
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-motion"
              data-csr-tab-btn="motion"
              tabindex="-1"
            >
              Motion
            </button>
            <button
              type="button"
              class="csr-tab-btn"
              role="tab"
              aria-selected="false"
              aria-controls="csr-tab-setup"
              data-csr-tab-btn="setup"
              tabindex="-1"
            >
              Setup
            </button>
          </div>
        </div>

        <div class="csr-tab-panels" data-csr-tab-panels>
          <div class="csr-filter-empty" data-csr-filter-empty hidden>
            No matching settings. Try another keyword.
          </div>
          <div
            id="csr-tab-look"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="look"
          >
            <div class="csr-grid">
              <label class="csr-field">
                <span>Mode</span>
                <select data-csr-mode>
                  <option value="paint">Paint</option>
                  <option value="factory">Factory</option>
                  <option value="wrap">Wrap</option>
                  <option value="glass">Glass</option>
                  <option value="wireframe">Wireframe</option>
                </select>
              </label>

              <label class="csr-field">
                <span>Style preset</span>
                <select data-csr-style-preset>
                  <option value="">Choose…</option>
                  <option value="stealth">Stealth</option>
                  <option value="track">Track weapon</option>
                  <option value="lux">Executive luxe</option>
                  <option value="neo">Neo neon</option>
                  <option value="classic">Classic sport</option>
                </select>
              </label>

              <label class="csr-field">
                <span>Body color</span>
                <input type="color" value="#00d1b2" data-csr-color />
              </label>

              <label class="csr-field">
                <span>Wrap color</span>
                <input type="color" value="#00d1b2" data-csr-wrap-color />
              </label>

              <label class="csr-field">
                <span>Wrap style</span>
                <select data-csr-wrap-style>
                  <option value="oem">OEM (preserve model wrap)</option>
                  <option value="procedural">Procedural</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Wrap tint</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.92"
                  data-csr-wrap-tint
                />
              </label>

              <label class="csr-field">
                <span>Wrap pattern</span>
                <select data-csr-wrap-pattern>
                  <option value="solid">Solid</option>
                  <option value="stripes">Stripes</option>
                  <option value="carbon">Carbon</option>
                  <option value="camo">Camo</option>
                  <option value="checker">Checker</option>
                  <option value="hex">Hex</option>
                  <option value="race">Race numbers</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Wrap scale</span>
                <input
                  type="range"
                  min="0.2"
                  max="6"
                  step="0.01"
                  value="1.6"
                  data-csr-wrap-scale
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Wrap rotation</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="0"
                  data-csr-wrap-rot
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Wrap offset X</span>
                <input
                  type="range"
                  min="-1"
                  max="1"
                  step="0.01"
                  value="0"
                  data-csr-wrap-ox
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Wrap offset Y</span>
                <input
                  type="range"
                  min="-1"
                  max="1"
                  step="0.01"
                  value="0"
                  data-csr-wrap-oy
                />
              </label>

              <div class="csr-field csr-field--wide">
                <span>Color presets</span>
                <div class="csr-swatches" role="list">
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#00d1b2"
                    data-csr-swatch="#00d1b2"
                    aria-label="Teal"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#60a5fa"
                    data-csr-swatch="#60a5fa"
                    aria-label="Blue"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#f472b6"
                    data-csr-swatch="#f472b6"
                    aria-label="Pink"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#fbbf24"
                    data-csr-swatch="#fbbf24"
                    aria-label="Gold"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#f87171"
                    data-csr-swatch="#f87171"
                    aria-label="Red"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#e5e7eb"
                    data-csr-swatch="#e5e7eb"
                    aria-label="Silver"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#0b0f1a"
                    data-csr-swatch="#0b0f1a"
                    aria-label="Black"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#ffffff"
                    data-csr-swatch="#ffffff"
                    aria-label="White"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#22c55e"
                    data-csr-swatch="#22c55e"
                    aria-label="Green"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#a855f7"
                    data-csr-swatch="#a855f7"
                    aria-label="Purple"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#fb923c"
                    data-csr-swatch="#fb923c"
                    aria-label="Orange"></button>
                  <button
                    type="button"
                    class="csr-swatch"
                    style="--swatch:#94a3b8"
                    data-csr-swatch="#94a3b8"
                    aria-label="Slate"></button>
                </div>
              </div>

              <div class="csr-row">
                <button type="button" class="csr-btn" data-csr-randomize-look>
                  Randomize look
                </button>
                <p class="csr-hint">Fresh paint + accent combo every click</p>
              </div>

              <label class="csr-field">
                <span>Body finish</span>
                <select data-csr-finish>
                  <option value="gloss">Gloss</option>
                  <option value="satin">Satin</option>
                  <option value="matte">Matte</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Clearcoat depth</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="1"
                  data-csr-clearcoat
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Paint flake intensity</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.25"
                  data-csr-flake-intensity
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Paint flake scale</span>
                <input
                  type="range"
                  min="0.5"
                  max="8"
                  step="0.1"
                  value="2.5"
                  data-csr-flake-scale
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Pearl shift</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-csr-pearl
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Pearl thickness</span>
                <input
                  type="range"
                  min="100"
                  max="800"
                  step="10"
                  value="320"
                  data-csr-pearl-thickness
                />
              </label>

              <label class="csr-field">
                <span>Wheel finish</span>
                <select data-csr-wheel-finish>
                  <option value="graphite">Graphite</option>
                  <option value="chrome">Chrome</option>
                  <option value="black">Black</option>
                </select>
              </label>

              <label class="csr-field">
                <span>Wheel color</span>
                <input type="color" value="#1f2937" data-csr-wheel-color />
              </label>

              <label class="csr-field">
                <span>Trim finish</span>
                <select data-csr-trim-finish>
                  <option value="black">Black</option>
                  <option value="chrome">Chrome</option>
                  <option value="brushed">Brushed</option>
                </select>
              </label>

              <label class="csr-field">
                <span>Trim color</span>
                <input type="color" value="#0b0f1a" data-csr-trim-color />
              </label>

              <label class="csr-field">
                <span>Caliper color</span>
                <input type="color" value="#ef4444" data-csr-caliper-color />
              </label>

              <label class="csr-field">
                <span>Headlight color</span>
                <input type="color" value="#dbeafe" data-csr-light-color />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Headlight glow</span>
                <input
                  type="range"
                  min="0"
                  max="4"
                  step="0.01"
                  value="1.25"
                  data-csr-light-glow
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Glass tint</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.15"
                  data-csr-glass-tint
                />
              </label>
            </div>
          </div>

          <div
            id="csr-tab-env"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="env"
            hidden
          >
            <div class="csr-grid">
              <label class="csr-field csr-field--wide">
                <span>Background</span>
                <select data-csr-background>
                  <option value="studio">Studio</option>
                  <option value="day">Day</option>
                  <option value="sunset">Sunset</option>
                  <option value="night">Night</option>
                  <option value="grid">Grid</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Light preset</span>
                <select data-csr-light-preset>
                  <option value="studio">Studio neutral</option>
                  <option value="golden">Golden hour</option>
                  <option value="neon">Neon night</option>
                  <option value="ice">Ice lab</option>
                  <option value="noir">Noir contrast</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Grid overlay</span>
                <label class="csr-check">
                  <input type="checkbox" data-csr-grid />
                  <span>Show studio grid</span>
                </label>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Environment reflections</span>
                <input
                  type="range"
                  min="0"
                  max="3"
                  step="0.01"
                  value="1"
                  data-csr-env-intensity
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Lighting intensity</span>
                <input
                  type="range"
                  min="0.2"
                  max="2.5"
                  step="0.01"
                  value="1"
                  data-csr-light-intensity
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Light warmth</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-csr-light-warmth
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Rim boost</span>
                <input
                  type="range"
                  min="0.5"
                  max="2"
                  step="0.01"
                  value="1"
                  data-csr-rim-boost
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Rig rotation</span>
                <input
                  type="range"
                  min="0"
                  max="360"
                  step="1"
                  value="0"
                  data-csr-rig-yaw
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Rig height</span>
                <input
                  type="range"
                  min="0.6"
                  max="1.6"
                  step="0.01"
                  value="1"
                  data-csr-rig-height
                />
              </label>

              <label class="csr-field">
                <span>Underglow color</span>
                <input type="color" value="#22d3ee" data-csr-underglow-color />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Underglow intensity</span>
                <input
                  type="range"
                  min="0"
                  max="5"
                  step="0.01"
                  value="0"
                  data-csr-underglow
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Underglow pulse</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-csr-underglow-pulse
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Underglow radius</span>
                <input
                  type="range"
                  min="2"
                  max="8"
                  step="0.1"
                  value="4.5"
                  data-csr-underglow-size
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Floor preset</span>
                <select data-csr-floor-preset>
                  <option value="auto">Auto (match scene)</option>
                  <option value="asphalt">Asphalt</option>
                  <option value="matte">Matte studio</option>
                  <option value="polished">Polished studio</option>
                  <option value="glass">Glass (transparent)</option>
                </select>
              </label>

              <label class="csr-field">
                <span>Floor color</span>
                <input type="color" value="#05070d" data-csr-floor-color />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Floor roughness</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.55"
                  data-csr-floor-roughness
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Floor metalness</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.02"
                  data-csr-floor-metalness
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Floor opacity</span>
                <input
                  type="range"
                  min="0.05"
                  max="1"
                  step="0.01"
                  value="1"
                  data-csr-floor-opacity
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Shadow strength</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.85"
                  data-csr-shadow
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Shadow size</span>
                <input
                  type="range"
                  min="3"
                  max="10"
                  step="0.1"
                  value="6"
                  data-csr-shadow-size
                />
              </label>
            </div>
          </div>

          <div
            id="csr-tab-camera"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="camera"
            hidden
          >
            <div class="csr-grid">
              <label class="csr-field">
                <span>Camera</span>
                <select data-csr-camera>
                  <option value="hero">Hero</option>
                  <option value="front">Front 3/4</option>
                  <option value="rear">Rear 3/4</option>
                  <option value="side">Side</option>
                  <option value="top">Top</option>
                  <option value="detail">Detail</option>
                </select>
              </label>

              <label class="csr-field">
                <span>Camera mode</span>
                <select data-csr-camera-mode>
                  <option value="preset">Preset</option>
                  <option value="manual">Manual</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Yaw</span>
                <input
                  type="range"
                  min="-180"
                  max="180"
                  step="1"
                  value="17"
                  data-csr-cam-yaw
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Pitch</span>
                <input
                  type="range"
                  min="-5"
                  max="60"
                  step="1"
                  value="7"
                  data-csr-cam-pitch
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Distance</span>
                <input
                  type="range"
                  min="2.5"
                  max="14"
                  step="0.05"
                  value="9.8"
                  data-csr-cam-distance
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>FOV</span>
                <input
                  type="range"
                  min="35"
                  max="85"
                  step="1"
                  value="55"
                  data-csr-fov
                />
              </label>

              <div class="csr-row">
                <button type="button" class="csr-btn" data-csr-frame>
                  Frame model
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-focus-selection
                >
                  Focus selection
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-reset-view
                >
                  Reset view
                </button>
                <p class="csr-hint">Manual lets you get close fast</p>
              </div>
            </div>
          </div>

          <div
            id="csr-tab-post"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="post"
            hidden
          >
            <div class="csr-grid">
              <label class="csr-field csr-field--wide">
                <span>Exposure</span>
                <input
                  type="range"
                  min="0.1"
                  max="3"
                  step="0.01"
                  value="1"
                  data-csr-exposure
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Bloom</span>
                <input
                  type="range"
                  min="0"
                  max="3"
                  step="0.01"
                  value="0.35"
                  data-csr-bloom
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Bloom threshold</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.88"
                  data-csr-bloom-threshold
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Bloom radius</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0.35"
                  data-csr-bloom-radius
                />
              </label>
            </div>
          </div>

          <div
            id="csr-tab-motion"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="motion"
            hidden
          >
            <div class="csr-grid">
              <label class="csr-field">
                <span>Auto-rotate</span>
                <input type="checkbox" data-csr-autorotate />
              </label>

              <label class="csr-field">
                <span>Motion style</span>
                <select data-csr-motion-style>
                  <option value="spin">Spin</option>
                  <option value="orbit">Orbit</option>
                  <option value="pendulum">Pendulum</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Spin speed</span>
                <input
                  type="range"
                  min="0"
                  max="2"
                  step="0.01"
                  value="0.65"
                  data-csr-spinspeed
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Orbit amplitude</span>
                <input
                  type="range"
                  min="0"
                  max="45"
                  step="1"
                  value="18"
                  data-csr-motion-range
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Zoom</span>
                <input
                  type="range"
                  min="0"
                  max="1"
                  step="0.01"
                  value="0"
                  data-csr-zoom
                />
              </label>

              <div class="csr-row">
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-zoom-wide
                >
                  Wide
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-zoom-mid
                >
                  Mid
                </button>
                <button
                  type="button"
                  class="csr-btn"
                  data-csr-zoom-close
                  title="Quick close-up"
                >
                  Close
                </button>
                <p class="csr-hint">Quick zoom</p>
              </div>
            </div>
          </div>

          <div
            id="csr-tab-setup"
            class="csr-tab"
            role="tabpanel"
            data-csr-tab-panel="setup"
            hidden
          >
            <div class="csr-grid">
              <label class="csr-field">
                <span>Quality</span>
                <select data-csr-quality>
                  <option value="balanced">Balanced</option>
                  <option value="performance">Performance</option>
                  <option value="ultra">Ultra</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Auto quality</span>
                <label class="csr-check">
                  <input type="checkbox" data-csr-auto-quality checked />
                  <span>Adapt quality for steady FPS</span>
                </label>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Original materials</span>
                <label class="csr-check">
                  <input type="checkbox" data-csr-original-mats />
                  <span
                    >Use the model’s original materials (keeps decals/wrap)</span
                  >
                </label>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Ride height</span>
                <input
                  type="range"
                  min="-0.3"
                  max="0.3"
                  step="0.01"
                  value="0"
                  data-csr-ride-height
                />
              </label>

              <label class="csr-field csr-field--wide">
                <span>Model yaw</span>
                <input
                  type="range"
                  min="0"
                  max="360"
                  step="1"
                  value="0"
                  data-csr-model-yaw
                />
              </label>

              <div class="csr-row">
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-undo
                >
                  Undo
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-redo
                >
                  Redo
                </button>
                <p class="csr-hint">Ctrl/⌘+Z • Ctrl/⌘+Y</p>
              </div>

              <label class="csr-field">
                <span>Screenshot scale</span>
                <select data-csr-shot-scale>
                  <option value="1">1×</option>
                  <option value="2">2×</option>
                  <option value="4">4×</option>
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Transparent screenshot background</span>
                <input type="checkbox" data-csr-shot-transparent />
              </label>

              <div class="csr-row">
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-clear-selection
                >
                  Clear selection
                </button>
                <button type="button" class="csr-btn" data-csr-copy-build>
                  Copy build sheet
                </button>
                <p class="csr-hint">Share config as JSON</p>
              </div>

              <div class="csr-field csr-field--wide">
                <span>Selected part mapping</span>
                <div class="csr-inline">
                  <select data-csr-assign-part>
                    <option value="">Auto (heuristics)</option>
                    <option value="body">Body</option>
                    <option value="decal">Decal / livery</option>
                    <option value="trim">Trim</option>
                    <option value="wheel">Wheel</option>
                    <option value="tire">Tire</option>
                    <option value="caliper">Caliper</option>
                    <option value="light">Light</option>
                    <option value="glass">Glass</option>
                  </select>
                  <button type="button" class="csr-btn" data-csr-assign-apply>
                    Assign
                  </button>
                </div>
              </div>

              <div class="csr-row">
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-assign-clear-all
                >
                  Clear part map
                </button>
                <p class="csr-hint">Saves per model (shareable models only)</p>
              </div>

              <div class="csr-field csr-field--wide">
                <span>Paste build sheet</span>
                <textarea
                  class="csr-text csr-textarea"
                  spellcheck="false"
                  placeholder="Paste the JSON from “Copy build sheet” here…"
                  data-csr-buildsheet-paste></textarea>
              </div>

              <div class="csr-row">
                <button type="button" class="csr-btn" data-csr-buildsheet-apply>
                  Apply build sheet
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-buildsheet-clear
                >
                  Clear
                </button>
                <p class="csr-hint">Imports state + part map</p>
              </div>

              <label class="csr-field">
                <span>Model</span>
                <select data-csr-model>
                  <option value="/models/porsche-911-gt3rs.glb"
                    >Porsche 911 GT3 RS</option
                  >
                </select>
              </label>

              <label class="csr-field csr-field--wide">
                <span>Model URL</span>
                <div class="csr-inline">
                  <input
                    class="csr-text"
                    type="text"
                    inputmode="url"
                    spellcheck="false"
                    autocomplete="off"
                    placeholder="/models/your-car.glb or https://…/car.glb"
                    data-csr-model-url
                  />
                  <button type="button" class="csr-btn" data-csr-load-model>
                    Load
                  </button>
                </div>
              </label>

              <div class="csr-field csr-field--wide">
                <span>Presets</span>
                <div class="csr-inline">
                  <select data-csr-preset>
                    <option value="">No saved presets</option>
                  </select>
                  <button type="button" class="csr-btn" data-csr-preset-load>
                    Load
                  </button>
                </div>
              </div>

              <div class="csr-row">
                <button type="button" class="csr-btn" data-csr-preset-save>
                  Save preset
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-preset-delete
                >
                  Delete
                </button>
                <p class="csr-hint">Saved to this browser</p>
              </div>

              <div class="csr-row">
                <button type="button" class="csr-btn" data-csr-reset>
                  Reset
                </button>
                <button
                  type="button"
                  class="csr-btn csr-btn--ghost"
                  data-csr-reset-camera
                >
                  Reset camera
                </button>
                <p class="csr-hint">
                  Drag orbit • Wheel/pinch zoom • O options • S screenshot • P
                  save
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    import '../scripts/car-showroom';
  </script>
</MarketingLayout>

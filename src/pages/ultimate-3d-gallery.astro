  }

  .leaf {
    position: absolute;
    width: 20px;
    height: 30px;
    background: linear-gradient(
      135deg,
      rgba(34, 197, 94, 0.9),
      rgba(16, 185, 129, 0.7)
    );
    border-radius: 50% 0 50% 0;
    transform-origin: center;
    transform: translateX(var(--leaf-x)) translateY(var(--leaf-y))
      rotate(var(--leaf-angle));
    box-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
    animation: leafSway 3s ease-in-out infinite;
    animation-delay: var(--leaf-delay);
  }

  @keyframes leafSway {
    0%,
    100% {
      transform: translateX(var(--leaf-x)) translateY(var(--leaf-y))
        rotate(var(--leaf-angle));
    }
    50% {
      transform: translateX(calc(var(--leaf-x) + 10px))
        translateY(var(--leaf-y)) rotate(calc(var(--leaf-angle) + 20deg));
    }
  }

  /* Crystal Styles */
  .crystal-container {
    perspective: 2000px;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .crystal-structure {
    position: relative;
    width: 600px;
    height: 600px;
    transform-style: preserve-3d;
    animation: crystalRotate 25s linear infinite;
  }

  @keyframes crystalRotate {
    0% {
      transform: rotateY(0deg) rotateX(20deg);
    }
    100% {
      transform: rotateY(360deg) rotateX(20deg);
    }
  }

  .crystal {
    position: absolute;
    width: 100px;
    height: 150px;
    left: 50%;
    top: 50%;
    background: linear-gradient(
      135deg,
      rgba(6, 182, 212, 0.8),
      rgba(59, 130, 246, 0.6)
    );
    clip-path: polygon(50% 0%, 100% 35%, 80% 100%, 20% 100%, 0% 35%);
    transform-origin: center;
    border: 2px solid rgba(6, 182, 212, 0.8);
    box-shadow:
      0 0 40px rgba(6, 182, 212, 0.8),
      inset 0 0 30px rgba(255, 255, 255, 0.3);
    animation: crystalGlow 3s ease-in-out infinite;
  }

  @keyframes crystalGlow {
    0%,
    100% {
      box-shadow:
        0 0 40px rgba(6, 182, 212, 0.8),
        inset 0 0 30px rgba(255, 255, 255, 0.3);
    }
    50% {
      box-shadow:
        0 0 80px rgba(6, 182, 212, 1),
        inset 0 0 60px rgba(255, 255, 255, 0.6);
    }
  }

  .main-crystal {
    transform: translate(-50%, -50%) scale(1.5);
  }

  .satellite-crystal {
    transform: translate(-50%, -50%) rotateZ(var(--angle)) translateX(200px)
      rotateZ(calc(var(--angle) * -1)) scale(0.7);
    animation-delay: var(--delay);
  }

  .energy-beam {
    position: absolute;
    width: 4px;
    height: 300px;
    left: 50%;
    top: 50%;
    background: linear-gradient(to bottom, rgba(6, 182, 212, 0.8), transparent);
    transform-origin: 50% 0%;
    transform: translateX(-50%) translateY(-50%) rotateZ(var(--beam-angle));
    animation: beamPulse 2s ease-in-out infinite;
    animation-delay: var(--beam-delay);
    filter: blur(2px);
  }

  @keyframes beamPulse {
    0%,
    100% {
      opacity: 0.3;
    }
    50% {
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .galaxy,
    .fractal-tree,
    .crystal-structure {
      transform: scale(0.6);
    }

    .tesseract,
    .wormhole {
      transform: scale(0.7);
    }
  }

  /* Respect reduced motion to cut GPU/CPU load */
  @media (prefers-reduced-motion: reduce) {
    .animate-float,
    .galaxy,
    .galaxy .star,
    .tesseract,
    .tesseract .cube,
    .connector,
    .wormhole,
    .wormhole-ring,
    .nebula,
    .nebula-layers .layer,
    .floating-island,
    .floating-island::before,
    .floating-island::after,
    .crystal-structure,
    .crystal,
    .energy-beam,
    .forest,
    .leaf {
      animation: none !important;
      transition: none !important;
    }
    .galaxy,
    .tesseract,
    .wormhole,
    .nebula,

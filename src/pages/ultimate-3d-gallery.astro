<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    50% {
      transform: translateY(-50px) translateX(30px);
    }
  }

  .animate-float {
    animation: float 8s ease-in-out infinite;
  }

  /* Galaxy Styles */
  .galaxy-container {
    perspective: 2000px;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .galaxy {
    position: relative;
    width: 800px;
    height: 800px;
    transform-style: preserve-3d;
    animation: galaxyRotate 40s linear infinite;
  }

  @keyframes galaxyRotate {
    0% {
      transform: rotateZ(0deg) rotateX(70deg);
    }
    100% {
      transform: rotateZ(360deg) rotateX(70deg);
    }
  }

  .star {
    position: absolute;
    width: var(--size);
    height: var(--size);
    left: 50%;
    top: 50%;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 1),
      rgba(139, 92, 246, 0.8)
    );
    border-radius: 50%;
    transform: translateX(-50%) translateY(-50%) rotateZ(var(--angle))
      translateX(var(--radius)) translateZ(0);
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
    animation: starTwinkle 3s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes starTwinkle {
    0%,
    100% {
      opacity: 0.6;
      transform: translateX(-50%) translateY(-50%) rotateZ(var(--angle))
        translateX(var(--radius)) translateZ(0) scale(1);
    }
    50% {
      opacity: 1;
      transform: translateX(-50%) translateY(-50%) rotateZ(var(--angle))
        translateX(var(--radius)) translateZ(0) scale(1.3);
    }
  }

  /* Tesseract Styles */
  .tesseract-container {
    perspective: 2500px;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .tesseract {
    position: relative;
    width: 400px;
    height: 400px;
    transform-style: preserve-3d;
    animation: tesseractRotate 20s linear infinite;
  }

  @keyframes tesseractRotate {
    0% {
      transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg);
    }
    100% {
      transform: rotateX(360deg) rotateY(360deg) rotateZ(360deg);
    }
  }

  .cube {
    position: absolute;
    width: 200px;
    height: 200px;
    transform-style: preserve-3d;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .outer-cube {
    animation: outerCubeRotate 15s linear infinite;
  }

  .inner-cube {
    transform: translate(-50%, -50%) scale(0.5);
    animation: innerCubeRotate 15s linear infinite reverse;
  }

  @keyframes outerCubeRotate {
    0% {
      transform: translate(-50%, -50%) rotateX(0deg) rotateY(0deg);
    }
    100% {
      transform: translate(-50%, -50%) rotateX(360deg) rotateY(360deg);
    }
  }

  @keyframes innerCubeRotate {
    0% {
      transform: translate(-50%, -50%) scale(0.5) rotateX(0deg) rotateY(0deg);
    }
    100% {
      transform: translate(-50%, -50%) scale(0.5) rotateX(360deg)
        rotateY(360deg);
    }
  }

  .cube-face {
    position: absolute;
    width: 200px;
    height: 200px;
    border: 2px solid rgba(59, 130, 246, 0.8);
    background: radial-gradient(
      circle at center,
      rgba(59, 130, 246, 0.3),
      rgba(59, 130, 246, 0.1)
    );
    backdrop-filter: blur(10px);
  }

  .front {
    transform: rotateY(0deg) translateZ(100px);
  }
  .back {
    transform: rotateY(180deg) translateZ(100px);
  }
  .right {
    transform: rotateY(90deg) translateZ(100px);
  }
  .left {
    transform: rotateY(-90deg) translateZ(100px);
  }
  .top {
    transform: rotateX(90deg) translateZ(100px);
  }
  .bottom {
    transform: rotateX(-90deg) translateZ(100px);
  }

  .connector {
    position: absolute;
    width: 2px;
    height: 141px; /* sqrt(2) * 100 */
    background: linear-gradient(
      to bottom,
      rgba(59, 130, 246, 0.6),
      rgba(139, 92, 246, 0.6)
    );
    transform-origin: center;
    left: 50%;
    top: 50%;
  }

  /* Wormhole Styles */
  .wormhole-container {
    perspective: 1500px;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .wormhole {
    position: relative;
    width: 600px;
    height: 600px;
    transform-style: preserve-3d;
  }

  .wormhole-ring {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 500px;
    height: 500px;
    border: 4px solid rgba(99, 102, 241, 0.8);
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(var(--scale))
      translateZ(var(--depth));
    box-shadow:
      0 0 40px rgba(99, 102, 241, 0.6),
      inset 0 0 40px rgba(99, 102, 241, 0.4);
    animation: wormholeRingPulse 3s ease-in-out infinite;
    animation-delay: calc(var(--index) * 0.05s);

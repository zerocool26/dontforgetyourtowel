---
import Layout from '../layouts/MarketingLayout.astro';
import HeroSection from '../components/landing/HeroSection.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import { CONTACT_EMAIL } from '../consts';
import { withBasePath } from '../utils/helpers';

const startProjectHref = `mailto:${encodeURIComponent(
  CONTACT_EMAIL
)}?subject=${encodeURIComponent('New project inquiry')}`;
---

<Layout
  title="Olive Global Systems — Elite Technology Architecture"
  description="Next-generation cybersecurity, autonomous AI engineering, and complex systems architecture for global enterprises."
  showFooter={false}
  showStickyCTA={false}
>
  <main class="overflow-x-hidden">
    <HeroSection
      badge="AUTONOMOUS AI • GLOBAL NETWORK BACKBONES • ELITE CYBERSECURITY"
      headline="Engineered for the 2026 technology transition."
      subheading="We build, secure, and orchestrate the world's most complex digital infrastructure. From AI-native red teaming to private 6G networks, we provide the architecture for global leadership."
    />

    <section
      class="mx-auto max-w-6xl px-6 pb-16 pt-8 sm:px-10 sm:pb-20 sm:pt-10"
      data-reveal
    >
      <div
        class="mb-6 flex flex-wrap items-center gap-2 rounded-2xl border border-white/10 bg-zinc-950/50 p-3 text-xs text-zinc-300"
      >
        <span class="mr-2 uppercase tracking-[0.24em] text-zinc-500"
          >Capability Lanes</span
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1 transition hover:border-white/20 hover:text-white"
          href={withBasePath('services/#ai')}>AI Systems</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1 transition hover:border-white/20 hover:text-white"
          href={withBasePath('services/#cybersecurity')}>Cybersecurity</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1 transition hover:border-white/20 hover:text-white"
          href={withBasePath('services/#cloud')}>Cloud Engineering</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1 transition hover:border-white/20 hover:text-white"
          href={withBasePath('services/#managed-it')}>Managed Operations</a
        >
      </div>
      <div class="grid gap-6 lg:grid-cols-2">
        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-6"
        >
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-zinc-400"
          >
            Cognitive Systems
          </p>
          <h2 class="mt-3 text-2xl font-semibold text-white">
            AI Orchestration & Advanced Dev
          </h2>
          <p class="mt-3 text-sm text-zinc-300">
            Autonomous multi-agent systems, custom LLM fine-tuning, and
            immersive digital twins.
          </p>
          <ul class="mt-5 space-y-2 text-sm text-zinc-300">
            <li class="flex items-start gap-2">
              <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500"
              ></span><span>Generative AI Roadmaps & MLOps Pipelines</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500"
              ></span><span>Unity/Unreal Engine Immersive Simulations</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500"
              ></span><span>Cloud-Native engineering & Web3 architectures</span>
            </li>
          </ul>
          <div class="mt-6 flex flex-wrap gap-3">
            <ModernButton
              href={withBasePath('services/')}
              variant="primary"
              className="min-h-[48px]">Explore services</ModernButton
            >
            <ModernButton
              href={startProjectHref}
              variant="secondary"
              className="min-h-[48px]">Email us</ModernButton
            >
          </div>
        </ModernCard>

        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-6"
        >
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-zinc-400"
          >
            Digital Resilience
          </p>
          <h2 class="mt-3 text-2xl font-semibold text-white">
            Cybersecurity & Network Engineering
          </h2>
          <p class="mt-3 text-sm text-zinc-300">
            Zero-Trust architecture, private 5G infrastructure, and automated
            threat hunting.
          </p>
          <ul class="mt-5 space-y-2 text-sm text-zinc-300">
            <li class="flex items-start gap-2">
              <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500"
              ></span><span>AI-Native Red Teaming & Quantum Encryption</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500"
              ></span><span>Global SD-WAN & Secure Edge Computing</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500"
              ></span><span>Managed Detection & Response (MDR) 24/7</span>
            </li>
          </ul>
          <div class="mt-6 flex flex-wrap gap-3">
            <ModernButton
              href={withBasePath('about/')}
              variant="secondary"
              className="min-h-[48px]">About the team</ModernButton
            >
            <ModernButton
              href={startProjectHref}
              variant="primary"
              className="min-h-[48px]">Start a project</ModernButton
            >
          </div>
        </ModernCard>
      </div>
    </section>

    <section class="border-y border-white/5 bg-zinc-900/30">
      <div
        class="mx-auto grid max-w-6xl gap-4 px-6 py-8 sm:grid-cols-2 sm:px-10 sm:py-10 lg:grid-cols-4"
      >
        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-5"
        >
          <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
            Coverage
          </p>
          <p class="mt-2 text-2xl font-semibold text-white">24/7/365</p>
          <p class="mt-1 text-xs text-zinc-400">
            Threat detection, incident triage, and platform monitoring.
          </p>
        </ModernCard>
        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-5"
        >
          <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
            Practice Areas
          </p>
          <p class="mt-2 text-2xl font-semibold text-white">6 Domains</p>
          <p class="mt-1 text-xs text-zinc-400">
            Security, MSP, AI, Apps, Network, and Cloud Engineering.
          </p>
        </ModernCard>
        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-5"
        >
          <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
            Service Depth
          </p>
          <p class="mt-2 text-2xl font-semibold text-white">100+ Offers</p>
          <p class="mt-1 text-xs text-zinc-400">
            Enterprise-ready service catalog with clear execution lanes.
          </p>
        </ModernCard>
        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-5"
        >
          <p class="text-xs uppercase tracking-[0.22em] text-zinc-500">
            Delivery Model
          </p>
          <p class="mt-2 text-2xl font-semibold text-white">Assess → Operate</p>
          <p class="mt-1 text-xs text-zinc-400">
            Structured onboarding, runbooks, and optimization cadence.
          </p>
        </ModernCard>
      </div>
    </section>

    <section class="mx-auto max-w-6xl px-6 py-14 sm:px-10 sm:py-20">
      <div class="grid gap-8 lg:grid-cols-[1fr_1.1fr] lg:items-start">
        <div class="space-y-5">
          <p
            class="text-xs font-semibold uppercase tracking-[0.32em] text-zinc-400"
          >
            Why Teams Switch
          </p>
          <h2 class="text-3xl font-semibold text-white sm:text-4xl">
            Replace fragmented vendors with one accountable engineering partner.
          </h2>
          <p class="text-sm leading-relaxed text-zinc-300">
            Most organizations run separate providers for infrastructure,
            security, and product engineering. We unify strategy and execution
            across all three, so roadmaps become shippable and security stays
            built-in.
          </p>
          <div class="flex flex-wrap gap-3">
            <ModernButton
              href={withBasePath('services/')}
              variant="primary"
              className="min-h-[48px]"
            >
              Explore all capabilities
            </ModernButton>
            <ModernButton
              href={withBasePath('contact-hq/')}
              variant="secondary"
              className="min-h-[48px]"
            >
              Compare delivery plans
            </ModernButton>
          </div>
        </div>

        <div class="grid gap-4 sm:grid-cols-2">
          <ModernCard
            variant="minimal"
            className="border-white/10 bg-zinc-950/60 p-5"
          >
            <p class="text-sm font-semibold text-white">
              Architecture-led delivery
            </p>
            <p class="mt-2 text-sm text-zinc-300">
              Principal engineers define system constraints before build starts.
            </p>
          </ModernCard>
          <ModernCard
            variant="minimal"
            className="border-white/10 bg-zinc-950/60 p-5"
          >
            <p class="text-sm font-semibold text-white">Security by default</p>
            <p class="mt-2 text-sm text-zinc-300">
              Identity, endpoint, and cloud controls are integrated from day
              one.
            </p>
          </ModernCard>
          <ModernCard
            variant="minimal"
            className="border-white/10 bg-zinc-950/60 p-5"
          >
            <p class="text-sm font-semibold text-white">
              Product + platform alignment
            </p>
            <p class="mt-2 text-sm text-zinc-300">
              Application teams and ops teams move on a shared release cadence.
            </p>
          </ModernCard>
          <ModernCard
            variant="minimal"
            className="border-white/10 bg-zinc-950/60 p-5"
          >
            <p class="text-sm font-semibold text-white">
              Measurable operating rhythm
            </p>
            <p class="mt-2 text-sm text-zinc-300">
              Monthly health reviews and quarterly optimization planning.
            </p>
          </ModernCard>
        </div>
      </div>
    </section>
  </main>
</Layout>

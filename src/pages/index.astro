---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import HeroExplorerLazy from '../components/react/HeroExplorerLazy.tsx';
import { withBasePath } from '../utils/helpers';

const title = 'Immersive Portal';
const description =
  'A dedicated, fullscreen 3D landing experience. Enter the site when you are ready.';
const enterHref = withBasePath('home/');
const immersiveHref = withBasePath('immersive/');
---

<MarketingLayout
  title={title}
  description={description}
  bodyClass="bg-[#040712] overflow-x-hidden"
  mainClass="p-0"
  showHeader={false}
  showFooter={false}
  showStickyCTA={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <div class="scene-shell" aria-label="Immersive portal landing">
    <HeroExplorerLazy client:load />

    <div class="scene-ui" aria-label="Landing controls">
      <div class="scene-ui-inner">
        <div class="scene-ui-title">Immersive Portal</div>
        <div class="scene-ui-actions">
          <ModernButton href={enterHref} variant="primary" rounded="sm">
            Enter site
          </ModernButton>
          <ModernButton href={immersiveHref} variant="secondary" rounded="sm">
            Immersive lab
          </ModernButton>
        </div>
      </div>
    </div>
  </div>

  <style>
    .scene-shell {
      position: relative;
      min-height: 100vh;
      background: #040712;
    }

    .scene-ui {
      position: fixed;
      left: max(16px, env(safe-area-inset-left));
      right: max(16px, env(safe-area-inset-right));
      bottom: max(16px, env(safe-area-inset-bottom));
      z-index: 50;
      pointer-events: none;
    }

    .scene-ui-inner {
      pointer-events: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 14px;
      padding: 12px 12px;
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(4, 7, 18, 0.68);
      backdrop-filter: blur(16px);
      box-shadow: 0 18px 70px rgba(0, 0, 0, 0.55);
    }

    .scene-ui-title {
      font-size: 12px;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      color: rgba(226, 232, 240, 0.78);
      white-space: nowrap;
    }

    .scene-ui-actions {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: flex-end;
      gap: 10px;
    }
  </style>
</MarketingLayout>

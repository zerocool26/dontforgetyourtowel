---
import Layout from '../layouts/MarketingLayout.astro';
import HeroSection from '../components/landing/HeroSection.astro';
import ControlStackSection from '../components/landing/ControlStackSection.astro';
import InsightSection from '../components/landing/InsightSection.astro';
import PlaybookSection from '../components/landing/PlaybookSection.astro';
import EngagementSection from '../components/landing/EngagementSection.astro';
import TestimonialsSection from '../components/landing/TestimonialsSection.astro';
import DemoCtaSection from '../components/landing/DemoCtaSection.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Olive Chicago — Managed IT, Security, Cloud"
  description="Proactive MSP coverage: monitoring, security, cloud, and helpdesk — with a cinematic 3D front door."
>
  <main class="overflow-x-hidden">
    <HeroSection
      badge="MSP • Security • Cloud • AI"
      headline="Secure, modern IT — without the firefights."
      subheading="Proactive monitoring, hardened identities and endpoints, cloud modernization, and a responsive helpdesk — delivered like a long-term partner, not a ticket queue."
    />

    <div class="space-y-24 py-24">
      <ControlStackSection />
      <InsightSection />
      <PlaybookSection />
      <EngagementSection />
      <TestimonialsSection />
      <DemoCtaSection />

      <div id="consultation" class="border-t border-white/5 pt-20">
        <ContactForm
          title="Free consultation"
          subtitle="Tell us what you’re building and what constraints you’re under — we’ll reply with a practical next step."
          showContactInfo={false}
        />
      </div>
    </div>
  </main>
  <Footer />
</Layout>

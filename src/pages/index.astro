---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import StructuredData from '../components/StructuredData.astro';
import ImmersiveHome from '../components/immersive/ImmersiveHome.astro';

const headline = 'Next‑gen digital ops, engineered for motion and intelligence';
const subheading =
  'Ultra‑premium 3D hero systems • Intelligent demos • Performance‑safe innovation';
---

<MarketingLayout
  title={headline}
  description={subheading}
  bodyClass="bg-zinc-950 overflow-x-hidden"
  mainClass="p-0"
  showFooter={false}
  showStickyCTA={false}
  showHeader={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <StructuredData type="organization" />
  <section class="relative min-h-screen bg-zinc-950">
    <ImmersiveHome />
  </section>
</MarketingLayout>

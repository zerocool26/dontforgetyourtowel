---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import ModernCard from '../components/ui/ModernCard.astro';
import ModernButton from '../components/ui/ModernButton.astro';
import { withBasePath } from '../utils/helpers';
import { CONTACT_EMAIL } from '../consts';

const contactChannels = [
  {
    title: 'New Project / Sales',
    note: 'Scope alignment, proposals, and phased delivery planning.',
    email: CONTACT_EMAIL,
    subject: 'New project inquiry',
  },
  {
    title: 'Managed Services Support',
    note: 'Operational support, escalations, and service continuity.',
    email: CONTACT_EMAIL,
    subject: 'Managed services support request',
  },
  {
    title: 'Security Advisory',
    note: 'Risk assessments, governance, and response planning.',
    email: CONTACT_EMAIL,
    subject: 'Security advisory request',
  },
  {
    title: 'Partnerships',
    note: 'Strategic alliances, implementation partnerships, and co-delivery.',
    email: CONTACT_EMAIL,
    subject: 'Partnership inquiry',
  },
];

const intakeChecklist = [
  'Business goals and required outcomes',
  'Current environment (users/devices/cloud footprint)',
  'Security/compliance constraints (if any)',
  'Preferred timeline and decision milestones',
  'Known blockers or urgent risks',
];

const engagementSteps = [
  {
    phase: '01 • Discovery',
    detail:
      'We review goals, constraints, architecture context, and urgency to align scope.',
  },
  {
    phase: '02 • Solution Design',
    detail:
      'We map the operating model, milestones, and recommended delivery path.',
  },
  {
    phase: '03 • Proposal & Plan',
    detail:
      'You receive a right-sized engagement proposal with clear execution checkpoints.',
  },
  {
    phase: '04 • Kickoff',
    detail:
      'On approval, we begin onboarding, owner alignment, and implementation sequencing.',
  },
];

const faqs = [
  {
    q: 'How quickly do you respond?',
    a: 'Initial responses are typically same-business-day. Critical operational escalations are prioritized.',
  },
  {
    q: 'Do you support co-managed engagements?',
    a: 'Yes. We frequently work alongside internal teams and provide specialist coverage where needed.',
  },
  {
    q: 'Can we start with a small scope?',
    a: 'Yes. Many clients begin with a focused discovery or hardening sprint and scale into managed coverage.',
  },
  {
    q: 'Do you provide fixed-price and recurring options?',
    a: 'Yes. Engagement format depends on your delivery model, operating cadence, and risk profile.',
  },
];
---

<MarketingLayout
  title="Contact | Olive Global Systems"
  description="Start a project, request support, or speak with our team about security, cloud, and managed operations."
>
  <section
    class="relative overflow-hidden bg-zinc-950 text-zinc-50"
    data-reveal
  >
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(0,102,255,0.16),_transparent_55%)]"
    >
    </div>
    <div class="relative mx-auto max-w-[1220px] px-6 pb-16 pt-28">
      <div class="max-w-3xl space-y-6">
        <p class="pro-kicker">Contact HQ</p>
        <h1 class="text-4xl font-bold text-white sm:text-5xl">
          Let’s scope your next initiative—
          <span class="text-accent-300">with speed and clarity.</span>
        </h1>
        <p class="pro-copy text-base">
          Use this page as your primary intake hub for project planning, managed
          operations support, security advisory, or partnership conversations.
        </p>
        <div class="flex flex-col gap-3 sm:flex-row">
          <ModernButton
            href={`mailto:${encodeURIComponent(CONTACT_EMAIL)}?subject=${encodeURIComponent('New project inquiry')}`}
            variant="primary"
            className="min-h-[48px]"
          >
            Start a project
          </ModernButton>
          <ModernButton
            href={withBasePath('services/')}
            variant="secondary"
            className="min-h-[48px]"
          >
            Review services
          </ModernButton>
        </div>
      </div>

      <ModernCard
        variant="minimal"
        className="mt-10 border-white/10 bg-white/5 p-6"
      >
        <p class="text-sm text-zinc-300">
          <span class="font-semibold text-white">Best results:</span> include your
          current stack, desired outcomes, and timeline in your first email.
        </p>
      </ModernCard>
    </div>
  </section>

  <section
    class="sticky top-16 z-20 border-y border-white/5 bg-zinc-950/85 backdrop-blur"
    data-reveal
  >
    <div class="mx-auto max-w-[1220px] px-6 py-4 sm:py-5">
      <div class="flex flex-wrap items-center gap-2">
        <p class="mr-2 text-xs uppercase tracking-[0.28em] text-zinc-500">
          Navigator
        </p>
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#channels">Channels</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#intake">Intake Checklist</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#engagement">Engagement Model</a
        >
        <a
          class="rounded-full border border-white/10 bg-white/5 px-3 py-1.5 text-xs text-zinc-300 transition hover:-translate-y-0.5 hover:border-white/20 hover:text-white"
          href="#faq">FAQ</a
        >
      </div>
    </div>
  </section>

  <section
    id="channels"
    class="scroll-mt-32 border-y border-white/5 bg-zinc-900/30"
    data-reveal
  >
    <div class="mx-auto max-w-[1220px] px-6 py-16">
      <div class="max-w-3xl space-y-3">
        <h2 class="text-3xl font-semibold text-white">
          Choose the right channel
        </h2>
        <p class="text-sm text-zinc-300">
          Route your request to the correct path so we can respond with the
          right context quickly.
        </p>
      </div>

      <div class="mt-10 grid gap-5 md:grid-cols-2 lg:grid-cols-4">
        {
          contactChannels.map(channel => (
            <ModernCard
              variant="minimal"
              className="border-white/10 bg-zinc-950/60 p-6"
            >
              <p class="text-sm font-semibold text-white">{channel.title}</p>
              <p class="mt-3 text-sm text-zinc-300">{channel.note}</p>
              <a
                class="mt-5 inline-flex text-sm font-semibold text-accent-300 hover:underline"
                href={`mailto:${encodeURIComponent(channel.email)}?subject=${encodeURIComponent(channel.subject)}`}
              >
                Email this channel
              </a>
            </ModernCard>
          ))
        }
      </div>
    </div>
  </section>

  <section id="intake" class="scroll-mt-32 bg-zinc-950" data-reveal>
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-start">
        <div class="space-y-4">
          <h2 class="text-3xl font-semibold text-white">
            What to include in your first message
          </h2>
          <p class="text-sm text-zinc-300">
            A complete intake note accelerates discovery and produces a sharper
            first recommendation.
          </p>
        </div>

        <ModernCard
          variant="minimal"
          className="border-white/10 bg-zinc-950/60 p-6"
        >
          <ul class="space-y-3 text-sm text-zinc-300">
            {
              intakeChecklist.map(item => (
                <li class="flex items-start gap-2">
                  <span class="mt-2 h-1.5 w-1.5 flex-shrink-0 bg-accent-500" />
                  <span>{item}</span>
                </li>
              ))
            }
          </ul>
        </ModernCard>
      </div>
    </div>
  </section>

  <section
    id="engagement"
    class="scroll-mt-32 border-y border-white/5 bg-zinc-900/30"
    data-reveal
  >
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="max-w-3xl space-y-3">
        <h2 class="text-3xl font-semibold text-white">How engagement starts</h2>
        <p class="text-sm text-zinc-300">
          We keep project kickoff disciplined and transparent from first contact
          to execution.
        </p>
      </div>

      <div class="mt-10 grid gap-5 md:grid-cols-2 lg:grid-cols-4">
        {
          engagementSteps.map(step => (
            <ModernCard
              variant="minimal"
              className="border-white/10 bg-zinc-950/60 p-6"
            >
              <p class="text-xs uppercase tracking-[0.24em] text-zinc-500">
                {step.phase}
              </p>
              <p class="mt-3 text-sm text-zinc-300">{step.detail}</p>
            </ModernCard>
          ))
        }
      </div>
    </div>
  </section>

  <section class="bg-zinc-950" id="faq" data-reveal>
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="max-w-3xl space-y-4">
        <h2 class="text-3xl font-semibold text-white">FAQs</h2>
        <p class="text-sm text-zinc-300">
          Common questions before kickoff and onboarding.
        </p>
      </div>

      <div class="mt-10 grid gap-4">
        {
          faqs.map(item => (
            <details class="rounded-2xl border border-white/10 bg-white/5 p-6">
              <summary class="cursor-pointer select-none text-sm font-semibold text-white">
                {item.q}
              </summary>
              <p class="mt-3 text-sm leading-relaxed text-zinc-300">{item.a}</p>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  <section class="border-t border-white/5 bg-zinc-900/30" data-reveal>
    <div class="mx-auto max-w-[1220px] px-6 py-20">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-8">
        <div
          class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between"
        >
          <div class="max-w-2xl">
            <h2 class="text-2xl font-semibold text-white">Primary contact</h2>
            <p class="mt-3 text-sm text-zinc-300">
              Send your intake summary and we’ll respond with a recommended next
              step and engagement path.
            </p>
            <p class="mt-3 text-sm text-zinc-300">
              <a
                class="text-accent-300 hover:underline"
                href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a
              >
            </p>
          </div>
          <div class="flex flex-col gap-3 sm:flex-row">
            <ModernButton
              href={`mailto:${encodeURIComponent(CONTACT_EMAIL)}?subject=${encodeURIComponent('New project inquiry')}`}
              variant="primary"
              className="min-h-[48px]"
            >
              Email now
            </ModernButton>
          </div>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
